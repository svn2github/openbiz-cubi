<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="MilestoneNewForm" Class="EasyForm" FormType="New" jsClass="jbForm" Title="Create a new milestone" Description="" BizDataObj="trac.milestone.do.MilestoneDO" TemplateEngine="Smarty" TemplateFile="detail.tpl" EventName="" MessageFile="">
    <DataPanel>
    	<Element Name="fld_name" DefaultValue="Create a new milestone" Class="InputText" FieldName="name" Label="Name"/> 
		<Element Name="fld_due" Class="InputDate" DateFormat="%m/%d/%Y" FieldName="due" Label="Due" CssClass="input_text" CssErrorClass="input_text_error" CssFocusClass="input_text_focus"/>
   		<Element Name="fld_completed" Class="InputDate" DateFormat="%m/%d/%Y" FieldName="completed" Label="Completed" CssClass="input_text" CssErrorClass="input_text_error" CssFocusClass="input_text_focus"/>
   		<Element Name="fld_description" Class="Textarea" FieldName="description" Label="Description" AllowURLParam="N" Translatable="N" OnEventLog="N"  />            
    </DataPanel>
    <ActionPanel>
        <Element Name="btn_save" Class="Button" Text="Save" CssClass="button_gray_m">
            <EventHandler Name="save_onclick" EventLogMsg="" Event="onclick" Function="InsertRecord()" RedirectPage="form=trac.milestone.form.MilestoneDetailForm&amp;fld:Id={@trac.milestone.do.MilestoneDO:Field[Id].Value}"  ShortcutKey="Ctrl+Enter" ContextMenu="Save" />
        </Element>
        <Element Name="btn_cancel" Class="Button" Text="Cancel" CssClass="button_gray_m">
            <EventHandler Name="cancel_onclick" Event="onclick" Function="SwitchForm(trac.milestone.form.MilestoneListForm)"  ShortcutKey="Escape" ContextMenu="Cancel"/>
        </Element>
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>
