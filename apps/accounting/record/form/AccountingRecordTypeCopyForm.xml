<EasyForm Name="AccountingRecordTypeCopyForm" 
			Class="EasyForm"			  
			FormType="Copy" 
			jsClass="Openbiz.Form" 
			Icon="{RESOURCE_URL}/accounting/images/icon_mod_accounting_record_type_copy.png"
			Title="Copy Account records Type" 
			Description="Copy data type from an existing item."
			BizDataObj="accounting.record.do.AccountingRecordTypeDO" 
			PageSize="10" 
			DefaultForm="Y" 
			TemplateEngine="Smarty" 
			TemplateFile="form_edit.tpl.html" 
			EventName="AccountingRecord" 
			MessageFile="AccountingRecord.ini" 
			Access="accounting.Manage">				
    <DataPanel>

        <Element Name="fld_Id" 
        		ElementSet="General" 
        		Class="Hidden" 
        		FieldName="Id" 
        		Label="Id" 
        		AllowURLParam="Y"/>	
	    <Element Name="fld_name" 
	    		ElementSet="General" 
	    		Class="InputText" 
	    		FieldName="name" 
	    		Label="Name"   />	
        <Element Name="fld_description" 
        		ElementSet="General" 
        		Class="Textarea" 
        		FieldName="description" 
        		Label="Description" />	
        <Element Name="fld_color_code" 
        		ElementSet="General" 
        		Class="ColorPicker" 
        		Mode="" 
        		FieldName="color" 
        		Label="Color Code"  
        		AllowURLParam="N" />
        
        <Element Name="fld_sortorder" 
        		ElementSet="Miscellaneous" 
        		Class="Listbox" 
        		SelectFrom="common.lov.CommLOV(Order)" 
        		DefaultValue="50" 
        		FieldName="sortorder" 
        		Label="Ordering"  />

    </DataPanel>
    <ActionPanel>
        <Element Name="btn_save" 
        		Class="Button" 
        		Text="Save" 
        		CssClass="button_gray_m">
            <EventHandler Name="save_onclick" 
            			EventLogMsg="" 
            			Event="onclick" 
            			Function="InsertRecord()" 
            			RedirectPage="form=accounting.record.form.AccountingRecordTypeDetailForm&amp;fld:Id={@accounting.record.do.AccountingRecordTypeDO:Field[Id].Value}"  
            			ShortcutKey="Ctrl+Enter" 
            			ContextMenu="Save" />
        </Element>
        <Element Name="btn_cancel" 
        		Class="Button" 
        		Text="Cancel" 
        		CssClass="button_gray_m">
            <EventHandler Name="cancel_onclick" 
            			Event="onclick" 
            			Function="SwitchForm()"  
            			ShortcutKey="Escape" 
            			ContextMenu="Cancel"/>
        </Element>
    </ActionPanel> 
    <NavPanel/>    
    <SearchPanel/>    
</EasyForm>