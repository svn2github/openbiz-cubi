<EasyForm Name="AccountingRecordDetailForm" Class="EasyForm" FormType="Detail" jsClass="Openbiz.Form" Icon="{RESOURCE_URL}/accounting/images/icon_mod_accounting_record_detail.png" Title="Account records Detail" Description="Accounting Record Description" BizDataObj="accounting.record.do.AccountingRecordDO" TemplateEngine="Smarty" TemplateFile="form_detail_adv.tpl.html" MessageFile="AccountingRecord.ini" Access="accounting.Access">
  <DataPanel>
    <Element Name="fld_account_book" Hidden="{@:Elem[fld_account_book].Value?'N':'Y'}" ElementSet="General" Class="LabelText" Label="Account Book" FieldName="account_book_name"/>
    <Element Name="fld_form_title" Class="LabelText" FieldName="name" Label="" Width="500" style="font-size:24px;color:#333333;line-height:24px;" AllowURLParam="N"/>
    <Element Name="fld_color" Class="Hidden" Hidden="Y" FieldName="type_color" Label="Type" Sortable="Y" AllowURLParam="N" Translatable="N" OnEventLog="N"/>
    <Element Name="fld_form_description" BackgroundColor="{@:Elem[fld_color].Value}" Width="648" Class="LabelText" FieldName="type_name" Label="" KeepCookie="Y" SelectFrom="accounting.record.do.AccountingRecordTypeDO[name:Id:color]" AllowURLParam="N"/>
    <Element Name="fld_Id" Class="LabelText" ElementSet="General" Hidden="Y" FieldName="Id" Label="Id" AllowURLParam="Y"/>
    <Element Name="fld_type_id" Class="LabelText" ElementSet="General" Hidden="Y" FieldName="type_id" Label="Type" AllowURLParam="N"/>
    <Element Name="fld_name" ElementSet="General" Class="LabelText" FieldName="name" Label="Name" AllowURLParam="N"/>
    <Element Name="fld_description" ElementSet="General" Class="LabelTextarea" FieldName="description" Label="Description" AllowURLParam="N"/>
    <Element Name="fld_credit" ElementSet="Transcation" Class="LabelText" FieldName="credit" Label="Credit" AllowURLParam="N"/>
    <Element Name="fld_debit" ElementSet="Transcation" Class="LabelText" FieldName="debit" Label="Debit" AllowURLParam="N"/>
    <Element Name="fld_trans_id" ElementSet="Transcation" Class="LabelText" FieldName="trans_id" Label="Unique ID" AllowURLParam="N"/>
    <Element Name="fld_trans_date" ElementSet="Transcation" Class="LabelText" FieldName="trans_date" Label="Date" AllowURLParam="N"/>
    <Element Name="fld_trans_type" ElementSet="Transcation" Class="LabelText" FieldName="trans_type" Label="Type" AllowURLParam="N"/>
    <Element Name="fld_trans_proof" ElementSet="Transcation" Class="LabelText" FieldName="trans_proof" Label="Proof" AllowURLParam="N"/>
    <Element Name="fld_related_picture" TabSet="Extra Information" Access="picture.access" ElementSet="Picture" Class="FormElement" FormReference="picture.widget.PictureListDetailForm" FieldName="" Label="" AllowURLParam="N"/>
    <Element Name="btn_manage_picture" TabSet="Extra Information" Access="picture.access" Hidden="{@:m_CanUpdateRecord=='1'?'N':'Y'}" ElementSet="Picture" Style="color:#666666;margin-left:5px;margin-top:2px;" Class="Button" Text="Manage" CssClass="button_gray_w" Description="">
      <EventHandler Name="btn_manage_picture_onclick" Event="onclick" Function="SwitchForm(accounting.record.form.AccountingRecordEditPictureForm,{@:Elem[fld_Id].Value})"/>
    </Element>
    <Element Name="fld_changelog" TabSet="Extra Information" Access="changelog.access" ElementSet="Change Log" Class="FormElement" FormReference="changelog.widget.ChangeLogWidgetForm" FieldName="" Label="" AllowURLParam="N"/>
    <Element Name="fld_update_by" Class="LabelText" ElementSet="Miscellaneous" FieldName="update_by" Label="Update By" Text="{BizSystem::GetProfileName(@:Elem[fld_update_by].Value)}" AllowURLParam="N"/>
    <Element Name="fld_update_time" Class="LabelText" ElementSet="Miscellaneous" FieldName="update_time" Label="Update Time" AllowURLParam="N"/>
    <Element Name="fld_create_by" Class="LabelText" ElementSet="Miscellaneous" FieldName="create_by" Label="Create By" Text="{BizSystem::GetProfileName(@:Elem[fld_create_by].Value)}" AllowURLParam="N"/>
    <Element Name="fld_create_time" Class="LabelText" ElementSet="Miscellaneous" FieldName="create_time" Label="Create Time" AllowURLParam="N"/>
  </DataPanel>
  <ActionPanel>
    <Element Name="btn_new" Class="Button" Text="Add" CssClass="button_gray_add" Description="New record (Insert)">
      <EventHandler Name="btn_new_onclick" Event="onclick" Function="SwitchForm(accounting.record.form.AccountingRecordNewForm)" ShortcutKey="Insert" ContextMenu="New"/>
    </Element>
    <Element Name="btn_edit" Class="Button" Text="Edit" CssClass="button_gray_m" Description="Edit record (Ctrl+E)">
      <EventHandler Name="btn_new_onclick" Event="onclick" Function="SwitchForm(accounting.record.form.AccountingRecordEditForm,{@:Elem[fld_Id].Value})" ShortcutKey="Ctrl+E" ContextMenu="Edit"/>
    </Element>
    <Element Name="btn_copy" Class="Button" Text="Copy" CssClass="button_gray_m" Description="Copy record (Ctrl+C)">
      <EventHandler Name="onclick" Event="onclick" EventLogMsg="" Function="CopyRecord({@:Elem[fld_Id].Value})" RedirectPage="form=accounting.record.form.AccountingRecordCopyForm&amp;fld:Id={@:Elem[fld_Id].Value}" ShortcutKey="Ctrl+C" ContextMenu="Copy"/>
    </Element>
    <Element Name="btn_delete" Class="Button" Text="Delete" CssClass="button_gray_m" Description="Delete record (Delete)">
      <EventHandler Name="del_onclick" Event="onclick" EventLogMsg="" Function="DeleteRecord({@:Elem[fld_Id].Value})" RedirectPage="{APP_INDEX}/accounting/accounting_record_manage" ShortcutKey="Ctrl+Delete" ContextMenu="Delete"/>
    </Element>
    <Element Name="btn_cancel" Class="LabelBack" Text="Back" CssClass="button_gray_m" Link="accounting/accounting_record_manage"/>
  </ActionPanel>
  <NavPanel>
    </NavPanel>
  <SearchPanel>
    </SearchPanel>
</EasyForm>
