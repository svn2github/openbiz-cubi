<EasyForm Name="AccountingGlobalDetailWidgetForm" Class="AccountingGlobalDetailWidgetForm" FormType="Detail" jsClass="Openbiz.Form" Icon="" Title="Global Account Summary"  BizDataObj="accounting.book.do.AccountingGlobalDO" TemplateEngine="Smarty" TemplateFile="widget_account_summary_detail.tpl.html" MessageFile="AccountingBook.ini" Access="accounting.Superview">
  <DataPanel>
    <Element Name="fld_table_title" Class="LabelText" FieldName="" Label="Summary" Text="Account Summary Information" Width="500" style="" AllowURLParam="N"/>
	<Element Name="fld_credit" 
        			Text="{@:Elem[fld_credit].Value?'-':''} {@:Elem[fld_credit].Value?BizSystem::getObject('service.currencyService')->getFormatCurrency(@:Elem[fld_credit].Value):'-- N/A --'}"        			
        			Class="LabelText" 
        			ElementSet="General"
        			FieldName="total_credit" 
        			Label="Total Credit" 
        			Sortable="Y"
        			Style="{@:Elem[fld_credit].Value?'color:#ff0000':'color:#AAAAAA'}"
        			 />    
        
        <Element Name="fld_debit" 
        			Text="{@:Elem[fld_debit].Value?'+':''}  {@:Elem[fld_debit].Value?BizSystem::getObject('service.currencyService')->getFormatCurrency(@:Elem[fld_debit].Value):'-- N/A --'}"
        			Class="LabelText" 
        			ElementSet="General"
        			FieldName="total_debit" 
        			Label="Total Debit" 
        			Sortable="Y"
        			Style="{@:Elem[fld_debit].Value?'color:#00AA00':'color:#AAAAAA'}"
        			 />    
        			 
		<Element Name="fld_balance" 
					Text="{@:Elem[fld_balance].Value &lt; 0?'-':''} {@:Elem[fld_balance].Value &gt; 0?'+':''} {BizSystem::getObject('service.currencyService')->getFormatCurrency(@:Elem[fld_balance].Value)}"
					Style="text-decoration:underline;{@:Elem[fld_balance].Value &lt; 0?'color:#ff0000':'color:#006600'}"
        			Class="LabelText" 
        			ElementSet="General"
        			FieldName="total_balance" 
        			Label="Balance" 
        			Sortable="Y"
        			 />        
  </DataPanel>
  <ActionPanel>
    </ActionPanel>
  <NavPanel>
    </NavPanel>
  <SearchPanel>
    </SearchPanel>
</EasyForm>
