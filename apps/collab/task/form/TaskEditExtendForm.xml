<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="TaskEditExtendForm" Class="TaskForm" FormType="Edit" jsClass="jbForm" Icon="{RESOURCE_URL}/collab/task/images/icon_task_gantt.gif" Title="Edit Task Extend Fields" Description="Here you can edit extend fields for selected type of task" BizDataObj="collab.task.do.TaskDO" DefaultForm="Y" TemplateEngine="Smarty" TemplateFile="form_task_edit_extend.tpl.html" EventName="TASK" MessageFile="Task.msg" Access="collab_task.access">
    <DataPanel>
		<Element Name="fld_Id" Hidden="Y" Class="LabelText" FieldName="Id" Label="Id" AllowURLParam="Y"/>
		<Element Name="fld_form_title"  Class="common.element.ColumnTitle"   FieldName="title" Label="" Width="500" style="font-size:24px;color:#333333;line-height:24px;" AllowURLParam="N" />
				    <Element Name="fld_color" Class="Hidden" Hidden="Y" FieldName="type_color" Label="Type"  Sortable="Y" AllowURLParam="N" Translatable="N" OnEventLog="N" />
		<Element Name="fld_form_description"  BackgroundColor="{@:Elem[fld_color].Value}" Width="648" Class="LabelText" FieldName="type_name" Label="" KeepCookie="Y" SelectFrom="collab.task.do.TaskTypeDO[name:Id:color]" AllowURLParam="N" />		
					    
            	        		
		<Element Name="fld_status" ElementSet="General" Class="LabelList" FieldName="status" Label="Status" SelectFrom="collab.task.lov.TaskLOV(TaskStatus)" AllowURLParam="N" />
		
		<Element Name="fld_total_progress" ElementSet="General" Class="LabelBar" Width="300" height="14"  DisplayUnit="%" MaxValue="100" FieldName="progress" Label="Progress" SelectFrom="collab.task.lov.TaskLOV(Progress)" AllowURLParam="N" />
		<Element Name="fld_time_progress" Color="ff6600" ElementSet="General"  Class="LabelBar" Width="300" height="14"  DisplayUnit="%" MaxValue="100" FieldName="time_bar" Label="Time"  AllowURLParam="N" />		
		<Element Name="fld_spend_progress" Color="ffAA00" ElementSet="General" Class="LabelBar" Width="300" height="14"  DisplayUnit="%" MaxValue="100" FieldName="cost_spend_bar" Label="Expenses"  AllowURLParam="N" />
		
		
		<Element Name="fld_priority" Class="LabelImage" Text="{RESOURCE_URL}/collab/task/images/icon_task_status_{@:Elem[fld_priority].Value}.png" FieldName="priority" Sortable="Y" Label="Priority" Link="javascript:;">
			<EventHandler Name="fld_dallday_onclick" Event="onclick" Function="UpdateFieldValueAdd({@:Elem[fld_Id].Value},fld_priority,{@:Elem[fld_priority].Value},0,2)"/>		
		</Element>
		
        <Element Name="fld_severity" Class="LabelImage" Text="{RESOURCE_URL}/collab/task/images/icon_task_severity_{@:Elem[fld_severity].Value}.gif" FieldName="severity" Sortable="Y" Label="Severity" Link="javascript:;">
			<EventHandler Name="fld_severity_onclick" Event="onclick" Function="UpdateFieldValueAdd({@:Elem[fld_Id].Value},fld_severity,{@:Elem[fld_severity].Value},1,4)"/>		
		</Element>
		
		 <Element Name="fld_milestone" Class="LabelBool" ElementSet="General" TrueImg="{RESOURCE_URL}/collab/task/images/icon_task_milestone_enable.gif"  FalseImg="{RESOURCE_URL}/collab/task/images/icon_task_milestone_disable.gif" FieldName="milestone" Sortable="Y" Label="Milestone" Link="javascript:;">
			<EventHandler Name="fld_dallday_onclick" Event="onclick" Function="UpdateFieldValueXor({@:Elem[fld_Id].Value},fld_milestone,{@:Elem[fld_milestone].Value})"/>		
		</Element>
		<Element Name="fld_parent" ElementSet="General" Class="LabelList" BlankOption="none" FieldName="parent_task_id" Label="Parent Task" SelectFrom="collab.task.do.TaskListDO[title:Id]" AllowURLParam="N" />
		
		<Element Name="fld_dependency" ElementSet="General" Class="LabelList" BlankOption="none" FieldName="dependency_task_id" Label="Dependency" SelectFrom="collab.task.do.TaskListDO[title:Id]" AllowURLParam="N" />
		
		<Element Name="fld_description" ElementSet="General" Class="LabelTextarea" FieldName="description" Label="Description"  AllowURLParam="N" />


		<Element Name="fld_type_id" ElementSet="Data Type" Class="collab.lib.TypeSelector" FieldName="type_id" Label="Type" KeepCookie="Y" SelectFrom="collab.task.do.TaskTypeDO[name:Id:color]" AllowURLParam="N" >
   			<EventHandler Name="fld_type_id_onchange" Event="onchange" Function="UpdateForm()" />
		</Element>
		<Element Name="fld_extend_fields"   ElementSet="Extend Fileds"  Class="FormElement" FormReference="extend.widget.ExtendDataEditForm" FieldName="extend" Label="" AllowURLParam="N" />

	    </DataPanel>
    <ActionPanel>  
        <Element Name="btn_finish" Class="Button" Text="Next Step" CssClass="button_gray_w">
            <EventHandler Name="finish_onclick" EventLogMsg="" Event="onclick" Function="UpdateRecord()" RedirectPage="{APP_INDEX}/collab/task_detail/{@collab.task.do.TaskDO:Field[Id].Value}"  ContextMenu="Quick Finish"   />
        </Element>
        <Element Name="btn_cancel" Class="Button" Text="Cancel" CssClass="button_gray_m">
            <EventHandler Name="btn_cancel_onclick" Event="onclick" Function="SwitchForm()"  ShortcutKey="Escape" ContextMenu="Cancel" />
        </Element>        
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>