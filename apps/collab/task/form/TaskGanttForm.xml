<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="TaskGanttForm" Class="GanttForm" FormType="List" jsClass="Openbiz.GanttForm" Icon="{RESOURCE_URL}/collab/task/images/icon_task_gantt.gif" Title="Task Gantt View" Description="This module could help you manage tasks." BizDataObj="collab.task.do.TaskGanttDO" PageSize="18" DefaultForm="Y" TemplateEngine="Smarty" TemplateFile="form_task_gantt.tpl.html" EventName="TASK" MessageFile="Task.msg" Access="collab_task.access">
    <DataPanel>
        
        <Element Name="row_selections" Class="RowCheckbox"  Label="" FieldName="Id"/>
        <Element Name="fld_Id" Class="Hidden" Hidden="Y" FieldName="Id" Label="Id" Sortable="Y" AllowURLParam="N" Link="javascript:" />
        <Element Name="fld_share" Class="ColumnShare" 
				MyPrivateImg="{RESOURCE_URL}/collab/task/images/icon_task_private.png"
				MySharedImg="{RESOURCE_URL}/collab/task/images/icon_task_shared.png" 
				MyAssignedImg="{RESOURCE_URL}/collab/task/images/icon_task_assigned.gif"
				MyDistributedImg="{RESOURCE_URL}/collab/task/images/icon_task_distributed.gif" 
				GroupSharedImg="{RESOURCE_URL}/collab/task/images/icon_task_shared_group.png"
				OtherSharedImg="{RESOURCE_URL}/collab/task/images/icon_task_shared_other.png"
				FieldName="create_by" Label="Share"  Sortable="Y" AllowURLParam="N" Translatable="N" OnEventLog="N" Link="javascript:;">
			<EventHandler Name="fld_share_onclick" Event="onclick" Function="LoadDialog(common.form.DataSharingForm,{@:Elem[fld_Id].Value})"/>		
		</Element>	

        <Element Name="fld_title" Class="ColumnText" FieldName="title" Label="Title"  Sortable="Y" AllowURLParam="N" Translatable="N" OnEventLog="N" Link="javascript:">         
         	<EventHandler Name="fld_Id_onclick" Event="onclick" Function="SwitchForm(collab.task.form.TaskDetailForm,{@:Elem[fld_Id].Value})"   />
        </Element>
               <Element Name="fld_status" Class="ColumnList" SelectFrom="collab.task.lov.TaskLOV(TaskStatus)" FieldName="status" Label="Status"  Sortable="Y" AllowURLParam="N" Translatable="N" OnEventLog="N" >         
        </Element>
        <Element Name="fld_progress" Class="ColumnBar" Width="120" Color="{@:Elem[fld_color].Value}" DisplayUnit="%" Style="width:160px" MaxValue="100" FieldName="progress" Label="Progress"  Sortable="Y" AllowURLParam="N" Translatable="N" OnEventLog="N" >         
        </Element>
		<Element Name="fld_reminder" Class="ColumnBool" TrueImg="{RESOURCE_URL}/collab/task/images/icon_reminder_enable.gif"  FalseImg="{RESOURCE_URL}/collab/task/images/icon_reminder_disable.gif" FieldName="reminder" Sortable="Y" Label="Rmd" Link="javascript:;">
			<EventHandler Name="fld_reminder_onclick" Event="onclick" Function="UpdateFieldValueXor({@:Elem[fld_Id].Value},fld_reminder,{@:Elem[fld_reminder].Value})"/>		
		</Element>
        <Element Name="fld_priority_value" Class="Hidden" Hidden="Y" FieldName="priority"  />
        <Element Name="fld_priority" Class="ColumnImage" Text="{RESOURCE_URL}/collab/task/images/icon_task_status_{@:Elem[fld_priority_value].Value}.png" FieldName="" Sortable="Y" Label="Pri" Link="javascript:;">
			<EventHandler Name="fld_dallday_onclick" Event="onclick" Function="UpdateFieldValueAdd({@:Elem[fld_Id].Value},fld_priority_value,{@:Elem[fld_priority_value].Value},0,2)"/>		
		</Element>
        <Element Name="fld_milestone" Class="ColumnBool" TrueImg="{RESOURCE_URL}/collab/task/images/icon_task_milestone_enable.gif"  FalseImg="{RESOURCE_URL}/collab/task/images/icon_task_milestone_disable.gif" FieldName="milestone" Sortable="Y" Label="Mst" Link="javascript:;">
			<EventHandler Name="fld_dallday_onclick" Event="onclick" Function="UpdateFieldValueXor({@:Elem[fld_Id].Value},fld_milestone,{@:Elem[fld_milestone].Value})"/>		
		</Element>
		<Element Name="fld_color" Class="ColumnStyle" FieldName="type_color" Label="Type"  Sortable="Y" AllowURLParam="N" Translatable="N" OnEventLog="N" />
		<Element Name="fld_type" Class="ColumnText"  Style="line-height:24px;" FieldName="type_name" Label="Type"  Sortable="Y" AllowURLParam="N" Translatable="N" OnEventLog="N" />						        
        <Element Name="fld_start_time" Class="ColumnText"  FieldName="start_time" Sortable="Y" Label="Start Time"></Element>
        <Element Name="fld_finish_time" Class="ColumnText"  FieldName="finish_time" Sortable="Y" Label="Finish Time"></Element>
        <Element Name="fld_total_workhour" Class="ColumnText"  FieldName="total_workhour" Sortable="Y" Label="Work Hours"></Element>
    </DataPanel>
       <ActionPanel>
        <Element Name="lnk_new" Class="Button" Text="Add" CssClass="button_gray_add" Description="new record (Insert)" >
            <EventHandler Name="lnk_new_onclick" Event="onclick" EventLogMsg="" Function="LoadDialog(collab.task.form.TaskQuickNewForm)"  ShortcutKey="Insert" ContextMenu="New"/>
        </Element>
        <Element Name="btn_spacer" Class="Spacer" Width="10"></Element>
        <Element Name="btn_update" Class="Button"   Text="Update" CssClass="button_gray_m" Description="update status (Ctrl+U)">
			<EventHandler Name="btn_update_onclick" Event="onclick" Function="EditRecord()" RedirectPage="form=collab.task.form.TaskUpdateStatusForm&amp;fld:Id={@:Elem[fld_Id].Value}"  ShortcutKey="Ctrl+U" ContextMenu="Update Status" />
        </Element>   
        
        <Element Name="btn_edit" Class="Button" Text="Edit" CssClass="button_gray_m" Description="edit record (Ctrl+E)">
            <EventHandler Name="btn_edit_onclick" Event="onclick" EventLogMsg="" Function="EditRecord()" RedirectPage="form=collab.task.form.TaskEditForm&amp;fld:Id={@:Elem[fld_Id].Value}" ShortcutKey="Ctrl+E" ContextMenu="Edit" />
        </Element>
        <Element Name="btn_detail" Class="Button"   Text="Detail" CssClass="button_gray_m" Description="record detail">
			<EventHandler Name="btn_detail_onclick" Event="onclick" Function="EditRecord()" RedirectPage="form=collab.task.form.TaskDetailForm&amp;fld:Id={@:Elem[fld_Id].Value}"    ContextMenu="Detail" />
        </Element>
        <Element Name="btn_spacer2" Class="Spacer" Width="10"></Element>
        <Element Name="btn_copy" Class="Button" Text="Copy" CssClass="button_gray_m" Description="copy record (Ctrl+C)" >
            <EventHandler Name="btn_copy_onclick" Event="onclick" EventLogMsg="" Function="CopyRecord()" RedirectPage="form=collab.task.form.TaskCopyForm&amp;fld:Id={@:Elem[fld_Id].Value}" ShortcutKey="Ctrl+C" ContextMenu="Copy"/>
        </Element>
                
        <Element Name="btn_delete" Class="Button" Text="Delete" CssClass="button_gray_m" >
            <EventHandler Name="del_onclick" Event="onclick" EventLogMsg="" Function="DeleteRecord()" ShortcutKey="Ctrl+Delete" ContextMenu="Delete"/>
        </Element>
       
        <Element Name="btn_excel" Class="Button" Text="Export" CssClass="button_gray_m">
            <EventHandler Name="exc_onclick" Event="onclick" EventLogMsg="" Function="CallService(excelService,renderCSV)" FunctionType="Popup" ShortcutKey="Ctrl+X" ContextMenu="Export"/>
        </Element>
        <Element Name="btn_spacer3" Class="Spacer" Width="10"></Element>
        <Element Name="btn_print" Class="Button" Text="Print" CssClass="button_gray_m">
            <EventHandler Name="print_onclick" Event="onclick" EventLogMsg="" Function="UpdateForm()" ShortcutKey="Ctrl+P" ContextMenu="Print"/>
        </Element>
        <!-- 
        <Element Name="fld_viewmode" Class="Listbox" DefaultValue="{@:m_ViewMode}" SelectFrom="collab.task.lov.GanttLOV(ViewMode)" Text="Print" style="margin-left:5px;" >
            <EventHandler Name="btn_viewmode_onclick" Event="onchange" EventLogMsg="" Function="switchMode()" />
        </Element>
         -->
        <Element Name="btn_render_gantt" Class="Hidden" Hidden="Y" Text="Print" CssClass="button_gray_m">
            <EventHandler Name="btn_render_gantt_onclick" Event="onclick" EventLogMsg="" Function="renderGantt()" />
        </Element>
        
        <Element Name="btn_update_time" Class="Hidden" Hidden="Y" Text="Print" CssClass="button_gray_m">
            <EventHandler Name="btn_update_time_onchange" Event="onchange" EventLogMsg="" Function="taskUpdateTime()" />
        </Element>
        <Element Name="btn_spacer4" Class="Spacer" Width="10"></Element>
         <!-- 
        <Element Name="btn_spacer" Class="Spacer" Width="10"></Element>
        <Element Name="btn_manage_worklog" ElementSet="Time" Class="Button" Text="Work Log" CssClass="button_gray_w" Description="">
			<EventHandler Name="btn_manage_worklog_onclick" Event="onclick" Function="SwitchForm(collab.task.form.TaskEditWorklogForm,{@:Elem[fld_Id].Value})"   />
        </Element>
        <Element Name="btn_manage_attachment" ElementSet="Attachment"  Class="Button" Text="Attachment" CssClass="button_gray_w" Description="">
			<EventHandler Name="btn_manage_attachment_onclick" Event="onclick" Function="SwitchForm(collab.task.form.TaskEditAttachmentForm,{@:Elem[fld_Id].Value})"   />
        </Element>
         -->
    </ActionPanel> 
    <NavPanel>
    	<Element Name="page_selector" Class="PageSelector" Text="{@:m_CurrentPage}" Label="Go to Page" CssClass="input_select" cssFocusClass="input_select_focus">
            <EventHandler Name="btn_page_selector_onchange" Event="onchange" Function="GotoSelectedPage(page_selector)"/>
        </Element>
        <Element Name="pagesize_selector" Class="PagesizeSelector" Text="{@:m_Range}" Label="Show Rows" CssClass="input_select" cssFocusClass="input_select_focus">
            <EventHandler Name="btn_pagesize_selector_onchange" Event="onchange" Function="SetPageSize(pagesize_selector)"/>
        </Element>    
        <Element Name="btn_first" Class="Button" Enabled="{(@:m_CurrentPage == 1)?'N':'Y'}" Text="" CssClass="button_gray_navi {(@:m_CurrentPage == 1)?'first_gray':'first'}">
            <EventHandler Name="first_onclick" Event="onclick" Function="GotoPage(1)"/>
        </Element>
        <Element Name="btn_prev" Class="Button" Enabled="{(@:m_CurrentPage == 1)?'N':'Y'}" Text="" CssClass="button_gray_navi {(@:m_CurrentPage == 1)?'prev_gray':'prev'}">
            <EventHandler Name="prev_onclick" Event="onclick" Function="GotoPage({@:m_CurrentPage - 1})" ShortcutKey="Ctrl+Shift+Left"/>
        </Element>
        <Element Name="txt_page" Class="LabelText" Text="{'@:m_CurrentPage of @:m_TotalPages '}">
        </Element>
        <Element Name="btn_next" Class="Button" Enabled="{(@:m_CurrentPage == @:m_TotalPages )?'N':'Y'}" Text="" CssClass="button_gray_navi {(@:m_CurrentPage == @:m_TotalPages)?'next_gray':'next'}">
            <EventHandler Name="next_onclick" Event="onclick" Function="GotoPage({@:m_CurrentPage + 1})" ShortcutKey="Ctrl+Shift+Right"/>
        </Element>
        <Element Name="btn_last" Class="Button" Enabled="{(@:m_CurrentPage == @:m_TotalPages )?'N':'Y'}" Text="" CssClass="button_gray_navi {(@:m_CurrentPage == @:m_TotalPages)?'last_gray':'last'}">
            <EventHandler Name="last_onclick" Event="onclick" Function="GotoPage({@:m_TotalPages})"/>
        </Element>
    </NavPanel> 
    <SearchPanel>
    	<Element Name="data_filter"  BlankOption="All Data" cssclass="input_select_m" Class="common.element.ShareDataFilter" FieldName="create_by" Label="" SelectFrom="common.lov.DataSharingLOV(DataFilter)" >
            <EventHandler Name="datafilter_onchange" Event="onchange" Function="RunSearch()"/>
        </Element>
        <Element Name="status_selector" cssclass="input_select_m" BlankOption="All Status" Class="collab.lib.DataStatusFilter" FieldName="status" Label="" SelectFrom="collab.task.lov.TaskLOV(TaskStatus)" >
            <EventHandler Name="status_selector_onchange" Event="onchange" Function="RunSearch()"/>
        </Element> 
        <Element Name="pri_selector" cssclass="input_select_m" BlankOption="All Priority" Class="DropDownList" FieldName="priority" Label="" SelectFrom="collab.task.lov.TaskLOV(Priority)" >
            <EventHandler Name="pri_selector_onchange" Event="onchange" Function="RunSearch()"/>
        </Element> 
    	<Element Name="type_selector" cssclass="input_select_m" BlankOption="All Types" Class="collab.lib.TypeSelector" FieldName="type_id" Label="" SelectFrom="collab.task.do.TaskTypeDO[name:Id:color]" >
            <EventHandler Name="type_selector_onchange" Event="onchange" Function="RunSearch()"/>
        </Element> 
        <Element Name="btn_spacer3" Class="Spacer" Width="10"></Element>
        <Element Name="qry_name"  Class="AutoSuggest" FuzzySearch="Y" SelectFrom="collab.task.do.TaskDO[title],[title] like '%{$_POST['qry_name']}%' GROUP BY [title]" FieldName="title" cssFocusClass="input_text_search_focus" CssClass="input_text_search"/>
        <Element Name="btn_dosearch" Class="Button" text="Go" CssClass="button_gray">
            <EventHandler Name="search_onclick" Event="onclick" Function="RunSearch()" ShortcutKey="Enter"/>
        </Element> 
        <!-- 
        <Element Name="fld_project" width="170" Class="Listbox" BlankOption="none,0" FieldName="project_id" DefaultValue="{@:m_ProjectID}" Label="Project" SelectFrom="collab.project.do.ProjectDO[name:Id]" AllowURLParam="N" >
        	<EventHandler Name="fld_project_onchange" Event="onchange" Function="RunSearch()" ShortcutKey="Enter"/>
        </Element>
        -->
        
		<Element Name="fld_project_id"  Class="InputPicker" Description="This task will belong selected project" Enabled="N" UpdateForm="N" ValuePicker="collab.project.widget.ProjectSinglePickForm" PickerMap="fld_project:fld_Id,fld_project_id:fld_title" DefaultValue="Default Project" DefaultValueRename="N" FieldName="" Label="Project" HTMLattr="style='border:none;height:18px;padding-left:10px;padding-right:10px;width:82px;'" CssClass="button_gray_w" CssHoverClass="button_gray_w" >
			<EventHandler Name="fld_project_onchange" Event="onchange" Function="RunSearch()" ShortcutKey="Enter"/>    		
    	</Element>   
    	<Element Name="fld_project" DefaultValueRename="N" DefaultValue="0" Description="This task will belong selected project" Class="Hidden" FieldName="project_id" Label="Project"  AllowURLParam="N" ></Element>
    </SearchPanel>
</EasyForm>