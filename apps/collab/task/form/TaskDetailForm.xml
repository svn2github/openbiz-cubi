			<Element Name="fld_reminder" ElementSet="Remind" DefaultValue="0" Class="LabelList" selectFrom="collab.lov.ReminderLOV(ReminderType)" FieldName="reminder" Label="Reminder" AllowURLParam="N" >
				<EventHandler Name="fld_reminder_onclick" Event="onchange" Function="UpdateForm()"  />
			</Element>
			<Element Name="fld_reminder_time" Hidden="{@:Elem[fld_reminder].Value=='0'?'Y':'N'}" ElementSet="Remind" Class="LabelList" selectFrom="collab.calendar.lov.EventLOV(ReminderTimeType)" FieldName="reminder_time" Label="Time Setting" AllowURLParam="N" />
