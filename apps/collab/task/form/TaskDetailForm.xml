        <Element Name="fld_related_document"   ElementSet="Docs" Class="FormElement" FormReference="collab.document.widget.DocumentListDetailForm" FieldName="" Label="" AllowURLParam="N" />
		<Element Name="btn_manage_document" Hidden="{@:m_CanUpdateRecord=='1'?'N':'Y'}" ElementSet="Docs"  Style="color:#666666;margin-left:5px;margin-top:2px;"  Class="Button" Text="Manage" CssClass="button_gray_w" Description="">
