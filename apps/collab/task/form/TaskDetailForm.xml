		<Element Name="fld_actualhour" ElementSet="Worklog" Class="LabelText" Text="{@:Elem[fld_actualhour].Value} Hours" FieldName="actual_workhour" Label="Worked Hours"   AllowURLParam="N"  />
		<Element Name="fld_work_log"   ElementSet="Worklog" Class="FormElement" FormReference="collab.worklog.widget.WorklogListDetailForm" FieldName="" Label="" AllowURLParam="N" />		
		<Element Name="btn_manage_worklog" Hidden="{@:m_CanUpdateRecord=='1'?'N':'Y'}" ElementSet="Worklog" Class="Button" Style="color:#666666;margin-left:5px;margin-top:2px;" Text="Manage" CssClass="button_gray_w" Description="">
			<EventHandler Name="btn_manage_worklog_onclick" Event="onclick" Function="SwitchForm(collab.task.form.TaskEditWorklogForm,{@:Elem[fld_Id].Value})"   />
        </Element>  
        
		<Element Name="fld_budget" ElementSet="Expenses" width="200" Class="LabelText"  Text="$ {@:Elem[fld_budget].Value} Dollars"  FieldName="budget_cost" Label="Budget"  Description="unit in Dollars, total budget" AllowURLParam="N" />
		<Element Name="fld_cost" ElementSet="Expenses"  width="200" Class="LabelText"  Text="$ {@:Elem[fld_cost].Value} Dollars"  FieldName="actual_cost" Label="Expenses"  Description="unit in Dollars, actual spend cost" AllowURLParam="N" />
