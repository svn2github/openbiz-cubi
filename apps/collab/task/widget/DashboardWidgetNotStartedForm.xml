<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="DashboardWidgetNotStartedForm" Class="collab.task.form.TaskForm" FormType="List" jsClass="jbForm" Title="Task" Description="Total {@:m_TotalRecords} items" BizDataObj="collab.task.do.TaskDO" SearchRule="[status]=0" PageSize="2" DefaultForm="Y" TemplateEngine="Smarty" TemplateFile="dashboard_widget_form_bottom.tpl.html" Access="collab_task.access">
    <DataPanel>        
        <Element Name="fld_Id" Class="Hidden" Hidden="Y" FieldName="Id" Label="Id" Sortable="Y" AllowURLParam="N" Link="javascript:" />
        <Element Name="fld_share" Class="ColumnShare" 
				MyPrivateImg="{RESOURCE_URL}/collab/task/images/icon_task_private.png"
				MySharedImg="{RESOURCE_URL}/collab/task/images/icon_task_shared.png" 
				MyAssignedImg="{RESOURCE_URL}/collab/task/images/icon_task_assigned.gif"
				MyDistributedImg="{RESOURCE_URL}/collab/task/images/icon_task_distributed.gif" 
				GroupSharedImg="{RESOURCE_URL}/collab/task/images/icon_task_shared_group.png"
				OtherSharedImg="{RESOURCE_URL}/collab/task/images/icon_task_shared_other.png"
				FieldName="create_by" Label="Share"  Sortable="Y" AllowURLParam="N" Translatable="N" OnEventLog="N" Link="javascript:;">
			<EventHandler Name="fld_share_onclick" Event="onclick" Function="LoadDialog(common.form.DataSharingForm,{@:Elem[fld_Id].Value})"/>		
		</Element>	

        <Element Name="fld_title" MaxLength="9" Class="ColumnText" FieldName="title" Label="Title" Style="width:110px;display:block;"  Sortable="Y" AllowURLParam="N" Translatable="N" OnEventLog="N" Link="{@home:url}/collab/task_detail/{@:Elem[fld_Id].Value}">         
         </Element>
       
       
		<Element Name="start_time" Class="ColumnText" Style="line-height:16px;display:block;"  FieldName="start_time_display_short" Label="Type"  Sortable="Y" AllowURLParam="N" Translatable="N" OnEventLog="N" />
		
        <Element Name="fld_priority_value" Class="Hidden" Hidden="Y" FieldName="priority"  />
        <Element Name="fld_priority" Class="ColumnImage" Text="{RESOURCE_URL}/collab/task/images/icon_task_status_{@:Elem[fld_priority_value].Value}.png" FieldName="" Sortable="Y" Label="Pri" Link="javascript:;">
			<EventHandler Name="fld_dallday_onclick" Event="onclick" Function="UpdateFieldValueAdd({@:Elem[fld_Id].Value},fld_priority_value,{@:Elem[fld_priority_value].Value},0,2)"/>		
		</Element>
		 <Element Name="fld_milestone" Class="ColumnBool" TrueImg="{RESOURCE_URL}/collab/task/images/icon_task_milestone_enable.gif"  FalseImg="{RESOURCE_URL}/collab/task/images/icon_task_milestone_disable.gif" FieldName="milestone" Sortable="Y" Label="Mst" Link="javascript:;">
			<EventHandler Name="fld_dallday_onclick" Event="onclick" Function="UpdateFieldValueXor({@:Elem[fld_Id].Value},fld_milestone,{@:Elem[fld_milestone].Value})"/>		
		</Element>
		<Element Name="fld_reminder" Class="ColumnBool" TrueImg="{RESOURCE_URL}/collab/task/images/icon_reminder_enable.gif"  FalseImg="{RESOURCE_URL}/collab/task/images/icon_reminder_disable.gif" FieldName="reminder" Sortable="Y" Label="Rmd" Link="javascript:;">
			<EventHandler Name="fld_reminder_onclick" Event="onclick" Function="UpdateFieldValueXor({@:Elem[fld_Id].Value},fld_reminder,{@:Elem[fld_reminder].Value})"/>		
		</Element>
		<Element Name="fld_color" Class="ColumnStyle" FieldName="type_color" Label="Type"  Sortable="Y" AllowURLParam="N" Translatable="N" OnEventLog="N" />
        
    </DataPanel>
    <ActionPanel>         
        <Element Name="btn_prev" Class="Button" Enabled="{(@:m_CurrentPage == 1)?'N':'Y'}" Text="" CssClass="button_navi {(@:m_CurrentPage == 1)?'prev_gray':'prev'}">
            <EventHandler Name="prev_onclick" Event="onclick" Function="GotoPage({@:m_CurrentPage - 1})" ShortcutKey="Ctrl+Shift+Left"/>
        </Element>
        <Element Name="btn_next" Class="Button" Enabled="{(@:m_CurrentPage == @:m_TotalPages )?'N':'Y'}" Text="" CssClass="button_navi {(@:m_CurrentPage == @:m_TotalPages)?'next_gray':'next'}">
            <EventHandler Name="next_onclick" Event="onclick" Function="GotoPage({@:m_CurrentPage + 1})" ShortcutKey="Ctrl+Shift+Right"/>
        </Element>      
    </ActionPanel> 
    <NavPanel>   
      	<Element Name="btn_compose" Class="LabelText" text=" " CssClass="icon_compose" Link="{@home:url}/collab/task_new"></Element>
      	<Element Name="btn_graph" Class="LabelText" text=" " CssClass="icon_gantt" Link="{@home:url}/collab/task_gantt"></Element>
        <Element Name="btn_list" Class="LabelText" text=" " CssClass="icon_list" Link="{@home:url}/collab/task_manage"></Element> 	
    </NavPanel> 
    <SearchPanel>
    	<Element Name="data_filter"  BlankOption="All Data" cssclass="input_select_m" Class="common.element.ShareDataFilter" FieldName="create_by" Label="" SelectFrom="common.lov.DataSharingLOV(DataFilter)" >
            <EventHandler Name="datafilter_onchange" Event="onchange" Function="RunSearch()"/>
        </Element>         
    </SearchPanel>
</EasyForm>