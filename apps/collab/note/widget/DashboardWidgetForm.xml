<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="DashboardWidgetForm" Class="EasyForm"  FormType="List" jsClass="jbForm" Title="Note" Description="Total {@:m_TotalRecords} items" BizDataObj="collab.note.do.NoteDO" PageSize="12" DefaultForm="Y" TemplateEngine="Smarty" TemplateFile="dashboard_widget_form.tpl.html" Access="collab_note.access">
    <DataPanel>
          <Element Name="row_selections" Class="RowCheckbox"  Label="" FieldName="Id"/>
        <Element Name="fld_Id" Class="Hidden" Hidden="Y" FieldName="Id" Label="Id" Sortable="Y" AllowURLParam="N" Link="{@home:url}/collab/note_detail/{@:Elem[fld_Id].Value}" />
        <Element Name="fld_share" Class="ColumnShare" 
				MyPrivateImg="{RESOURCE_URL}/collab/note/images/icon_note_private.gif"
				MySharedImg="{RESOURCE_URL}/collab/note/images/icon_note_shared.gif" 
				MyAssignedImg="{RESOURCE_URL}/collab/note/images/icon_note_assigned.gif"
				MyDistributedImg="{RESOURCE_URL}/collab/note/images/icon_note_distributed.gif" 
				GroupSharedImg="{RESOURCE_URL}/collab/note/images/icon_note_shared_group.gif"
				OtherSharedImg="{RESOURCE_URL}/collab/note/images/icon_note_shared_other.gif"
				FieldName="create_by" Label="Share"  Sortable="Y" AllowURLParam="N" Translatable="N" OnEventLog="N" Link="{@home:url}/collab/note_detail/{@:Elem[fld_Id].Value}">
		</Element>	
			<Element Name="fld_icon_data" Class="RawData" FieldName="icon" Label="Id" Sortable="Y" AllowURLParam="N" Link="javascript:" />
		
        <Element Name="fld_title" Class="RawData" MaxLength="40"  FieldName="title" Label="Title"  Sortable="Y" AllowURLParam="N"  Link="javascript:" Translatable="N" OnEventLog="N" >
        </Element>	
        <Element Name="fld_url" Class="RawData" MaxLength="30" FieldName="url"  Label="URL"  Sortable="Y" AllowURLParam="N" Translatable="N" OnEventLog="N" />	
        
        <Element Name="fld_sortorder" Class="ColumnSorting" FieldName="sortorder" Label="Ordering"  Sortable="Y" AllowURLParam="N" Translatable="N" OnEventLog="N" >
        	<EventHandler Name="fld_sortorder_up" Event="onclick" EventLogMsg="" Function="UpdateFieldValue({@:Elem[fld_Id].Value},fld_sortorder,{@:Elem[fld_sortorder].Value-5})" />
        	<EventHandler Name="fld_sortorder_down" Event="onclick" EventLogMsg="" Function="UpdateFieldValue({@:Elem[fld_Id].Value},fld_sortorder,{@:Elem[fld_sortorder].Value+5})" />
        </Element>
        <Element Name="fld_color" Class="ColumnStyle" FieldName="type_color" Label="Type"  Sortable="Y" AllowURLParam="N" Translatable="N" OnEventLog="N" />
		<Element Name="fld_type" Class="ColumnText"  Style="line-height:24px;" FieldName="type_name" Label="Type"  Sortable="Y" AllowURLParam="N" Translatable="N" OnEventLog="N" />						                
         
    </DataPanel>
    <ActionPanel>
         		<Element Name="btn_markread" Class="LabelText" text="&amp;nbsp;" CssClass="icon_list" Link="{@home:url}/collab/note_manage"></Element>

    </ActionPanel> 
    <NavPanel>
 
    </NavPanel> 
    <SearchPanel>

    </SearchPanel>
</EasyForm>