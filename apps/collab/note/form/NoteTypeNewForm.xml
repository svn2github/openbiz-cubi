<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="NoteTypeNewForm" Class="NoteTypeForm" Icon="{RESOURCE_URL}/collab/note/images/icon_note_type.png" FormType="New" jsClass="jbForm" Title="New Note Type" Description="Please fill in below field to create a new note type" BizDataObj="collab.note.do.NoteTypeDO" PageSize="10" DefaultForm="Y" TemplateEngine="Smarty" TemplateFile="detail.tpl" EventName="TASK_TYPE" MessageFile="NoteType.msg" Access="collab_note.access">
    <DataPanel>
        <Element Name="fld_name" DefaultValue="New Note Type" Class="InputText" FieldName="name" Label="Name"   />	
        <Element Name="fld_description" Class="Textarea" FieldName="description" Label="Description" />	
        <Element Name="fld_color_code" Class="ColorPicker" mode="" FieldName="color" Label="Color Code"  AllowURLParam="N" />	        
        <Element Name="fld_published" Class="Radio" SelectFrom="common.lov.CommLOV(Published)" DefaultValue="1" FieldName="published" Label="Published"  />	
        <Element Name="fld_sortorder" Class="Listbox" SelectFrom="common.lov.CommLOV(Order)" DefaultValue="50" FieldName="sortorder" Label="Ordering"  />	        	
    </DataPanel>
    <ActionPanel>
        <Element Name="btn_save" Class="Button" Text="Save" CssClass="button_gray_m">
            <EventHandler Name="save_onclick" EventLogMsg="" Event="onclick" Function="InsertRecord()" RedirectPage="form=collab.note.form.NoteTypeDetailForm&amp;fld:Id={@collab.note.do.NoteTypeDO:Field[Id].Value}"  ShortcutKey="Ctrl+Enter" ContextMenu="Save" />
        </Element>
        <Element Name="btn_cancel" Class="Button" Text="Cancel" CssClass="button_gray_m">
            <EventHandler Name="cancel_onclick" Event="onclick" Function="SwitchForm()"  ShortcutKey="Escape" ContextMenu="Cancel"/>
        </Element>
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>