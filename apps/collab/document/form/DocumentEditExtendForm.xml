<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="DocumentEditExtendForm" Class="DocumentForm"  Icon="{RESOURCE_URL}/collab/document/images/icon_document.gif" FormType="Edit" jsClass="jbForm" Title="Edit Docuement Extend Fields" Description="Here you can edit extend fields for selected type of docuemnt" BizDataObj="collab.document.do.DocumentDO" DefaultForm="Y" TemplateEngine="Smarty" TemplateFile="form_docs_edit_extend.tpl.html" EventName="BOOKMARK" MessageFile="Documents.msg" Access="collab_document.access">
    <DataPanel>
    		<Element Name="fld_Id" Class="Hidden" FieldName="Id" Label="Id" AllowURLParam="Y" Translatable="N" OnEventLog="N" CssClass="input" CssErrorClass="input_error"/>
			<Element Name="fld_form_title"  Class="common.element.ColumnTitle" FieldName="title" Label="" Width="500" style="font-size:24px;color:#333333;line-height:24px;" />	
			<Element Name="fld_color" Class="Hidden" Hidden="Y" FieldName="type_color" Label="Type"  Sortable="Y" AllowURLParam="N" Translatable="N" OnEventLog="N" />
			<Element Name="fld_form_description"  BackgroundColor="{@:Elem[fld_color].Value}" Width="648" Class="LabelText" FieldName="type_name" Label="" KeepCookie="Y" SelectFrom="collab.document.do.DocumentTypeDO[name:Id],[published]=1 OR [create_by]='{@profile:Id}'" AllowURLParam="N" />


			<Element Name="fld_type_id"  ElementSet="Data Type" Class="collab.lib.TypeSelector" FieldName="type_id" Label="Type" KeepCookie="Y" SelectFrom="collab.document.do.DocumentTypeDO[name:Id:color],[published]=1 OR [create_by]='{@profile:Id}'" AllowURLParam="N" >
				<EventHandler Name="fld_type_id_onchange" Event="onchange" Function="UpdateForm()" />
			</Element>	
			<Element Name="fld_extend_fields"   ElementSet="Extend Fileds"  Class="FormElement" FormReference="extend.widget.ExtendDataEditForm" FieldName="extend" Label="" AllowURLParam="N" />

	</DataPanel>
    <ActionPanel>
    <Element Name="btn_save" Class="Button" Text="Save" CssClass="button_gray_m">
            <EventHandler Name="save_onclick" Event="onclick" EventLogMsg=""  Function="UpdateRecord()" RedirectPage="{APP_INDEX}/collab/document_detail/{@:Elem[fld_Id].Value}" ShortcutKey="Ctrl+S" ContextMenu="Save" />
        </Element>
        <Element Name="btn_close" Class="Button" Text="Close" CssClass="button_gray_m">
            <EventHandler Name="btn_close_onclick" Event="onclick" EventLogMsg=""  Function="UpdateRecord()" ShortcutKey="Ctrl+Shift+S" RedirectPage="form=collab.document.form.DocumentDetailForm&amp;fld:Id={@collab.document.do.DocumentDO:Field[Id].Value}"  ContextMenu="Close" />
        </Element>
    
        
        <Element Name="btn_cancel" Class="Button" Text="Cancel" CssClass="button_gray_m">
            <EventHandler Name="btn_cancel_onclick" Event="onclick" Function="SwitchForm()"  ShortcutKey="Escape" ContextMenu="Cancel" />
        </Element>

		<Element Name="btn_spacer" Class="Spacer" width="10"></Element>
        
        <Element Name="btn_manage_attachment"   Class="Button" Text="Attachment" CssClass="button_gray_w" Description="">
			<EventHandler Name="btn_manage_attachment_onclick" Event="onclick" Function="SwitchForm(collab.document.form.DocumentEditAttachmentForm,{@:Elem[fld_Id].Value})"   />
        </Element>    
		<Element Name="btn_manage_picture"   Class="Button" Text="Picture" CssClass="button_gray_w" Description="">
			<EventHandler Name="btn_manage_picture_onclick" Event="onclick" Function="SwitchForm(collab.document.form.DocumentEditPictureForm,{@:Elem[fld_Id].Value})"   />
        </Element> 
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>