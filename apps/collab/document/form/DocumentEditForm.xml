<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="DocumentEditForm" Class="DocumentForm"  Icon="{RESOURCE_URL}/collab/document/images/icon_document.gif" FormType="Edit" jsClass="jbForm" Title="Edit Document" Description="Edit selected document." BizDataObj="collab.document.do.DocumentDO" DefaultForm="Y" TemplateEngine="Smarty" TemplateFile="form_docs_edit.tpl.html" EventName="BOOKMARK" MessageFile="Documents.msg" Access="collab_document.access">
    <DataPanel>
	<Element Name="fld_type_id" Class="collab.lib.TypeSelector" FieldName="type_id" Label="Type" KeepCookie="Y" SelectFrom="collab.document.do.DocumentTypeDO[name:Id:color],[published]=1 OR [create_by]='{@profile:Id}'" AllowURLParam="N" >
		<EventHandler Name="fld_type_id_onchange" Event="onchange" Function="UpdateForm()" />
	</Element>	
	<Element Name="fld_Id" Class="Hidden" FieldName="Id" Label="Id" AllowURLParam="Y" Translatable="N" OnEventLog="N" CssClass="input" CssErrorClass="input_error"/>
    <Element Name="fld_title" Class="InputText" FieldName="title" Label="Title"   />
    	
	
	<Element Name="fld_extend_fields"   Class="FormElement" FormReference="extend.widget.ExtendDataEditForm" FieldName="extend" Label="" AllowURLParam="N" />
	
    <Element Name="fld_description" Class="Textarea" FieldName="description" Label="Description" />			
    <Element Name="fld_content" Class="CKEditor" mode="adv"  Config="resize_maxWidth:640,resize_minWidth:640,resize_minHeight:300" width="640" height="300" FieldName="content" Label="Content" />	
	   				 
	<Element Name="fld_sortorder" Class="Listbox" ElementSet="Miscellaneous" SelectFrom="common.lov.CommLOV(Order)" DefaultValue="50" FieldName="sortorder" Label="Ordering"  />	               
   <Element Name="fld_published" Class="Listbox" ElementSet="Miscellaneous" KeepCookie="Y" SelectFrom="common.lov.CommLOV(Published)" DefaultValue="1" FieldName="group_perm" Label="Group Share"  /><Element Name="fld_published_other" Class="Listbox" ElementSet="Miscellaneous" KeepCookie="Y" SelectFrom="common.lov.CommLOV(Published)" DefaultValue="0" FieldName="other_perm" Label="Other Group"  /><Element Name="fld_published_other" Class="Listbox" ElementSet="Miscellaneous" KeepCookie="Y" SelectFrom="common.lov.CommLOV(Published)" DefaultValue="0" FieldName="other_perm" Label="Other Group"  />
	</DataPanel>
    <ActionPanel>
    <Element Name="btn_save" Class="Button" Text="Save" CssClass="button_gray_m">
            <EventHandler Name="save_onclick" Event="onclick" EventLogMsg=""  Function="SaveDoc()" RedirectPage="" ShortcutKey="Ctrl+S" ContextMenu="Save" />
        </Element>
        <Element Name="btn_close" Class="Button" Text="Close" CssClass="button_gray_m">
            <EventHandler Name="btn_close_onclick" Event="onclick" EventLogMsg=""  Function="UpdateRecord()" ShortcutKey="Ctrl+Shift+S" RedirectPage="form=collab.document.form.DocumentDetailForm&amp;fld:Id={@collab.document.do.DocumentDO:Field[Id].Value}"  ContextMenu="Close" />
        </Element>
    
        
        <Element Name="btn_cancel" Class="Button" Text="Cancel" CssClass="button_gray_m">
            <EventHandler Name="btn_cancel_onclick" Event="onclick" Function="SwitchForm()"  ShortcutKey="Escape" ContextMenu="Cancel" />
        </Element>

		<Element Name="btn_spacer" Class="Spacer" width="10"></Element>
        
        <Element Name="btn_manage_attachment"   Class="Button" Text="Attachment" CssClass="button_gray_w" Description="">
			<EventHandler Name="btn_manage_attachment_onclick" Event="onclick" Function="SwitchForm(collab.document.form.DocumentEditAttachmentForm,{@:Elem[fld_Id].Value})"   />
        </Element>    
		<Element Name="btn_manage_picture"   Class="Button" Text="Picture" CssClass="button_gray_w" Description="">
			<EventHandler Name="btn_manage_picture_onclick" Event="onclick" Function="SwitchForm(collab.document.form.DocumentEditPictureForm,{@:Elem[fld_Id].Value})"   />
        </Element> 
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>