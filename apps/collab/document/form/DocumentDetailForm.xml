<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="DocumentDetailForm" Class="EasyForm" Icon="{RESOURCE_URL}/collab/document/images/icon_document.gif" FormType="Detail" jsClass="jbForm" Title="Document Detail" Description="You can create a document and share it with your group mates." BizDataObj="collab.document.do.DocumentDO" DefaultForm="Y" TemplateEngine="Smarty" TemplateFile="detail_elementset_tabs.tpl" EventName="BOOKMARK" MessageFile="Documents.msg" Access="collab_document.access">
    <DataPanel>
			<Element Name="fld_Id" Hidden="Y" Class="LabelText" FieldName="Id" Label="Id" AllowURLParam="Y"/>
			<Element Name="fld_form_title"  Class="LabelText" FieldName="title" Label="" Width="500" style="font-size:24px;color:#333333;line-height:24px;" />	
			<Element Name="fld_color" Class="Hidden" Hidden="Y" FieldName="type_color" Label="Type"  Sortable="Y" AllowURLParam="N" Translatable="N" OnEventLog="N" />
			<Element Name="fld_form_description"  BackgroundColor="{@:Elem[fld_color].Value}" Width="648" Class="LabelText" FieldName="type_name" Label="" KeepCookie="Y" SelectFrom="collab.document.do.DocumentTypeDO[name:Id],[published]=1 OR [create_by]='{@profile:Id}'" AllowURLParam="N" />
			
			<Element Name="fld_description" ElementSet="General"  Class="LabelTextarea" FieldName="description" Label="Description" />				   
			<Element Name="fld_content" ElementSet="General"  Class="HTMLPreview" Height="400" FieldName="content" Label="Content" />			

		<Element Name="fld_related_attachment" Access="attachment.access" TabSet="Extra Information"  ElementSet="Attachment" Class="FormElement" FormReference="attachment.widget.AttachmentListDetailForm" FieldName="" Label="" AllowURLParam="N" />
		<Element Name="btn_manage_attachment" Access="attachment.access" TabSet="Extra Information" Hidden="{@:m_CanUpdateRecord=='1'?'N':'Y'}" ElementSet="Attachment"  Style="color:#666666;margin-left:5px;margin-top:2px;"  Class="Button" Text="Manage" CssClass="button_gray_w" Description="">
			<EventHandler Name="btn_manage_attachment_onclick" Event="onclick" Function="SwitchForm(collab.document.form.DocumentEditAttachmentForm,{@:Elem[fld_Id].Value})"   />
        </Element>
	      
	    <Element Name="fld_related_picture" Access="picture.access" TabSet="Extra Information"  ElementSet="Picture" Class="FormElement" FormReference="picture.widget.PictureListDetailForm" FieldName="" Label="" AllowURLParam="N" />
		<Element Name="btn_manage_picture" Access="picture.access" TabSet="Extra Information" Hidden="{@:m_CanUpdateRecord=='1'?'N':'Y'}" ElementSet="Picture"  Style="color:#666666;margin-left:5px;margin-top:2px;"  Class="Button" Text="Manage" CssClass="button_gray_w" Description="">
			<EventHandler Name="btn_manage_attachment_onclick" Event="onclick" Function="SwitchForm(collab.document.form.DocumentEditPictureForm,{@:Elem[fld_Id].Value})"   />
        </Element>  
	     
		<Element Name="fld_locations"  Access="location.access" TabSet="Extra Information" ElementSet="Locations" Class="FormElement" FormReference="location.widget.LocationListDetailForm" FieldName="" Label="" AllowURLParam="N" />
		<Element Name="btn_manage_locations"  Access="location.access" TabSet="Extra Information" Hidden="{@:m_CanUpdateRecord=='1'?'N':'Y'}" ElementSet="Locations" Style="color:#666666;margin-left:5px;margin-top:2px;"  Class="Button" Text="Manage" CssClass="button_gray_w" Description="">
			<EventHandler Name="btn_manage_location_onclick" Event="onclick" Function="SwitchForm(collab.document.form.DocumentEditLocationForm,{@:Elem[fld_Id].Value})"   />
       	</Element> 
		    			
		<Element Name="fld_reversion" TabSet="Extra Information"   ElementSet="Reversion" Class="FormElement" FormReference="collab.document.widget.DocumentReversionListForm" FieldName="" Label="" AllowURLParam="N" />
		
    			
	        			    
			<Element Name="fld_sortorder" TabSet="Extra Information" Class="LabelText" ElementSet="Miscellaneous" SelectFrom="common.lov.CommLOV(Order)" DefaultValue="50" FieldName="sortorder" Label="Ordering"  />
			<Element Name="fld_published" TabSet="Extra Information"  Class="LabelList" ElementSet="Miscellaneous"  SelectFrom="common.lov.CommLOV(Published)" FieldName="group_perm" Label="Group Share"  />
			<Element Name="fld_published_others" TabSet="Extra Information"  Class="LabelList" ElementSet="Miscellaneous"  SelectFrom="common.lov.CommLOV(Published)" FieldName="other_perm" Label="Other Group"  />		     
			<Element Name="fld_create_by" TabSet="Extra Information"  Class="LabelText" ElementSet="Miscellaneous" FieldName="create_by" Label="Create By" Text="{BizSystem::GetProfileName(@:Elem[fld_create_by].Value)}" AllowURLParam="N"/>		        
			<Element Name="fld_create_time" TabSet="Extra Information"  Class="LabelText" ElementSet="Miscellaneous" FieldName="create_time" Label="Create Time" AllowURLParam="N"/>		        
			<Element Name="fld_update_by" TabSet="Extra Information"  Class="LabelText" ElementSet="Miscellaneous" FieldName="update_by" Label="Update By"  Text="{BizSystem::GetProfileName(@:Elem[fld_update_by].Value)}" AllowURLParam="N"/>		        
			<Element Name="fld_update_time" TabSet="Extra Information"  Class="LabelText" ElementSet="Miscellaneous" FieldName="update_time" Label="Update Time" AllowURLParam="N"/>
		
		
		<!-- related data  -->
		<Element Name="fld_related_docs" TabSet="Related Data"   ElementSet="Document" Class="FormElement" FormReference="collab.document.widget.DocumentListRelatedForm" FieldName="" Label="" AllowURLParam="N" />
	    <Element Name="btn_manage_related" TabSet="Related Data" Hidden="{@:m_CanUpdateRecord=='1'?'N':'Y'}" ElementSet="Document" Style="color:#666666;margin-left:5px;margin-top:2px;"  Class="Button" Text="Manage" CssClass="button_gray_w" Description="">
			<EventHandler Name="btn_manage_related_onclick" Event="onclick" Function="SwitchForm(collab.document.form.DocumentEditRelatedForm,{@:Elem[fld_Id].Value})"   />
       	</Element>		
		
		<Element Name="fld_related_projects" Access="collab_project.access"  TabSet="Related Data"   ElementSet="Project" Class="FormElement" FormReference="collab.project.widget.ProjectListDetailForm" FieldName="" Label="" AllowURLParam="N" />
		<Element Name="btn_manage_projects" Access="collab_project.access" TabSet="Related Data" Hidden="{@:m_CanUpdateRecord=='1'?'N':'Y'}" ElementSet="Project" Style="color:#666666;margin-left:5px;margin-top:2px;"  Class="Button" Text="Manage" CssClass="button_gray_w" Description="">
			<EventHandler Name="btn_manage_projects_onclick" Event="onclick" Function="SwitchForm(collab.document.form.DocumentEditProjectForm,{@:Elem[fld_Id].Value})"   />
       	</Element>
		
		<Element Name="fld_related_tasks" Access="collab_task.access"  TabSet="Related Data"   ElementSet="Task" Class="FormElement" FormReference="collab.task.widget.TaskListDetailForm" FieldName="" Label="" AllowURLParam="N" />
		<Element Name="btn_manage_tasks" Access="collab_task.access" TabSet="Related Data" Hidden="{@:m_CanUpdateRecord=='1'?'N':'Y'}" ElementSet="Task" Style="color:#666666;margin-left:5px;margin-top:2px;"  Class="Button" Text="Manage" CssClass="button_gray_w" Description="">
			<EventHandler Name="btn_manage_tasks_onclick" Event="onclick" Function="SwitchForm(collab.document.form.DocumentEditTaskForm,{@:Elem[fld_Id].Value})"   />
       	</Element>	
		<Element Name="fld_related_worklog" Access="collab_worklog.access"  TabSet="Related Data"   ElementSet="Worklog" Class="FormElement" FormReference="collab.worklog.widget.WorklogListDetailForm" FieldName="" Label="" AllowURLParam="N" />
		
		<Element Name="fld_related_events" Access="collab_calendar.access"  TabSet="Related Data"   ElementSet="Events" Class="FormElement" FormReference="collab.calendar.widget.EventListDetailForm" FieldName="" Label="" AllowURLParam="N" />
		<Element Name="btn_manage_events" Access="collab_calendar.access" TabSet="Related Data" Hidden="{@:m_CanUpdateRecord=='1'?'N':'Y'}" ElementSet="Events" Style="color:#666666;margin-left:5px;margin-top:2px;"  Class="Button" Text="Manage" CssClass="button_gray_w" Description="">
			<EventHandler Name="btn_manage_events_onclick" Event="onclick" Function="SwitchForm(collab.document.form.DocumentEditEventForm,{@:Elem[fld_Id].Value})"   />
       	</Element>
       		
		<Element Name="fld_related_contacts" Access="contact.access" TabSet="Related Data"   ElementSet="Contacts" Class="FormElement" FormReference="contact.widget.ContactListDetailForm" FieldName="" Label="" AllowURLParam="N" />
		<Element Name="btn_manage_contacts" Access="contact.access" TabSet="Related Data" Hidden="{@:m_CanUpdateRecord=='1'?'N':'Y'}" ElementSet="Contacts" Style="color:#666666;margin-left:5px;margin-top:2px;"  Class="Button" Text="Manage" CssClass="button_gray_w" Description="">
			<EventHandler Name="btn_manage_contacts_onclick" Event="onclick" Function="SwitchForm(collab.document.form.DocumentEditContactForm,{@:Elem[fld_Id].Value})"   />
       	</Element>
		
		
       	
       	
       	
	    </DataPanel>
    <ActionPanel>       
        <Element Name="btn_new" Class="Button" Text="Add" CssClass="button_gray_add" Description="new record (Insert)">
			<EventHandler Name="btn_new_onclick" Event="onclick" Function="SwitchForm(collab.document.form.DocumentNewForm)"  ShortcutKey="Insert" ContextMenu="New" />
        </Element>     
        <Element Name="btn_spacer_for_add" Class="Spacer" Width="10"></Element>     
        <Element Name="btn_edit" Hidden="{@:m_CanUpdateRecord=='1'?'N':'Y'}" Class="Button" Text="Edit" CssClass="button_gray_m" Description="edit record (Ctrl+E)">
			<EventHandler Name="btn_new_onclick" Event="onclick" Function="SwitchForm(collab.document.form.DocumentEditForm,{@:Elem[fld_Id].Value})"  ShortcutKey="Ctrl+E" ContextMenu="Edit" />
        </Element>
		<Element Name="btn_copy" Hidden="{@:m_CanUpdateRecord=='1'?'N':'Y'}" Class="Button" Text="Copy" CssClass="button_gray_m" Description="copy record (Ctrl+C)">
            <EventHandler Name="onclick" Event="onclick" EventLogMsg="" Function="CopyRecord({@:Elem[fld_Id].Value})" RedirectPage="form=collab.document.form.DocumentCopyForm&amp;fld:Id={@:Elem[fld_Id].Value}" ShortcutKey="Ctrl+C" ContextMenu="Copy"/>
        </Element> 
        <Element Name="btn_delete" Hidden="{@:m_CanUpdateRecord=='1'?'N':'Y'}" Class="Button" Text="Delete" CssClass="button_gray_m" Description="delete record (Delete)">
            <EventHandler Name="del_onclick" Event="onclick" EventLogMsg="" Function="DeleteRecord({@:Elem[fld_Id].Value})"  RedirectPage="form=collab.document.form.DocumentListForm" ShortcutKey="Ctrl+Delete" ContextMenu="Delete" />
        </Element>
        <Element Name="btn_spacer_for_cancel" Hidden="{@:m_CanUpdateRecord=='1'?'N':'Y'}" Class="Spacer" Width="10"></Element>
        <Element Name="btn_cancel" Class="LabelBack" Text="Back" CssClass="button_gray_m" Link="{APP_INDEX}/collab/document_manage">
           <!--  <EventHandler Name="btn_cancel_onclick" Event="onclick" Function="SwitchForm()"  ShortcutKey="Escape" ContextMenu="Cancel" />-->
        </Element>          
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>