<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="BookmarkNewForm" Class="EasyForm" FormType="New" jsClass="jbForm" Icon="{RESOURCE_URL}/collab/bookmark/images/icon_bookmark.gif"  Title="Create New Bookmark" Description="You can create a bookmark and share it with your group mates." BizDataObj="collab.bookmark.do.BookmarkDO" PageSize="10" DefaultForm="Y" TemplateEngine="Smarty" TemplateFile="detail.tpl" EventName="BOOKMARK" MessageFile="Bookmarks.msg" Access="collab_bookmark.access">
    <DataPanel>
		<Element Name="fld_type_id" Class="collab.lib.TypeSelector" FieldName="type_id" Label="Type" KeepCookie="Y" SelectFrom="collab.bookmark.do.BookmarkTypeDO[name:Id:color],[published]=1 OR [create_by]='{@profile:Id}'" AllowURLParam="N" />
        <Element Name="fld_title" DefaultValue="New Bookmark" Class="InputText" FieldName="title" Label="Title"   />	
        <Element Name="fld_url" DefaultValue="http://" Class="InputText" FieldName="url" Label="URL"   />
        <Element Name="fld_description" Class="Textarea" FieldName="description" Label="Description" />	
    	<Element Name="fld_sortorder" Class="Listbox" ElementSet="Miscellaneous" SelectFrom="common.lov.CommLOV(Order)" DefaultValue="50" FieldName="sortorder" Label="Ordering"  />	               
        </DataPanel>
    <ActionPanel>
        <Element Name="btn_save" Class="Button" Text="Save" CssClass="button_gray_m">
            <EventHandler Name="save_onclick" EventLogMsg="" Event="onclick" Function="InsertRecord()" RedirectPage="form=collab.bookmark.form.BookmarkDetailForm&amp;fld:Id={@collab.bookmark.do.BookmarkDO:Field[Id].Value}"  ShortcutKey="Ctrl+Enter" ContextMenu="Save" />
        </Element>
        <Element Name="btn_cancel" Class="Button" Text="Cancel" CssClass="button_gray_m">
            <EventHandler Name="cancel_onclick" Event="onclick" Function="SwitchForm()"  ShortcutKey="Escape" ContextMenu="Cancel"/>
        </Element>
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>