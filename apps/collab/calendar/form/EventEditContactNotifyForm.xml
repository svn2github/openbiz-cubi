<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="EventEditContactNotifyForm" Class="EventListForm" Icon="{RESOURCE_URL}/collab/calendar/images/icon_calendar_list.gif"  FormType="Edit" jsClass="jbForm" Title="Edit Event Contacts" Description="Each event could have related contacts.\nYou can assign contacts to this event and notify related contacts about this event." BizDataObj="collab.calendar.do.EventDO" DefaultForm="Y" TemplateEngine="Smarty" TemplateFile="form_event_edit.tpl.html" EventName="CALENDAR" MessageFile="Event.msg"  Access="collab_calendar.access" >
    <DataPanel>
		<Element Name="fld_Id" Class="Hidden" FieldName="Id" Label="Id" AllowURLParam="Y" Translatable="N" OnEventLog="N" CssClass="input" CssErrorClass="input_error"/>

			<Element Name="fld_form_title" ElementSet="" Class="LabelText" FieldName="subject" Label="Subject" Width="500" style="font-size:24px;color:#333333;line-height:24px;" AllowURLParam="N" />    	        
		    <Element Name="fld_color" Class="Hidden" Hidden="Y" FieldName="type_color" Label="Type"  Sortable="Y" AllowURLParam="N" Translatable="N" OnEventLog="N" />
		    <Element Name="fld_form_description" ElementSet="" BackgroundColor="{@:Elem[fld_color].Value}" Class="LabelText" FieldName="type_name" Label="Type" KeepCookie="Y" SelectFrom="collab.calendar.do.EventTypeDO[name:Id]" AllowURLParam="N" />			    
	        <Element Name="fld_location" ElementSet="General" Class="LabelText" FieldName="location" Label="Location"  AllowURLParam="N" />
			<Element Name="fld_description" ElementSet="General" Class="LabelTextarea" FieldName="description" Label="Description"  AllowURLParam="N" />
			

			<Element Name="fld_start_time" ElementSet="General" DefaultValue="{date('Y-m-d H:i:s')}" Class="LabelText" FieldName="start_time" Label="Start Time"  AllowURLParam="N" />
			<Element Name="fld_end_time"  ElementSet="General" DefaultValue="{date('Y-m-d H:i:s',time()+7200)}" Class="LabelText" FieldName="end_time" Label="End Time"  AllowURLParam="N" />

			<Element Name="fld_recurrence" ElementSet="General" Class="LabelList" selectFrom="collab.calendar.lov.EventLOV(RecurrenceType)" FieldName="recurrence" Label="Recurrence"  AllowURLParam="N" />
			<Element Name="fld_all_day" ElementSet="General" Class="LabelBool" FieldName="all_day" Label="All Day" DefaultValue="0" SelectFrom="1" Description="All day event" AllowURLParam="N" >
			</Element>
			
    	
    	
    	<Element Name="fld_notify_contacts" ElementSet="Notify Contacts" Class="Listbox" selectFrom="collab.calendar.lov.EventLOV(NotifyType)" FieldName="notify_contacts" Label="Notify" AllowURLParam="N" >
			<EventHandler Name="fld_notify_contacts_onclick" Event="onchange" Function="UpdateForm()"  />
		</Element>
		<Element Name="fld_notify_contacts_time" Hidden="{@:Elem[fld_notify_contacts].Value=='0'?'Y':'N'}" ElementSet="Notify Contacts" Class="Listbox" selectFrom="collab.calendar.lov.EventLOV(NotifyTimeType)" FieldName="notify_contacts_time" Label="Time Setting" AllowURLParam="N" />		
		<Element Name="fld_notify_contacts_method_sms"  Hidden="{@:Elem[fld_notify_contacts].Value=='0'?'Y':'N'}" ElementSet="Notify Contacts" Class="Checkbox" DefaultValue="0" SelectFrom="1" FieldName="notify_contacts_email" Label="Send Email" AllowURLParam="N" />
		<Element Name="fld_notify_contacts_method_email"  Hidden="{@:Elem[fld_notify_contacts].Value=='0'?'Y':'N'}" ElementSet="Notify Contacts" Class="Checkbox" DefaultValue="0" SelectFrom="1" FieldName="notify_contacts_sms" Label="Send SMS" AllowURLParam="N" />
		
    </DataPanel>
    <ActionPanel>
        <Element Name="btn_save" Class="Button" Text="Save" CssClass="button_gray_m">
            <EventHandler Name="save_onclick" Event="onclick" EventLogMsg=""  Function="UpdateRecord()" RedirectPage="form=collab.calendar.form.EventDetailForm&amp;fld:Id={@collab.calendar.do.EventDO:Field[Id].Value}" ShortcutKey="Ctrl+Enter" ContextMenu="Save" />
        </Element>
        <Element Name="btn_cancel" Class="Button" Text="Cancel" CssClass="button_gray_m">
            <EventHandler Name="btn_cancel_onclick" Event="onclick" Function="SwitchForm()"  ShortcutKey="Escape" ContextMenu="Cancel" />
        </Element>
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>