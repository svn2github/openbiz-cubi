<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="EventCopyForm" Class="EasyForm" Icon="{RESOURCE_URL}/collab/calendar/images/icon_calendar_list.gif" FormType="Copy" jsClass="jbForm" Title="Copy Event" Description="Copy event record from selected event, \nA typical event could be appointment, meeting or other types." BizDataObj="collab.calendar.do.EventDO" PageSize="10" DefaultForm="Y" TemplateEngine="Smarty" TemplateFile="detail_elementset.tpl" EventName="CALENDAR" MessageFile="Event.msg"  Access="collab_calendar.access" >
    <DataPanel>
 		<Element Name="fld_type_id" ElementSet="General" Class="collab.lib.TypeSelector" FieldName="type_id" Label="Type" KeepCookie="Y" SelectFrom="collab.calendar.do.EventTypeDO[name:Id:color],[published]=1 OR [create_by]='{@profile:Id}'" AllowURLParam="N" />			    
        <Element Name="fld_subject" ElementSet="General" Class="InputText" FieldName="subject" Label="Subject"  AllowURLParam="N" CssClass="input_text" CssErrorClass="input_text_error" CssFocusClass="input_text_focus"/>    	        
        <Element Name="fld_location" ElementSet="General" Class="InputText" FieldName="location" Label="Location"  AllowURLParam="N" CssClass="input_text" CssErrorClass="input_text_error" CssFocusClass="input_text_focus"/>
		<Element Name="fld_description" ElementSet="General" Class="Textarea" FieldName="description" Label="Description"  AllowURLParam="N" />
		
		<Element Name="fld_all_day" ElementSet="Time" Class="Checkbox" FieldName="all_day" Label="All Day" DefaultValue="0" SelectFrom="1" Description="All day event" AllowURLParam="N" >
		</Element>
		<Element Name="fld_start_time" ElementSet="Time" DefaultValue="{date('Y-m-d H:i:s')}" Class="InputDatetime" FieldName="start_time" Label="Start Time"  AllowURLParam="N" />
		<Element Name="fld_end_time"  ElementSet="Time" DefaultValue="{date('Y-m-d H:i:s',time()+7200)}" Class="InputDatetime" FieldName="end_time" Label="End Time"  AllowURLParam="N" />
		<Element Name="fld_recurrence" ElementSet="Time" Class="Listbox" selectFrom="collab.calendar.lov.EventLOV(RecurrenceType)" FieldName="recurrence" Label="Recurrence"  AllowURLParam="N" />
		
		<Element Name="fld_reminder" ElementSet="Reminder" DefaultValue="0" Class="Listbox" selectFrom="collab.lov.ReminderLOV(ReminderType)" FieldName="reminder" Label="Reminder" AllowURLParam="N" >
			<EventHandler Name="fld_reminder_onclick" Event="onchange" Function="UpdateForm()"  />
		</Element>
		<Element Name="fld_reminder_time" Hidden="{@:Elem[fld_reminder].Value=='0'?'Y':'N'}" ElementSet="Reminder" Class="Listbox" selectFrom="collab.lov.ReminderLOV(ReminderTimeType)" FieldName="reminder_time" Label="Time Setting" AllowURLParam="N" />
		<Element Name="fld_reminder_method_email" Hidden="{@:Elem[fld_reminder].Value=='0'?'Y':'N'}" ElementSet="Reminder" Class="Checkbox"  FieldName="reminder_method_email" DefaultValue="0" SelectFrom="1" DefaultChecked="Y" Label="Send Email" AllowURLParam="N" />
		<Element Name="fld_reminder_method_systray" Hidden="{@:Elem[fld_reminder].Value=='0'?'Y':'N'}" ElementSet="Reminder" Class="Checkbox"  FieldName="reminder_method_systray" DefaultValue="0" SelectFrom="1" DefaultChecked="Y" Label="Send Systray" AllowURLParam="N" />
		<Element Name="fld_reminder_method_sms" Hidden="{@:Elem[fld_reminder].Value=='0'?'Y':'N'}" ElementSet="Reminder" Class="Checkbox"  FieldName="reminder_method_sms" DefaultValue="0" SelectFrom="1" Label="Send SMS" AllowURLParam="N" />
		
		<!-- 
		<Element Name="fld_notify_contacts" ElementSet="Notify Contacts" Class="Listbox" selectFrom="collab.calendar.lov.EventLOV(NotifyType)" FieldName="notify_contacts" Label="Notify" AllowURLParam="N" >
			<EventHandler Name="fld_notify_contacts_onclick" Event="onchange" Function="UpdateForm()"  />
		</Element>
		<Element Name="fld_notify_contacts_method_sms"  Hidden="{@:Elem[fld_notify_contacts].Value=='0'?'Y':'N'}" ElementSet="Notify Contacts" Class="Checkbox" DefaultValue="0" SelectFrom="1" DefaultChecked="Y" FieldName="notify_contacts_email" Label="Send Email" AllowURLParam="N" />
		<Element Name="fld_notify_contacts_time"  Hidden="{@:Elem[fld_notify_contacts].Value=='0'?'Y':'N'}" ElementSet="Notify Contacts" Class="Checkbox" DefaultValue="0" SelectFrom="1" FieldName="notify_contacts_sms" Label="Send SMS" AllowURLParam="N" />
		 -->
		
               
        <Element Name="fld_sortorder" Class="Listbox" ElementSet="Miscellaneous" SelectFrom="common.lov.CommLOV(Order)" DefaultValue="50" FieldName="sortorder" Label="Ordering"  />
        <Element Name="fld_published" Class="Listbox" ElementSet="Miscellaneous" KeepCookie="Y" SelectFrom="common.lov.CommLOV(Published)" DefaultValue="1" FieldName="group_perm" Label="Group Share"  /><Element Name="fld_published_other" Class="Listbox" ElementSet="Miscellaneous" KeepCookie="Y" SelectFrom="common.lov.CommLOV(Published)" DefaultValue="0" FieldName="other_perm" Label="Other Group"  /><Element Name="fld_published_other" Class="Listbox" ElementSet="Miscellaneous" KeepCookie="Y" SelectFrom="common.lov.CommLOV(Published)" DefaultValue="0" FieldName="other_perm" Label="Other Group"  />
        </DataPanel>
    <ActionPanel>
        <Element Name="btn_save" Class="Button" Text="Save" CssClass="button_gray_m">
            <EventHandler Name="save_onclick" EventLogMsg="" Event="onclick" Function="InsertRecord()" RedirectPage="form=collab.calendar.form.EventEditExtendForm&amp;fld:Id={@collab.calendar.do.EventDO:Field[Id].Value}"  ShortcutKey="Ctrl+Enter" ContextMenu="Save" />
        </Element>
        <Element Name="btn_cancel" Class="Button" Text="Cancel" CssClass="button_gray_m">
            <EventHandler Name="cancel_onclick" Event="onclick" Function="SwitchForm()"  ShortcutKey="Escape" ContextMenu="Cancel"/>
        </Element>
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>