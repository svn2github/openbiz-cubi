<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="DashboardWidgetForm" Class="collab.announcement.form.AnnouncementViewForm"    FormType="List" jsClass="jbForm" Title="Announcement" Description="Total {@:m_TotalRecords} items" BizDataObj="collab.announcement.do.AnnouncementViewDO" PageSize="10" DefaultForm="Y" TemplateEngine="Smarty" TemplateFile="dashboard_widget_form.tpl.html " Access="collab_announcement.access">
    <DataPanel>
        <Element Name="fld_Id" Class="Hidden" Hidden="Y" FieldName="Id" Label="Id" Sortable="Y" AllowURLParam="N" Link="javascript:" />
        <Element Name="fld_read" Class="ColumnBool" 
				TrueImg="{RESOURCE_URL}/collab/announcement/images/icon_announcement_read.png"
				FalseImg="{RESOURCE_URL}/collab/announcement/images/icon_announcement_unread.gif" 
				FieldName="read_status" Label="Stat"  Sortable="N" AllowURLParam="N" Translatable="N" OnEventLog="N" Link="javascript:;">
			<EventHandler Name="fld_read_onclick" Event="onclick" Function="MarkAsRead({@:Elem[fld_Id].Value})"/>		
		</Element>	
        <Element Name="fld_title" Class="ColumnText" Style="{@:Elem[fld_read].Value==1?'':'font-weight:bold;'}" MaxLength="40"  FieldName="title" Label="Title"  Sortable="Y" AllowURLParam="N"  Link="{@home:url}/collab/announcement_view" Translatable="N" OnEventLog="N" >
        
        </Element>	
        <Element Name="fld_description" Class="ColumnText"  MaxLength="70" FieldName="description"  Label="Description"  Sortable="Y" AllowURLParam="N" Translatable="N" OnEventLog="N" />	        
        <Element Name="fld_color" Class="ColumnStyle" FieldName="type_color" Label="Type"  Sortable="Y" AllowURLParam="N" Translatable="N" OnEventLog="N" />
		<Element Name="fld_type" Class="ColumnText"  Style="line-height:24px;" FieldName="type_name" Label="Type"  Sortable="Y" AllowURLParam="N" Translatable="N" OnEventLog="N" />						        
    </DataPanel>
    <ActionPanel>
		<Element Name="btn_markread" Class="LabelText" text="&amp;nbsp;" CssClass="icon_list" Link="{@home:url}/collab/announcement_view"></Element> 
    </ActionPanel> 
    <NavPanel>    	
    </NavPanel> 
    <SearchPanel> 
    </SearchPanel>
</EasyForm>