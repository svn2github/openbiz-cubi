<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="AnnouncementEditAttachmentForm" Class="EasyForm" FormType="Edit" jsClass="jbForm" Icon="{RESOURCE_URL}/collab/announcement/images/icon_announcement.gif" Title="Edit Announcement Attachment" Description="This module could help you manage announcement attachments." BizDataObj="collab.announcement.do.AnnouncementDO" DefaultForm="Y" TemplateEngine="Smarty" TemplateFile="detail_elementset_adv.tpl" Access="collab_announcement.manage">
    <DataPanel>
		<Element Name="fld_Id" Hidden="Y" Class="LabelText" FieldName="Id" Label="Id" AllowURLParam="Y"/>
			<Element Name="fld_form_title"  Class="LabelText" FieldName="title" Label="" Width="500" style="font-size:24px;color:#333333;line-height:24px;" />	
			<Element Name="fld_color" Class="Hidden" Hidden="Y" FieldName="type_color" Label="Type"  Sortable="Y" AllowURLParam="N" Translatable="N" OnEventLog="N" />
			<Element Name="fld_form_description"  BackgroundColor="{@:Elem[fld_color].Value}" Width="648" Class="LabelText" FieldName="type_name" Label="" KeepCookie="Y" SelectFrom="collab.announcement.do.AnnouncementTypeDO[name:Id]" AllowURLParam="N" />
			
			<Element Name="fld_description" ElementSet="General"  Class="LabelTextarea" FieldName="description" Label="Description" />				   
			
		<Element Name="fld_related_attachment"   ElementSet="Attachment" Class="FormElement" FormReference="attachment.widget.AttachmentListEditForm" FieldName="" Label="" AllowURLParam="N" />

		
		
	    </DataPanel>
    <ActionPanel>  
        <Element Name="btn_save" Class="Button" Text="Save" CssClass="button_gray_m">
            <EventHandler Name="save_onclick" Event="onclick" EventLogMsg=""  Function="SwitchForm(collab.announcement.form.AnnouncementDetailForm,{@collab.announcement.do.AnnouncementDO:Field[Id].Value})"  ShortcutKey="Ctrl+Enter" ContextMenu="Save" />
        </Element>
        
        
        
        <Element Name="btn_cancel" Class="Button" Text="Cancel" CssClass="button_gray_m">
            <EventHandler Name="btn_cancel_onclick" Event="onclick" Function="SwitchForm()"  ShortcutKey="Escape" ContextMenu="Cancel" />
        </Element>    
        
        
            
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>