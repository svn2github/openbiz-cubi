<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="AnnouncementCopyForm" Class="EasyForm" Icon="{RESOURCE_URL}/collab/announcement/images/icon_announcement.gif" FormType="Copy" jsClass="jbForm" Title="Copy Announcement" Description="Copy announcement record from selected announcement" BizDataObj="collab.announcement.do.AnnouncementDO" PageSize="10" DefaultForm="Y" TemplateEngine="Smarty" TemplateFile="detail.tpl" EventName="BOOKMARK" MessageFile="Announcements.msg" Access="collab_announcement.manage">
    <DataPanel>
    <Element Name="fld_type_id" Class="collab.lib.TypeSelector" FieldName="type_id" Label="Type" KeepCookie="Y" SelectFrom="collab.announcement.do.AnnouncementTypeDO[name:Id:color]" AllowURLParam="N" />
     <Element Name="fld_title" Class="InputText" FieldName="title" Label="Title"   />	
    <Element Name="fld_description" Class="Textarea" FieldName="description" Label="Description" />		   				 
    <Element Name="fld_content" Class="CKEditor" mode="adv"  Config="resize_maxWidth:640,resize_minWidth:640,resize_minHeight:300" width="640" height="300" FieldName="content" Label="Content" />
	<Element Name="fld_sortorder" Class="Listbox" ElementSet="Miscellaneous" SelectFrom="common.lov.CommLOV(Order)" DefaultValue="50" FieldName="sortorder" Label="Ordering"  />	               
   
	</DataPanel>
    <ActionPanel>
        <Element Name="btn_save" Class="Button" Text="Save" CssClass="button_gray_m">
            <EventHandler Name="save_onclick" EventLogMsg="" Event="onclick" Function="InsertRecord()" RedirectPage="form=collab.announcement.form.AnnouncementDetailForm&amp;fld:Id={@collab.announcement.do.AnnouncementDO:Field[Id].Value}"  ShortcutKey="Ctrl+Enter" ContextMenu="Save" />
        </Element>
        <Element Name="btn_cancel" Class="Button" Text="Cancel" CssClass="button_gray_m">
            <EventHandler Name="cancel_onclick" Event="onclick" Function="SwitchForm()"  ShortcutKey="Escape" ContextMenu="Cancel"/>
        </Element>
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>
