<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="WorklogEditForm" Class="WorklogForm" Icon="{RESOURCE_URL}/collab/worklog/images/icon_worklog.gif" FormType="Edit" jsClass="jbForm" Title="Edit Work Log" Description="Please fill in below field to create a new work log. \n You can write work log for the tasks you had done at here." BizDataObj="collab.worklog.do.WorkLogDO" PageSize="10" DefaultForm="Y" TemplateEngine="Smarty" TemplateFile="detail.tpl"  Access="collab_worklog.access">
    <DataPanel>
    	<Element Name="fld_Id" Class="Hidden" FieldName="Id" Label="Id" AllowURLParam="Y" Translatable="N" OnEventLog="N" CssClass="input" CssErrorClass="input_error"/>
        <Element Name="fld_title" DefaultValue="New Work Log" Class="InputText" FieldName="title" Label="Title"   />	
        <Element Name="fld_worked_hours" Class="InputText"  DefaultValue="1" FieldName="worked_hours" Label="Hours" Description="Worked Hours" />
        <Element Name="fld_description" Class="Textarea" FieldName="description" Label="Description" />	
        	
    </DataPanel>
    <ActionPanel>
        <Element Name="btn_save" Class="Button" Text="Save" CssClass="button_gray_m">
            <EventHandler Name="save_onclick" EventLogMsg="" Event="onclick" Function="UpdateRecord()" RedirectPage="form=collab.worklog.form.WorklogDetailForm&amp;fld:Id={@collab.worklog.do.WorkLogDO:Field[Id].Value}"  ShortcutKey="Ctrl+Enter" ContextMenu="Save" />
        </Element>
        <Element Name="btn_cancel" Class="Button" Text="Cancel" CssClass="button_gray_m">
            <EventHandler Name="cancel_onclick" Event="onclick" Function="SwitchForm()"  ShortcutKey="Escape" ContextMenu="Cancel"/>
        </Element>
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>