<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="WorklogListDetailForm" Class="EasyForm" FormType="List" jsClass="jbForm" Icon="{RESOURCE_URL}/collab/worklog/images/icon_worklog.gif" Title="Work Log Management" Description="This module could help you manage worklogs. \n You can write work log for tasks or stand alone task." BizDataObj="collab.worklog.do.WorkLogDO"   PageSize="10" DefaultForm="Y" TemplateEngine="Smarty" TemplateFile="form_worklog_list.tpl.html"  Access="collab_worklog.access">
    <DataPanel>
        <Element Name="fld_Id" Class="Hidden" Hidden="Y" FieldName="Id" Label="Id" Sortable="Y" AllowURLParam="N" Link="javascript:" />
        <Element Name="fld_icon" Class="ColumnImage" 
				Text="{RESOURCE_URL}/collab/worklog/images/icon_worklog_private.png"
				FieldName="" Label="Type"  Sortable="N" AllowURLParam="N" Translatable="N" OnEventLog="N" Link="javascript:;">				
		</Element>
        <Element Name="fld_title" Class="ColumnText" FieldName="title" Label="Title"  Sortable="Y" AllowURLParam="N" Translatable="N" OnEventLog="N" Link="{APP_INDEX}/collab/worklog_detail/{@:Elem[fld_Id].Value}">         
         	<!-- <EventHandler Name="fld_Id_onclick" Event="onclick" Function="ParentSwitchForm(collab.worklog.form.WorklogDetailForm,{@:Elem[fld_Id].Value})"   /> -->
        </Element>
        <Element Name="fld_description"  Class="LabelTextarea" FieldName="description" Label="Description"  Sortable="Y" AllowURLParam="N" Translatable="N" OnEventLog="N" />
        <Element Name="fld_worked_hours" Class="ColumnBar" Width="120" Color="ff6600" DisplayUnit=" Hours" Style="width:195px" MaxValue="8" FieldName="worked_hours" Label="Worked Hours"  Sortable="Y" AllowURLParam="N" Translatable="N" OnEventLog="N" ></Element>		
        <Element Name="fld_create_time" Class="ColumnText" FieldName="create_time" Label="Create Time"  Sortable="Y" AllowURLParam="N" Translatable="N" OnEventLog="N" ></Element>
        <Element Name="fld_create_by" Class="ColumnText" FieldName="create_by" Label="Create By" Text="{BizSystem::GetProfileName(@:Elem[fld_create_by].Value)}"  Link="{APP_INDEX}/collab/contact_detail/{BizSystem::GetProfileId(@:Elem[fld_create_by].Value)}"AllowURLParam="N"/>
        
    </DataPanel>

</EasyForm>