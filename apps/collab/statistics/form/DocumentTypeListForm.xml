<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="DocumentTypeListForm" Class="StatisticsListForm" FormType="List"  jsClass="Openbiz.TableForm" Title="" BizDataObj="collab.statistics.do.DocumentTypeStatDO" TemplateEngine="Smarty" PageSize="10" TemplateFile="form_type_stat_grid.tpl.html" Access="collab_statistics.access">
    <DataPanel>
    	<Element Name="fld_share" Class="ColumnImage" 
				Text="{RESOURCE_URL}/contact/images/icon_contact_type_private.gif"
				FieldName="Id" Label="Icon"  Sortable="Y" AllowURLParam="N" Translatable="N" OnEventLog="N" >
		</Element>	    	
        <Element Name="fld_Id" Class="ColumnHidden" Hidden="Y" FieldName="Id" Label="Type ID"/>        
		<Element Name="fld_name" Class="ColumnText" FieldName="type_name" Label="Name"  Sortable="Y" AllowURLParam="N" Translatable="N" OnEventLog="N" Link="{APP_URL}/collab/document_manage" ></Element>        <Element Name="fld_description"  MaxLength="30"  Class="ColumnText" FieldName="type_description" Label="Description"  Sortable="Y" AllowURLParam="N" Translatable="N" OnEventLog="N" />
        <Element Name="fld_count" Class="ColumnText" FieldName="type_count" Label="Count" Text="{@:Elem[fld_count].Value} items" Sortable="Y" AllowURLParam="N" Translatable="N" OnEventLog="N" ></Element>
        <Element Name="fld_percent" Class="ColumnBar" Width="120" Color="{@:Elem[fld_color].Value}" DisplayUnit="%" Style="width:170px" MaxValue="100" FieldName="type_percent" Label="Percent"  Sortable="N" AllowURLParam="N" Translatable="N" OnEventLog="N" ></Element>
        
        
	
		<Element Name="fld_color" Class="ColumnStyle" FieldName="type_color" Label="Type"  Sortable="Y" AllowURLParam="N" Translatable="N" OnEventLog="N" />
		<Element Name="fld_type" Class="ColumnText"  Style="line-height:24px;" FieldName="type_name" Label="Color"  Sortable="Y" AllowURLParam="N" Translatable="N" OnEventLog="N" />						        
        
    </DataPanel>
<NavPanel>
    	<Element Name="page_selector" Class="PageSelector" Text="{@:m_CurrentPage}" Label="Go to Page" CssClass="input_select" cssFocusClass="input_select_focus">
            <EventHandler Name="btn_page_selector_onchange" Event="onchange" Function="GotoSelectedPage(page_selector)"/>
        </Element>
        <Element Name="pagesize_selector" Class="PagesizeSelector" Text="{@:m_Range}" Label="Show Rows" CssClass="input_select" cssFocusClass="input_select_focus">
            <EventHandler Name="btn_pagesize_selector_onchange" Event="onchange" Function="SetPageSize(pagesize_selector)"/>
        </Element>    
        <Element Name="btn_first" Class="Button" Enabled="{(@:m_CurrentPage == 1)?'N':'Y'}" Text="" CssClass="button_gray_navi {(@:m_CurrentPage == 1)?'first_gray':'first'}">
            <EventHandler Name="first_onclick" Event="onclick" Function="GotoPage(1)"/>
        </Element>
        <Element Name="btn_prev" Class="Button" Enabled="{(@:m_CurrentPage == 1)?'N':'Y'}" Text="" CssClass="button_gray_navi {(@:m_CurrentPage == 1)?'prev_gray':'prev'}">
            <EventHandler Name="prev_onclick" Event="onclick" Function="GotoPage({@:m_CurrentPage - 1})" ShortcutKey="Ctrl+Shift+Left"/>
        </Element>
        <Element Name="txt_page" Class="LabelText" Text="{'@:m_CurrentPage of @:m_TotalPages '}">
        </Element>
        <Element Name="btn_next" Class="Button" Enabled="{(@:m_CurrentPage == @:m_TotalPages )?'N':'Y'}" Text="" CssClass="button_gray_navi {(@:m_CurrentPage == @:m_TotalPages)?'next_gray':'next'}">
            <EventHandler Name="next_onclick" Event="onclick" Function="GotoPage({@:m_CurrentPage + 1})" ShortcutKey="Ctrl+Shift+Right"/>
        </Element>
        <Element Name="btn_last" Class="Button" Enabled="{(@:m_CurrentPage == @:m_TotalPages )?'N':'Y'}" Text="" CssClass="button_gray_navi {(@:m_CurrentPage == @:m_TotalPages)?'last_gray':'last'}">
            <EventHandler Name="last_onclick" Event="onclick" Function="GotoPage({@:m_TotalPages})"/>
        </Element>
    </NavPanel> 
    <SearchPanel>    	
    <!-- 
         <Element Name="qry_name"  Class="AutoSuggest" FuzzySearch="Y" SelectFrom="collab.statistics.do.DocumentTypeStatDO[type_name],[type_name] like '%{$_POST['qry_name']}%' GROUP BY [type_name]" FieldName="type_name" cssFocusClass="input_text_search_focus" CssClass="input_text_search"/>
        <Element Name="btn_dosearch" Class="Button" text="Go" CssClass="button_gray">
            <EventHandler Name="search_onclick" Event="onclick" Function="RunSearch()" ShortcutKey="Enter"/>
        </Element>
        -->   
    </SearchPanel>
</EasyForm>