<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="ProjectTypeCopyForm" Class="ProjectTypeForm"  Icon="{RESOURCE_URL}/collab/project/images/icon_project_type.png" FormType="Copy" jsClass="jbForm" Title="Copy Project Type" Description="Copy project type from an existing item." BizDataObj="collab.project.do.ProjectTypeDO" PageSize="10" DefaultForm="Y" TemplateEngine="Smarty" TemplateFile="detail.tpl" EventName="PROJECT_TYPE" MessageFile="ProjectType.msg" Access="collab_project.access">
    <DataPanel>        
        <Element Name="fld_Id" Class="Hidden" FieldName="Id" Label="Id" AllowURLParam="Y"/>	
	    <Element Name="fld_name" Class="InputText" FieldName="name" Label="Name"   />	
        <Element Name="fld_description" Class="Textarea" FieldName="description" Label="Description" />	
        <Element Name="fld_color_code" Class="ColorPicker" mode="" FieldName="color" Label="Color Code"  AllowURLParam="N" />
        <Element Name="fld_published" Class="Radio" SelectFrom="common.lov.CommLOV(Published)" DefaultValue="1" FieldName="published" Label="Published"  />	
        <Element Name="fld_sortorder" Class="Listbox" SelectFrom="common.lov.CommLOV(Order)" DefaultValue="50" FieldName="sortorder" Label="Ordering"  />
    </DataPanel>
    <ActionPanel>
        <Element Name="btn_save" Class="Button" Text="Save" CssClass="button_gray_m">
            <EventHandler Name="save_onclick" EventLogMsg="" Event="onclick" Function="InsertRecord()" RedirectPage="form=collab.project.form.ProjectTypeDetailForm&amp;fld:Id={@collab.project.do.ProjectTypeDO:Field[Id].Value}"  ShortcutKey="Ctrl+Enter" ContextMenu="Save" />
        </Element>
        <Element Name="btn_cancel" Class="Button" Text="Cancel" CssClass="button_gray_m">
            <EventHandler Name="cancel_onclick" Event="onclick" Function="SwitchForm()"  ShortcutKey="Escape" ContextMenu="Cancel"/>
        </Element>
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>