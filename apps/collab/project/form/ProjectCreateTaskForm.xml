<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="ProjectCreateTaskForm" Class="ProjectImportForm" ShowComment="N" FormType="Edit" jsClass="jbForm" Icon="{RESOURCE_URL}/collab/project/images/icon_project.png" Title="Project Tasks Import" Description="This module could help you manage project. You can put projects under a project." BizDataObj="collab.project.do.ProjectDO" PageSize="10" DefaultForm="Y" TemplateEngine="Smarty" TemplateFile="form_project_detail_view.tpl.html" EventName="Project" MessageFile="Project.msg" Access="collab_project.access">
    <DataPanel>
	    <Element Name="fld_Id" Hidden="Y" Class="LabelText" FieldName="Id" Label="Id" AllowURLParam="Y"/>
	       
		<Element Name="fld_form_title"  Class="LabelText"   FieldName="name" Label="" Width="500" style="font-size:24px;color:#333333;line-height:24px;" AllowURLParam="N" />
		<Element Name="fld_color" Class="Hidden" Hidden="Y" FieldName="type_color" Label="Type"  Sortable="Y" AllowURLParam="N" Translatable="N" OnEventLog="N" />
		<Element Name="fld_form_description"  BackgroundColor="{@:Elem[fld_color].Value}" Width="648" Class="LabelText" FieldName="type_name" Label="" KeepCookie="Y" SelectFrom="collab.project.do.ProjectTypeDO[name:Id:color]" AllowURLParam="N" />		
		
		<Element Name="fld_budget" ElementSet="General" width="200" Class="LabelText"  Text="$ {@:Elem[fld_budget].Value} Dollars"  FieldName="budget_cost" Label="Budget"  AllowURLParam="N" />
		<Element Name="fld_spend_progress" Color="ffAA00" ElementSet="General" Class="LabelBar" Width="300" height="14"  DisplayUnit="%" MaxValue="100" FieldName="cost_spend_bar" Label="Expenses"  AllowURLParam="N" />
		<Element Name="fld_starttime" ElementSet="General" Class="LabelText" FieldName="start_time" Label="Start Time" AllowURLParam="N" />
		<Element Name="fld_status" ElementSet="General" Class="LabelList" FieldName="status" Label="Status" SelectFrom="collab.project.lov.ProjectLOV(ProjectStatus)" AllowURLParam="N" />		
		<Element Name="fld_priority_value" Class="Hidden" Hidden="Y" FieldName="priority"  />		
		<Element Name="fld_priority" ElementSet="General"  Class="LabelImage" Text="{RESOURCE_URL}/collab/project/images/icon_project_status_{@:Elem[fld_priority_value].Value}.png" FieldName="" Sortable="Y" Label="Priority" Link="javascript:;">
			<EventHandler Name="fld_dallday_onclick" Event="onclick" Function="UpdateFieldValueAdd({@:Elem[fld_Id].Value},fld_priority_value,{@:Elem[fld_priority_value].Value},0,2)"/>		
		</Element>
		<Element Name="fld_description" ElementSet="General" Class="LabelTextarea" FieldName="description" Label="Description"  AllowURLParam="N" />
		
		<Element Name="fld_use_template"   ElementSet="Import Tasks" Class="Listbox" SelectFrom="collab.project.lov.ProjectLOV(UseTemplate)" FieldName="use_template" Label="Use Template" AllowURLParam="N" >
			<EventHandler Name="fld_use_template_onchange" Event="onchange" Function="UpdateForm()"/>
		</Element>
		<Element Name="fld_shortname" Hidden="{@:Elem[fld_use_template].Value=='1'?'N':'Y'}" width="203" ElementSet="Import Tasks" Class="InputText" FieldName="shortname" Label="Task Prefix"  Description="Will add this prefix to new tasks" AllowURLParam="N" CssClass="input_text" CssErrorClass="input_text_error" CssFocusClass="input_text_focus"/>						
		
		<Element Name="fld_tasks"  Hidden="{@:Elem[fld_use_template].Value=='1'?'N':'Y'}" ElementSet="Import Tasks" Class="FormElement" RenameElementSet="N" FormReference="collab.project.widget.ProjectTemplateListForm" FieldName="" Label="" AllowURLParam="N" />
			        
    </DataPanel>
    <ActionPanel>
        <Element Name="btn_save"  Hidden="{@:Elem[fld_use_template].Value=='1'?'N':'Y'}" Class="Button" Text="Create Tasks" CssClass="button_gray_w">
            <EventHandler Name="save_onclick" Event="onclick" EventLogMsg=""  Function="ImportTasks()"  RedirectPage="form=collab.project.form.ProjectDetailForm&amp;fld:Id={@collab.project.do.ProjectDO:Field[Id].Value}" />
        </Element>
		<Element Name="btn_spacer" Hidden="{@:Elem[fld_use_template].Value=='1'?'N':'Y'}" Class="Spacer" width="10" />
		<Element Name="btn_skip" Class="Button" Text="Skip" CssClass="button_gray_m">
            <EventHandler Name="btn_cancel_onclick" Event="onclick" Function="SwitchForm(collab.project.form.ProjectDetailForm,{@collab.project.do.ProjectDO:Field[Id].Value})"  />
        </Element> 
        <Element Name="btn_cancel" Class="Button" Text="Cancel" CssClass="button_gray_m">
            <EventHandler Name="btn_cancel_onclick" Event="onclick" Function="SwitchForm()"  ShortcutKey="Escape" ContextMenu="Cancel" />
        </Element>     
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>