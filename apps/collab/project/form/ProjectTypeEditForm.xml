<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="ProjectTypeEditForm" Class="ProjectTypeForm" Icon="{RESOURCE_URL}/collab/project/images/icon_project_type.png"  FormType="Edit" jsClass="jbForm" Title="Edit Project Type" Description="Edit selected project type item." BizDataObj="collab.project.do.ProjectTypeDO" DefaultForm="Y" TemplateEngine="Smarty" TemplateFile="detail.tpl" EventName="PROJECT_TYPE" MessageFile="ProjectType.msg" Access="collab_project.access">
