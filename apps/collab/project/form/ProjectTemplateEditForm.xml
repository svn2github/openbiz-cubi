<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="ProjectTemplateEditForm" Class="ProjectTemplateForm" Icon="{RESOURCE_URL}/collab/project/images/icon_project_template.png"  FormType="Edit" jsClass="jbForm" Title="Edit Project Template" Description="Edit selected project type item." BizDataObj="collab.project.do.ProjectTemplateDO" DefaultForm="Y" TemplateEngine="Smarty" TemplateFile="detail.tpl" EventName="PROJECT_TYPE" MessageFile="ProjectTemplate.msg" Access="collab_project.access">
    <DataPanel>
		<Element Name="fld_Id" Class="Hidden" FieldName="Id" Label="Id" AllowURLParam="Y" Translatable="N" OnEventLog="N" CssClass="input" CssErrorClass="input_error"/>
		<Element Name="fld_type_id" ElementSet="General" Class="collab.lib.TypeSelector" FieldName="type_id" Label="Type" KeepCookie="Y" SelectFrom="collab.project.do.ProjectTypeDO[name:Id:color]" AllowURLParam="N" />
		<Element Name="fld_name" Class="InputText" FieldName="name" Label="Name"   />	
        <Element Name="fld_description" Class="Textarea" FieldName="description" Label="Description" />
        <Element Name="fld_sortorder" Class="Listbox" SelectFrom="common.lov.CommLOV(Order)" DefaultValue="50" FieldName="sortorder" Label="Ordering"  />	        
    </DataPanel>
    <ActionPanel>
        <Element Name="btn_save" Class="Button" Text="Save" CssClass="button_gray_m">
            <EventHandler Name="save_onclick" Event="onclick" EventLogMsg=""  Function="UpdateRecord()" RedirectPage="form=collab.project.form.ProjectTemplateDetailForm&amp;fld:Id={@collab.project.do.ProjectTemplateDO:Field[Id].Value}" ShortcutKey="Ctrl+Enter" ContextMenu="Save" />
        </Element>
        <Element Name="btn_cancel" Class="Button" Text="Cancel" CssClass="button_gray_m">
            <EventHandler Name="btn_cancel_onclick" Event="onclick" Function="SwitchForm()"  ShortcutKey="Escape" ContextMenu="Cancel" />
        </Element>
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>