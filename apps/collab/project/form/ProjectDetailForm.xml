       	<Element Name="fld_related_projects" TabSet="Related Data"   ElementSet="Project" Class="FormElement" FormReference="collab.project.widget.ProjectListRelatedForm" FieldName="" Label="" AllowURLParam="N" />
	    <Element Name="btn_manage_related" TabSet="Related Data" Hidden="{@:m_CanUpdateRecord=='1'?'N':'Y'}" ElementSet="Project" Style="color:#666666;margin-left:5px;margin-top:2px;"  Class="Button" Text="Manage" CssClass="button_gray_w" Description="">
			<EventHandler Name="btn_manage_related_onclick" Event="onclick" Function="SwitchForm(collab.project.form.ProjectEditRelatedForm,{@:Elem[fld_Id].Value})"   />
       	</Element>
       

        
		<Element Name="fld_related_events"  TabSet="Related Data"  Access="collab_calendar.access"  ElementSet="Event" Class="FormElement" FormReference="collab.calendar.widget.EventListDetailForm" FieldName="" Label="" AllowURLParam="N" />
		<Element Name="btn_manage_event"  TabSet="Related Data" Access="collab_calendar.access" Hidden="{@:m_CanUpdateRecord=='1'?'N':'Y'}" ElementSet="Event" Style="color:#666666;margin-left:5px;margin-top:2px;" Class="Button" Text="Manage" CssClass="button_gray_w" Description="">
			<EventHandler Name="btn_manage_evnt_onclick" Event="onclick" Function="SwitchForm(collab.project.form.ProjectEditEventForm,{@:Elem[fld_Id].Value})"  />
        </Element> 
        
        <Element Name="fld_related_docs"  TabSet="Related Data"  Access="collab_document.access"  ElementSet="Document" Class="FormElement" FormReference="collab.document.widget.DocumentListDetailForm" FieldName="" Label="" AllowURLParam="N" />
