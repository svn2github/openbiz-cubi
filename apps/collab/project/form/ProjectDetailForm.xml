<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="ProjectDetailForm" Class="ProjectForm" FormType="Detail" jsClass="jbForm" Icon="{RESOURCE_URL}/collab/project/images/icon_project.png" Title="Project Detail" Description="The information of the project's budget, start time and so on." BizDataObj="collab.project.do.ProjectDO" PageSize="10" DefaultForm="Y" TemplateEngine="Smarty" TemplateFile="form_project_detail_view_tabs.tpl.html" EventName="Project" MessageFile="Project.msg" Access="collab_project.access">
    <DataPanel>
	    <Element Name="fld_Id" Hidden="Y" Class="LabelText" FieldName="Id" Label="Id" AllowURLParam="Y"/>
	       
