			<EventHandler Name="btn_manage_evnt_onclick" Event="onclick" Function="SwitchForm(collab.project.form.ProjectEditDocumentForm,{@:Elem[fld_Id].Value})"  />
        </Element> 
		
		<Element Name="fld_related_contacts"  TabSet="Related Data" Access="contact.access"  ElementSet="Contact" Class="FormElement" FormReference="contact.widget.ContactListDetailForm" FieldName="" Label="" AllowURLParam="N" />
		    	
		<Element Name="btn_manage_contact"  TabSet="Related Data" Access="contact.access" Hidden="{@:m_CanUpdateRecord=='1'?'N':'Y'}" ElementSet="Contact" Style="color:#666666;margin-left:5px;margin-top:2px;" Class="Button" Text="Manage" CssClass="button_gray_w" Description="">
			<EventHandler Name="btn_manage_contact_onclick" Event="onclick" Function="SwitchForm(collab.project.form.ProjectEditContactForm,{@:Elem[fld_Id].Value})" />
