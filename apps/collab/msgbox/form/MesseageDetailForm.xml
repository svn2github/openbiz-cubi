		        <Element Name="fld_content" Class="LabelText" FieldName="content" Label="Content" AllowURLParam="N"/>
		        <Element Name="fld_fusername" Class="LabelText" FieldName="fusername" Label="From ..." AllowURLParam="N"/>
		        <Element Name="fld_to" Class="LabelText" FieldName="to" Label="To ..." AllowURLParam="N"/>
		        
				<Element Name="fld_contact" Class="LabelText" FieldName="contact" Label="Cc ..." AllowURLParam="N"/>
		        
				<Element Name="fld_status" Class="LabelText" FieldName="status" Label="Status" AllowURLParam="N"/>
