<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="MesseageDetailForm" Class="MesseageForm" FormType="" jsClass="jbForm" Title="Details of messeage" Description="" BizDataObj="collab.msgbox.do.MesseageDO" DefaultForm="Y" TemplateEngine="Smarty" TemplateFile="detail.tpl" EventName="MESSEAGE" MessageFile="Messeage.msg">
