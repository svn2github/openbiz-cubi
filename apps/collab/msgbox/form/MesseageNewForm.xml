<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="MesseageNewForm" Class="MesseageForm" FormType="New" jsClass="jbForm" Title="New messeage" Description="" BizDataObj="collab.msgbox.do.MesseageDO" PageSize="10" DefaultForm="Y" TemplateEngine="Smarty" TemplateFile="detail.tpl" EventName="MESSEAGE" MessageFile="Messeage.msg">
    <DataPanel>
	        
		<Element Name="fld_to_userid" Class="Hidden" FieldName="to_userid" Label="To" ElementSet="Contact"/>
		<Element Name="fld_to" Class="InputPicker" FieldName="to" Label="To ..." ValuePicker="system.form.UserPickForm" PickerMap="fld_to_userid:fld_Id,fld_to:fld_username"/>
		
		<Element Name="fld_cc" Class="Hidden" FieldName="cc" Label="Cc" ElementSet="Contact"/>
		<Element Name="fld_contact" Class="InputPicker" FieldName="contact" Label="Cc ..." ValuePicker="system.form.UserPickForm" PickerMap="fld_cc:fld_Id,fld_contact:fld_username"/>
		
		
		<Element Name="fld_subject" Class="InputText" FieldName="subject" Label="Subject"  AllowURLParam="N" CssClass="input_text" CssErrorClass="input_text_error" CssFocusClass="input_text_focus"/>

		<Element Name="fld_annex" Class="FileUploader" FieldName="annex" Label="Annex"  AllowURLParam="N" />
    	        
        <Element Name="fld_content" Class="CKEditor"  mode="adv"  Config="resize_maxWidth:640,resize_minWidth:640,resize_minHeight:300" width="640" height="300" FieldName="content" Label="Content"  Sortable="Y" AllowURLParam="N" Translatable="N" OnEventLog="N"  />
     
        <Element Name="fld_status" Class="Hidden" FieldName="status" Label="Status"  AllowURLParam="N" CssClass="input_text" CssErrorClass="input_text_error" CssFocusClass="input_text_focus"/>
    	
		<Element Name="fld_is_read" Class="Hidden" FieldName="is_read" Label="IsRead"  AllowURLParam="N" CssClass="input_text" CssErrorClass="input_text_error" CssFocusClass="input_text_focus"/>
        
		<Element Name="fld_sortorder" Class="Listbox" ElementSet="Miscellaneous" SelectFrom="common.lov.CommLOV(Order)" DefaultValue="50" FieldName="sortorder" Label="Ordering"  />
    	
        </DataPanel>
    <ActionPanel>
        <Element Name="btn_save" Class="Button" Text="Save" CssClass="button_gray_m">
            <EventHandler Name="save_onclick" EventLogMsg="" Event="onclick" Function="InsertRecord()" RedirectPage="form=messeage.form.MesseageDetailForm&amp;fld:Id={@collab.msgbox.do.MesseageDO:Field[Id].Value}"  ShortcutKey="Ctrl+Enter" ContextMenu="Save" />
        </Element>

		<Element Name="btn_send" Class="Button" Text="Send" CssClass="button_gray_m">
            <EventHandler Name="send_onclick" EventLogMsg="" Event="onclick" Function="SendItems()" RedirectPage="form=messeage.form.MesseageDetailForm&amp;fld:Id={@collab.msgbox.do.MesseageDO:Field[Id].Value}"  ShortcutKey="Ctrl+S" ContextMenu="Send" />
        </Element>

        <Element Name="btn_cancel" Class="Button" Text="Cancel" CssClass="button_gray_m">
            <EventHandler Name="cancel_onclick" Event="onclick" Function="SwitchForm()"  ShortcutKey="Escape" ContextMenu="Cancel"/>
        </Element>
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>