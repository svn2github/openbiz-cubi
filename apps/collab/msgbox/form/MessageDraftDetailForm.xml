<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="MessageDraftDetailForm" Class="MessageDraftEditForm"  Icon="{RESOURCE_URL}/collab/message/images/icon_message_outbox.png"  FormType="Detail" jsClass="jbForm" Title="Message Detail" Description="You can review the message." BizDataObj="collab.msgbox.do.MessageDraftDO" PageSize="10" DefaultForm="Y" TemplateEngine="Smarty" TemplateFile="detail_elementset_adv.tpl"  MessageFile="Message.msg" Access="collab_msgbox.access">
    <DataPanel>
			<Element Name="fld_Id" Hidden="Y" Class="LabelText" FieldName="Id" Label="Id" AllowURLParam="Y"/>
			<Element Name="fld_form_title"  Class="LabelText" FieldName="subject" Label="" Width="500" style="font-size:24px;color:#333333;line-height:24px;" />	
			<Element Name="fld_color" Class="Hidden" Hidden="Y" FieldName="type_color" Label="Type"  Sortable="Y" AllowURLParam="N" Translatable="N" OnEventLog="N" />
			<Element Name="fld_form_description"  BackgroundColor="{@:Elem[fld_color].Value}" Width="648" Class="LabelText" FieldName="send_status_display" Label="" KeepCookie="Y" SelectFrom="" AllowURLParam="N" />
			
			<Element Name="fld_recipient_to" ElementSet="General"  Class="LabelText" FieldName="recipient_to" Label="Recipient To" Description="Select message recipients from contact list" />
			<Element Name="fld_recipient_cc" ElementSet="General"  Class="LabelText" FieldName="recipient_cc" Label="Recipient CC" Description="Contacts can also get this message" />
			<Element Name="fld_recipient_bcc" ElementSet="General"  Class="LabelText" FieldName="recipient_bcc" Label="Recipient BCC" Description="Contacts are invisible for other recipients"  />
			
			<Element Name="fld_description" ElementSet="General"  Class="HTMLPreview" Height="400"  FieldName="content" Label="Content" />				   
	        	
	        	
	        <Element Name="fld_related_attachment"   ElementSet="Attachment" Class="FormElement" FormReference="attachment.widget.AttachmentListDetailForm" FieldName="" Label="" AllowURLParam="N" />
	        		    
			<Element Name="fld_create_by" Class="LabelText" ElementSet="Miscellaneous" FieldName="create_by" Label="Create By" Text="{BizSystem::GetProfileName(@:Elem[fld_create_by].Value)}" AllowURLParam="N"/>		        
			<Element Name="fld_create_time" Class="LabelText" ElementSet="Miscellaneous" FieldName="create_time" Label="Create Time" AllowURLParam="N"/>		        
			<Element Name="fld_update_by" Class="LabelText" ElementSet="Miscellaneous" FieldName="update_by" Label="Update By"  Text="{BizSystem::GetProfileName(@:Elem[fld_update_by].Value)}" AllowURLParam="N"/>		        
			<Element Name="fld_update_time" Class="LabelText" ElementSet="Miscellaneous" FieldName="update_time" Label="Update Time" AllowURLParam="N"/>
        
        	
    </DataPanel>
    <ActionPanel>

        <Element Name="btn_send" Class="Button" Text="Send Now" CssClass="button_gray_w">
            <EventHandler Name="save_onclick" EventLogMsg="" Event="onclick" Function="SendMessage()" RedirectPage="form=collab.msgbox.form.MessageSentDetailForm&amp;fld:Id={@:Field[Id].Value}"  ShortcutKey="Ctrl+Enter" ContextMenu="Send Now" />
        </Element>
        <Element Name="btn_edit" Class="Button" Text="Edit" CssClass="button_gray_m" >
            <EventHandler Name="del_onclick" Event="onclick" EventLogMsg="" Function="EditRecord({@:Elem[fld_Id].Value})"  RedirectPage="form=collab.msgbox.form.MessageDraftEditForm"  />
        </Element>
        <Element Name="btn_delete" Class="Button" Text="Delete" CssClass="button_gray_m" Description="delete record (Delete)">
            <EventHandler Name="del_onclick" Event="onclick" EventLogMsg="" Function="DeleteRecord({@:Elem[fld_Id].Value})"  RedirectPage="form=collab.msgbox.form.MessageDraftListForm" ShortcutKey="Ctrl+Delete" ContextMenu="Delete" />
        </Element>
         <Element Name="btn_spacer" Class="Spacer" width="10" />
        <Element Name="btn_cancel" Class="Button" Text="Back" CssClass="button_gray_m">
            <EventHandler Name="btn_cancel_onclick" Event="onclick" Function="SwitchForm()"  ShortcutKey="Escape" ContextMenu="Cancel" />
        </Element>    
              
    </ActionPanel> 
    <NavPanel>    	
    </NavPanel> 
    <SearchPanel>    	
    </SearchPanel>
</EasyForm>