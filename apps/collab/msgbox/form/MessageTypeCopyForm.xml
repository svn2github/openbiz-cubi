<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="MessageTypeCopyForm" Class="MessageTypeForm"  Icon="{RESOURCE_URL}/collab/calendar/images/icon_event_type.png" FormType="Copy" jsClass="jbForm" Title="Copy Message Type" Description="Copy message type from an existing item." BizDataObj="collab.msgbox.do.MessageTypeDO" PageSize="10" DefaultForm="Y" TemplateEngine="Smarty" TemplateFile="detail.tpl" EventName="NOTE_TYPE" MessageFile="MessageType.msg" Access="collab_msgbox.access">
