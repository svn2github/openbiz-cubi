<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="MessageInboxListForm" Class="MessageInboxListForm"  Icon="{RESOURCE_URL}/collab/message/images/icon_message_inbox.png"  FormType="List" jsClass="jbForm" Title="Message Inbox" Description="You can receive messages in this form." BizDataObj="collab.msgbox.do.MessageReceivedDO" PageSize="10" DefaultForm="Y" TemplateEngine="Smarty" TemplateFile="form_inbox_grid.tpl.html"  MessageFile="Message.msg" Access="collab_msgbox.access">
    <DataPanel>
        <Element Name="row_selections" Class="RowCheckbox"  Label="" FieldName="Id"/>
        <Element Name="fld_Id" Class="Hidden" Hidden="Y" FieldName="Id" Label="Id" Sortable="Y" AllowURLParam="N" />
        <Element Name="fld_message_id" Class="Hidden" Hidden="Y" FieldName="message_id" Label="Id" Sortable="Y" AllowURLParam="N" />
        <Element Name="fld_read_status" Class="Hidden" Hidden="Y" FieldName="read_status" Label="Id" Sortable="Y" AllowURLParam="N" />
        
        <Element Name="fld_status" Class="collab.msgbox.element.MessageReadStatus" 
				ReadImg="{RESOURCE_URL}/collab/message/images/icon_message_read.png"
				UnreadImg="{RESOURCE_URL}/collab/message/images/icon_message_unread.png"
				RepliedImg="{RESOURCE_URL}/collab/message/images/icon_message_replied.png"
				FieldName="read_status" Label="Status"  Sortable="Y" AllowURLParam="N" Translatable="N" OnEventLog="N" Link="javascript:;">
				<EventHandler Name="fld_status_onclick" Event="onclick" Function="SwitchForm(collab.msgbox.form.MessageReceivedDetailForm,{@:Elem[fld_message_id].Value})" />				
		</Element>	
		<Element Name="fld_importance" Class="ColumnBool" 
			 TrueImg="{RESOURCE_URL}/collab/message/images/icon_message_importance_yes.png" 
			 FalseImg="{RESOURCE_URL}/collab/message/images/icon_message_importance_no.png" FieldName="importance" Sortable="Y" Label="Flag" Link="javascript:;">
			<EventHandler Name="fld_importance_onclick" Event="onclick" Function="UpdateFieldValueXor({@:Elem[fld_Id].Value},fld_importance,{@:Elem[fld_importance].Value})"/>		
		</Element>
		<Element Name="fld_receive_type" Class="ColumnText"  FieldName="type"   Label="Type"  Sortable="Y" AllowURLParam="N" Translatable="N" OnEventLog="N" />
		<Element Name="fld_sender" Class="ColumnText"  FieldName="display_name"  Label="Form"  Sortable="N" AllowURLParam="N" Translatable="N" OnEventLog="N" /> 
        <Element Name="fld_subject" Class="ColumnText" Style="{@:Elem[fld_read_status].Value=='Unread'?'font-weight:bold;':''}" MaxLength="30"  FieldName="subject" Label="Subject"  Sortable="Y" AllowURLParam="N"  Link="javascript:" Translatable="N" OnEventLog="N" >
        	<EventHandler Name="fld_subject_onclick" Event="onclick" Function="SwitchForm(collab.msgbox.form.MessageReceivedDetailForm,{@:Elem[fld_message_id].Value})" />
        </Element>	
        <Element Name="fld_att" Class="ColumnBool" 
				TrueImg="{RESOURCE_URL}/collab/message/images/icon_message_attachment_on.png"
				FalseImg="{RESOURCE_URL}/collab/message/images/icon_message_attachment_off.png"
				FieldName="attachment" Label="Att"  Sortable="Y" AllowURLParam="N" Translatable="N" OnEventLog="N" >				
		</Element>
		<Element Name="fld_timestamp" Class="ColumnText"  FieldName="sent_time" Label="Sent Time"  Sortable="Y" AllowURLParam="N" Translatable="N" OnEventLog="N" />						        
        <Element Name="fld_color" Class="ColumnStyle" FieldName="type_color" Label="Type"  Sortable="Y" AllowURLParam="N" Translatable="N" OnEventLog="N" />
		<Element Name="fld_type" Class="ColumnText"  Style="line-height:24px;" FieldName="type_name" Label="Type"  Sortable="Y" AllowURLParam="N" Translatable="N" OnEventLog="N" />						        
        
    </DataPanel>
    <ActionPanel>
     	<Element Name="lnk_reply" Class="Button" Text="Reply" CssClass="button_gray_w" Description="Forward Message (Ctrl+R)" >
            <EventHandler Name="lnk_new_onclick" Event="onclick" EventLogMsg="" Function="ReplyMessage(collab.msgbox.form.MessageDraftEditForm)"  ShortcutKey="Ctrl+R" ContextMenu="Reply"/>
        </Element> 
        <Element Name="lnk_new" Class="Button" Text="Forward" CssClass="button_gray_w" Description="Forward Message (Ctrl+F)" >
            <EventHandler Name="lnk_new_onclick" Event="onclick" EventLogMsg="" Function="ForwardMessage(collab.msgbox.form.MessageDraftEditForm)"  ShortcutKey="Ctrl+F" ContextMenu="Forward"/>
        </Element> 
         <Element Name="btn_spacer" Class="Spacer" width="10" />
        <Element Name="btn_delete" Class="Button" Text="Delete" CssClass="button_gray_m" >
            <EventHandler Name="del_onclick" Event="onclick" EventLogMsg="" Function="DeleteReceivedMessage()" ShortcutKey="Ctrl+Delete" ContextMenu="Delete"/>
        </Element>        
         <Element Name="btn_type" Class="Button" Text="Type" CssClass="button_gray_m" >
            <EventHandler Name="type_onclick" Event="onclick" EventLogMsg="" Function="ChangeMessageType(collab.msgbox.form.MessageChangeTypeForm)" />
        </Element>       
    </ActionPanel> 
    <NavPanel>
    	<Element Name="page_selector" Class="PageSelector" Text="{@:m_CurrentPage}" Label="Go to Page" CssClass="input_select" cssFocusClass="input_select_focus">
            <EventHandler Name="btn_page_selector_onchange" Event="onchange" Function="GotoSelectedPage(page_selector)"/>
        </Element>
        <Element Name="pagesize_selector" Class="PagesizeSelector" Text="{@:m_Range}" Label="Show Rows" CssClass="input_select" cssFocusClass="input_select_focus">
            <EventHandler Name="btn_pagesize_selector_onchange" Event="onchange" Function="SetPageSize(pagesize_selector)"/>
        </Element>    
        <Element Name="btn_first" Class="Button" Enabled="{(@:m_CurrentPage == 1)?'N':'Y'}" Text="" CssClass="button_gray_navi {(@:m_CurrentPage == 1)?'first_gray':'first'}">
            <EventHandler Name="first_onclick" Event="onclick" Function="GotoPage(1)"/>
        </Element>
        <Element Name="btn_prev" Class="Button" Enabled="{(@:m_CurrentPage == 1)?'N':'Y'}" Text="" CssClass="button_gray_navi {(@:m_CurrentPage == 1)?'prev_gray':'prev'}">
            <EventHandler Name="prev_onclick" Event="onclick" Function="GotoPage({@:m_CurrentPage - 1})" ShortcutKey="Ctrl+Shift+Left"/>
        </Element>
        <Element Name="txt_page" Class="LabelText" Text="{'@:m_CurrentPage of @:m_TotalPages '}">
        </Element>
        <Element Name="btn_next" Class="Button" Enabled="{(@:m_CurrentPage == @:m_TotalPages )?'N':'Y'}" Text="" CssClass="button_gray_navi {(@:m_CurrentPage == @:m_TotalPages)?'next_gray':'next'}">
            <EventHandler Name="next_onclick" Event="onclick" Function="GotoPage({@:m_CurrentPage + 1})" ShortcutKey="Ctrl+Shift+Right"/>
        </Element>
        <Element Name="btn_last" Class="Button" Enabled="{(@:m_CurrentPage == @:m_TotalPages )?'N':'Y'}" Text="" CssClass="button_gray_navi {(@:m_CurrentPage == @:m_TotalPages)?'last_gray':'last'}">
            <EventHandler Name="last_onclick" Event="onclick" Function="GotoPage({@:m_TotalPages})"/>
        </Element>
    </NavPanel> 
    <SearchPanel>
    	<Element Name="type_selector"  BlankOption="All Types" cssclass="input_select_m" Class="collab.lib.TypeSelector" FieldName="type_id" Label="" SelectFrom="collab.msgbox.do.MessageTypeDO[name:Id:color]" >
            <EventHandler Name="type_selector_onchange" Event="onchange" Function="RunSearch()"/>
        </Element> 
         <Element Name="qry_name"  Class="AutoSuggest" FuzzySearch="Y" SelectFrom="collab.msgbox.do.MessageReceivedDO[subject],[subject] like '%{$_POST['qry_name']}%' GROUP BY [subject]" FieldName="subject" cssFocusClass="input_text_search_focus" CssClass="input_text_search"/>
        <Element Name="btn_dosearch" Class="Button" text="Go" CssClass="button_gray">
            <EventHandler Name="search_onclick" Event="onclick" Function="RunSearch()" ShortcutKey="Enter"/>
        </Element>   
    </SearchPanel>
</EasyForm>