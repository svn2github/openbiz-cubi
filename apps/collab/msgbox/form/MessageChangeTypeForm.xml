<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="MessageChangeTypeForm" Class="MessageChangeTypeForm" Icon="{RESOURCE_URL}/collab/calendar/images/icon_event_type.png"  FormType="Edit" jsClass="jbForm" Title="Change Message Type" Description="Change selected message to a new type." BizDataObj="" DefaultForm="Y" TemplateEngine="Smarty" TemplateFile="detail.tpl" EventName="NOTE_TYPE" MessageFile="Message.msg" Access="collab_msgbox.access">
    <DataPanel>
    	<Element Name="type_selector"  cssclass="input_select_m" Class="collab.lib.TypeSelector" FieldName="type_id" Label="Message Type" SelectFrom="collab.msgbox.do.MessageTypeDO[name:Id:color]" >
            <EventHandler Name="type_selector_onchange" Event="onchange" Function="UpdateForm()"/>
        </Element> 
		<Element Name="fld_name" Class="LabelText" FieldName="name" Label="Name"   />	
        <Element Name="fld_description" Class="LabelTextarea" FieldName="description" Label="Description" />	
    </DataPanel>
    <ActionPanel>
        <Element Name="btn_save" Class="Button" Text="Change" CssClass="button_gray_w">
            <EventHandler Name="save_onclick" Event="onclick" EventLogMsg=""  Function="ChangeMessageType()" RedirectPage="form=collab.msgbox.form.MessageInboxListForm" ShortcutKey="Ctrl+Enter" ContextMenu="Save" />
        </Element>
        <Element Name="btn_spacer" Class="Spacer" width="10" />
        <Element Name="btn_cancel" Class="Button" Text="Cancel" CssClass="button_gray_m">
            <EventHandler Name="btn_cancel_onclick" Event="onclick" Function="SwitchForm()"  ShortcutKey="Escape" ContextMenu="Cancel" />
        </Element>
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>