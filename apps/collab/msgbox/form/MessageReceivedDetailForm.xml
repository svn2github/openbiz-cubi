<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="MessageReceivedDetailForm" Class="MessageReceivedForm"  Icon="{RESOURCE_URL}/collab/message/images/icon_message_list.png"  FormType="Detail" jsClass="jbForm" Title="Recevied Message Detail" Description="You can review the received message." BizDataObj="collab.msgbox.do.MessageReadDO" PageSize="10" DefaultForm="Y" TemplateEngine="Smarty" TemplateFile="recevied_message_detail.tpl.html"  MessageFile="Message.msg" Access="collab_msgbox.access">
    <DataPanel>
			<Element Name="fld_Id" Hidden="Y" Class="LabelText" FieldName="Id" Label="Id" AllowURLParam="Y"/>
			<Element Name="fld_form_title"  Class="LabelText" FieldName="subject" Label="" Width="500" style="font-size:24px;line-height:24px;" />	
			<Element Name="fld_color" Class="Hidden" Hidden="Y" FieldName="type_color" Label="Type"  Sortable="Y" AllowURLParam="N" Translatable="N" OnEventLog="N" />
			<Element Name="fld_form_description"  BackgroundColor="{@:Elem[fld_color].Value}" Width="648" Class="LabelText" FieldName="type_name" Label="" KeepCookie="Y" SelectFrom="" AllowURLParam="N" />
			
			<Element Name="fld_sender" ElementSet="General"  Class="LabelText" FieldName="display_name" Label="Send From" Description="" />
			<Element Name="fld_sender_pic" ElementSet="General"  Class="RawData" FieldName="sender_photo" Label="Send From" Description="" />
			<Element Name="fld_sender_position" ElementSet="General"  Class="RawData" FieldName="sender_position" Label="Position" Description="" />
			<Element Name="fld_send_time" ElementSet="General"  Class="LabelText" FieldName="update_time" Label="Received Time" Description="" />
			
			<Element Name="fld_recipient_to" ElementSet="General"  Class="LabelText" FieldName="recipient_to" Label="Send To" Description="Select message recipients from contact list" />
			<Element Name="fld_recipient_cc" ElementSet="General"  Class="LabelText" FieldName="recipient_cc" Label="Send CC" Description="Contacts can also get this message" />
			
			<Element Name="fld_description" ElementSet="General"  Class="HTMLPreview" Height="400"  FieldName="content" Label="Content" />				   
	        	
	        	
	        <Element Name="fld_related_attachment"   ElementSet="Attachment" Class="FormElement" FormReference="attachment.widget.AttachmentListDetailForm" FieldName="" Label="" AllowURLParam="N" />
	        <Element Name="fld_readlog"   ElementSet="View Log" Class="FormElement" FormReference="collab.msgbox.form.MessageReadLogForm" FieldName="" Label="" AllowURLParam="N" />
	        		    
			<Element Name="fld_create_by" Class="LabelText" ElementSet="Miscellaneous" FieldName="create_by" Label="Create By" Text="{BizSystem::GetProfileName(@:Elem[fld_create_by].Value)}" AllowURLParam="N"/>		        
			<Element Name="fld_create_time" Class="LabelText" ElementSet="Miscellaneous" FieldName="create_time" Label="Create Time" AllowURLParam="N"/>		        
			<Element Name="fld_update_by" Class="LabelText" ElementSet="Miscellaneous" FieldName="update_by" Label="Update By"  Text="{BizSystem::GetProfileName(@:Elem[fld_update_by].Value)}" AllowURLParam="N"/>		        
			<Element Name="fld_update_time" Class="LabelText" ElementSet="Miscellaneous" FieldName="update_time" Label="Update Time" AllowURLParam="N"/>
        
        	
    </DataPanel>
    <ActionPanel>

        <Element Name="lnk_reply" Class="Button" Text="Reply" CssClass="button_gray_w" Description="Forward Message (Ctrl+R)" >
            <EventHandler Name="lnk_new_onclick" Event="onclick" EventLogMsg="" Function="ReplyMessage(collab.msgbox.form.MessageDraftEditForm)"  ShortcutKey="Ctrl+R" ContextMenu="Reply"/>
        </Element> 
        <Element Name="lnk_new" Class="Button" Text="Forward" CssClass="button_gray_w" Description="Forward Message (Ctrl+F)" >
            <EventHandler Name="lnk_new_onclick" Event="onclick" EventLogMsg="" Function="ForwardMessage(collab.msgbox.form.MessageDraftEditForm)"  ShortcutKey="Ctrl+F" ContextMenu="Forward"/>
        </Element> 
         <Element Name="btn_spacer" Class="Spacer" width="10" />
        <Element Name="btn_delete" Class="Button" Text="Delete" CssClass="button_gray_m" Description="delete record (Delete)">
            <EventHandler Name="del_onclick" Event="onclick" EventLogMsg="" Function="DeleteReceivedMessage()"  RedirectPage="form=collab.msgbox.form.MessageInboxListForm" ShortcutKey="Ctrl+Delete" ContextMenu="Delete" />
        </Element>
        <Element Name="btn_cancel" Class="Button" Text="Back" CssClass="button_gray_m">
            <EventHandler Name="btn_cancel_onclick" Event="onclick" Function="SwitchForm()"  ShortcutKey="Escape" ContextMenu="Cancel" />
        </Element>    
              
    </ActionPanel> 
    <NavPanel>    	
    </NavPanel> 
    <SearchPanel>    	
    </SearchPanel>
</EasyForm>