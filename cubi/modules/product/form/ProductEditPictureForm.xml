<EasyForm Name="ProductEditPictureForm" 
			Class="EasyForm" 
			FormType="Edit" 
			jsClass="Openbiz.Form" 
			Icon="{RESOURCE_URL}/product/images/icon_mod_product_picture.png"
			Title="Edit Product Data Pictures" 
			Description="This form could help you manage product pictures." 
			BizDataObj="product.do.ProductDO" 
			TemplateEngine="Smarty" 
			TemplateFile="form_detail_adv.tpl.html" 
			MessageFile="Product.ini" 
			Access="product.Manage">		
    <DataPanel>
	    
		<Element Name="fld_form_title"  
					Class="LabelText"   
					FieldName="name" 
					Label="" 
					Width="500" 
					style="font-size:24px;color:#333333;line-height:24px;" 
					AllowURLParam="N" />
		<Element Name="fld_color" 
					Class="Hidden" 
					Hidden="Y" 
					FieldName="type_color" 
					Label="Type"  
					Sortable="Y" 
					AllowURLParam="N" 
					Translatable="N" 
					OnEventLog="N" />
		<Element Name="fld_form_description"  
					BackgroundColor="{@:Elem[fld_color].Value}" 
					Width="648" 
					Class="LabelText" 
					FieldName="type_name" 
					Label="" 
					KeepCookie="Y" 
					SelectFrom="product.do.ProductTypeDO[name:Id:color]" 
					AllowURLParam="N" />					
       	<Element Name="fld_Id" 
       				Class="LabelText" 
       				ElementSet="General"
       				Hidden="Y" 
       				FieldName="Id" 
       				Label="Id"  
       				AllowURLParam="Y"/>     
   				  		
					
       	<Element Name="fld_sku" 
       				ElementSet="General" 
       				Class="LabelText" 
       				FieldName="sku" 
       				Label="SKU Number" 
       				AllowURLParam="N"/>
       	<Element Name="fld_description" 
       				ElementSet="General" 
       				Class="LabelTextarea" 
       				FieldName="description" 
       				Label="Description" 
       				AllowURLParam="N"/>
       	<Element Name="fld_status" 
       				ElementSet="General" 
       				Class="LabelText" 
       				FieldName="status" 
       				Label="Status" 
       				AllowURLParam="N"/>
		<Element Name="fld_related_picture" 
				Access="picture.access"  
				ElementSet="Picture" 
				Class="FormElement" 
				FormReference="picture.widget.PictureListEditForm" 
				FieldName="" 
				Label="" 
				AllowURLParam="N" />
		
	</DataPanel>
    <ActionPanel>  
        <Element Name="btn_save" 
        		Class="Button" 
        		Text="Save" 
        		CssClass="button_gray_m">
            <EventHandler Name="save_onclick" 	
            			Event="onclick" 
            			EventLogMsg=""  
            			Function="SwitchForm(product.form.ProductDetailForm,{@product.do.ProductDO:Field[Id].Value})"  
            			ShortcutKey="Ctrl+Enter" 
            			ContextMenu="Save" />
        </Element>
        <Element Name="btn_cancel" 
        		Class="Button" 
        		Text="Cancel" 
        		CssClass="button_gray_m">
            <EventHandler Name="btn_cancel_onclick" 
            			Event="onclick" 
            			Function="SwitchForm()"  
            			ShortcutKey="Escape" 
            			ContextMenu="Cancel" />
        </Element> 
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>