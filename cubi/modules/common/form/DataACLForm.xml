<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="DataACLForm" Icon="{RESOURCE_URL}/common/images/icon_data_sharing.gif" Class="DataACLForm" FormType="List" jsClass="jbForm" Title="Data Access Control List" Description="You can setup access permission for specified list of users." BizDataObj="common.do.DataACLDO" TemplateEngine="Smarty" TemplateFile="data_acl_form.tpl.html" >
    <DataPanel>
    	<Element Name="row_selections" 	Class="RowCheckbox"  Label="" FieldName="Id"/>
    	<Element Name="fld_user"  		Class="ColumnText"	Sortable="Y"   FieldName="user_id" Label="User" />
    	<Element Name="fld_perm"  		Class="ColumnText"	Sortable="Y"   FieldName="user_perm" Label="Permission" />
    	<Element Name="fld_create_by"  	Class="ColumnText"	Sortable="Y"   FieldName="create_by" Label="Create by" />
    	<Element Name="fld_create_time" Class="ColumnText"	Sortable="Y"   FieldName="create_time" Label="Create Time"  />
    			
    </DataPanel>
    <ActionPanel>

    	<Element Name="btn_ok" Hidden="{@:m_Editable==1?'N':'Y'}" Class="Button" Text="OK" CssClass="button_gray_m">
            <EventHandler Name="btn_ok_onclick" EventLogMsg="" Event="onclick" Function="ShareRecord()" ShortcutKey="Ctrl+Enter" ContextMenu="Save" />
        </Element>
		<Element Name="btn_cancel" Class="Button" Text="Cancel" CssClass="button_gray_m">
            <EventHandler Name="btn_cancel_onclick" Event="onclick" Function="js:Openbiz.Window.closeDialog()"/>
        </Element>
        
        <Element Name="btn_spacer" Hidden="{@:m_Editable==1?'N':'Y'}"  Class="Spacer" width="10" />		
        
        <Element Name="btn_adv" Hidden="{@:m_Editable==1?'N':'Y'}" Class="Button" Text="Basic" CssClass="button_gray_w">
            <EventHandler Name="btn_adv_onclick" EventLogMsg="" Event="onclick" Function="SwitchForm(common.form.DataSharingForm)"/>
        </Element>
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>