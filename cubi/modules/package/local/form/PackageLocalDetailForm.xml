<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="PackageLocalDetailForm" Class="PackageLocalForm" FormType="" jsClass="Openbiz.PackageForm" Title="Package Detail" Description="" BizDataObj="package.local.do.PackageLocalDO" TemplateEngine="Smarty" TemplateFile="detail_elementset_adv.tpl.html" EventName="" MessageFile=""  Access="system_update.manage">
    <DataPanel>
		<Element Name="fld_Id" ElementSet="General" Hidden="Y" Class="LabelText" FieldName="Id" Label="Id" AllowURLParam="Y"/>
       	<Element Name="fld_package_id" ElementSet="General" Class="LabelText" FieldName="package_id" Label="Package ID" AllowURLParam="N"/>
       	<Element Name="fld_form_title" ElementSet="" Class="LabelText" FieldName="name" Label="Name" AllowURLParam="N"/>
       	<Element Name="fld_form_description" ElementSet="" Class="LabelText" FieldName="description" Label="Description" AllowURLParam="N"/>
       	<Element Name="fld_category_name" ElementSet="General" Class="LabelText" FieldName="category_name" Label="Category" AllowURLParam="N"/>
       	<Element Name="fld_type" ElementSet="General" Class="LabelText" FieldName="type" Label="Type" AllowURLParam="N"/>

       	<Element Name="fld_version" ElementSet="Version" Class="LabelText" FieldName="version" Label="Version" AllowURLParam="N"/>
       	<Element Name="fld_pltfm_ver" ElementSet="Version" Class="LabelText" FieldName="pltfm_ver" Label="Platfrom" AllowURLParam="N"/>
       	<Element Name="fld_author" ElementSet="Version" Class="LabelText" FieldName="author" Label="Author" AllowURLParam="N"/>
       	<Element Name="fld_file" ElementSet="Version" Class="LabelText" FieldName="file" Label="File" AllowURLParam="N"/>
		<Element Name="fld_release_time" ElementSet="Version" Class="LabelText" FieldName="release_time" Label="Release Time" AllowURLParam="N"/>
       	
       	<Element Name="fld_status" ElementSet="General" Class="LabelList" SelectFrom="package.lov.PackageLOV(PackageStatus)" FieldName="status" Label="Status" AllowURLParam="N"/>
       	
       	
        <Element Name="fld_inst_version" ElementSet="Installation" Class="LabelText" FieldName="inst_version" Label="Install Version"/>
        <Element Name="fld_inst_state" ElementSet="Installation" Class="LabelText" FieldName="inst_state" Label="Install State"/>
        <Element Name="fld_inst_log" ElementSet="Installation" Class="LabelText" FieldName="inst_log" Label="Install Log"/>
        <Element Name="fld_inst_time" ElementSet="Installation" Class="LabelText" FieldName="inst_time" Label="Install Time"/>
       	<Element Name="fld_repository" ElementSet="Installation" Class="LabelText" FieldName="repository" Label="Repository" AllowURLParam="N"/>
       	
       	<Element Name="fld_create_by" Class="LabelText" ElementSet="Miscellaneous" FieldName="create_by" Label="Create By" Text="{BizSystem::GetProfileName(@:Elem[create_by].Value)}" AllowURLParam="N"/>       	
       	<Element Name="fld_create_time" Class="LabelText" ElementSet="Miscellaneous" FieldName="create_time" Label="Create Time"  AllowURLParam="N"/>       	
       	<Element Name="fld_update_by" Class="LabelText" ElementSet="Miscellaneous" FieldName="update_by" Label="Update By" Text="{BizSystem::GetProfileName(@:Elem[update_by].Value)}" AllowURLParam="N"/>       	
       	<Element Name="fld_update_time" Class="LabelText" ElementSet="Miscellaneous" FieldName="update_time" Label="Update Time"  AllowURLParam="N"/>       	
    </DataPanel>
    <ActionPanel>       
        <Element Name="btn_install" Hidden="{@:m_InstallState==1 ? 'Y':'N'}" Class="Button" Text="Install" CssClass="button_gray_w" Description="Install this package">
			<EventHandler Name="btn_install_onclick" Event="onclick" Function="LoadDialog(package.local.form.PackageInstallerForm,{@:Elem[fld_Id].Value})" />
        </Element>
        <Element Name="btn_upgrade" Hidden="{@:m_hasUpgrade==1 ? 'N':'Y'}" Class="Button" Text="Upgrade" CssClass="button_gray_w" Description="Upgrade this package">
			<EventHandler Name="btn_upgrade_onclick" Event="onclick" Function="upgrade({@:Elem[fld_Id].Value})" />
        </Element>
        <Element Name="btn_uninstall" Hidden="{@:m_InstallState==1 ? 'N':'Y'}" Class="Button" Text="Uninstall" CssClass="button_gray_w" Description="Uninstall this package">
			<EventHandler Name="btn_uninstall_onclick" Event="onclick" Function="uninstall({@:Elem[fld_Id].Value})" />
        </Element>
        <!--<Element Name="btn_reinstall" Hidden="{@:m_InstallState==true?'N':'Y'}" Class="Button" Text="Reinstall" CssClass="button_gray_w" Description="Reinstall this package">
			<EventHandler Name="btn_reinstall_onclick" Event="onclick" Function="reinstall({@:Elem[fld_Id].Value})" />
        </Element>-->
        
        <Element Name="btn_cancel" Class="Button" Text="Back" CssClass="button_gray_m">
            <EventHandler Name="btn_cancel_onclick" Event="onclick" Function="SwitchForm()"  ShortcutKey="Escape" ContextMenu="Cancel" />
        </Element>
        <!-- <Element Name="progress_bar" Class="HTMLBlock" Text="Progress" CssClass="noticeBox"/>  -->
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>
