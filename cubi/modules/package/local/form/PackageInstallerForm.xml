<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="PackageInstallerForm"   Class="PackageLocalForm" FormType="Detail" jsClass="Openbiz.PackageForm"  Title="Package Installer" Description="Share your data with your group members or others users." BizDataObj="package.local.do.PackageLocalDO" TemplateEngine="Smarty" TemplateFile="package_installer_form.tpl.html" >
    <DataPanel>
    	<Element Name="fld_Id" ElementSet="General" Hidden="Y" Class="LabelText" FieldName="Id" Label="Id" AllowURLParam="Y"/>
       	<Element Name="fld_package_id" ElementSet="General" Hidden="Y" Class="LabelText" FieldName="package_id" Label="Package ID" AllowURLParam="N"/>
       	<Element Name="fld_form_title" ElementSet="" Class="LabelText" FieldName="name" Label="Name" AllowURLParam="N"/>
       	<Element Name="fld_form_description" ElementSet="" Class="LabelText" FieldName="description" Label="Description" AllowURLParam="N"/>

		<Element Name="fld_total_progress" ElementSet="General"  Class="LabelBar" Width="300" height="14"  DisplayUnit="%" MaxValue="100" FieldName="install_progress" Label="Progress"  AllowURLParam="N" />		
		<Element Name="fld_download_progress" ElementSet="General" Class="LabelBar" Width="300" height="14"  DisplayUnit="%" MaxValue="100" FieldName="install_download" Label="Download"  AllowURLParam="N" />

		<Element Name="fld_status" ElementSet="" Class="Textarea" FieldName="install_status" Label="Status" width="350" height="30" CssClass=" " cssFocusClass=" " DefaultValue="Not start yet" AllowURLParam="N"/>
    </DataPanel>
    <ActionPanel>
    	<Element Name="btn_install" Class="Button" Hidden="{@:m_InstallState==1?'Y':'N'}" Text="Start" CssClass="button_gray_m" Description="Install this package">
			<EventHandler Name="btn_new_onclick" Event="onclick" Function="install({@:Elem[fld_Id].Value})" />
        </Element>
        <Element Name="btn_retry" Class="Button" Hidden="{@:m_InstallState==1?'N':'Y'}" Text="Retry" CssClass="button_gray_m" Description="Install this package">
			<EventHandler Name="btn_new_onclick" Event="onclick" Function="install({@:Elem[fld_Id].Value})" />
        </Element>
        <Element Name="btn_finish" Hidden="Y" Class="Button" Text="Finish" CssClass="button_gray_m">
            <EventHandler Name="btn_Finish_onclick" Event="onclick" Function="close()"/>
        </Element>
		<Element Name="btn_cancel" Class="Button" Text="Cancel" CssClass="button_gray_m">
            <EventHandler Name="btn_cancel_onclick" Event="onclick" Function="js:Openbiz.Window.closeDialog()"/>
        </Element>
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>