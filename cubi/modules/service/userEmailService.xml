<PluginService Name="userEmailService" Package="service" Class="userEmailService" 
				BizDataObj="email.do.EmailQueueDO" 
				SendtoQueue="Y" >
	
	<Template   Name="WelcomeEmail" 
				Title="欢迎您加入 Openbiz 中国" 
				EmailAccount="SystemNotifier" 
				Template="welcome_email.tpl" />
				
	<Template   Name="ForgetPasswordEmail" 
				Title="Reset Your Password" 
				EmailAccount="SystemNotifier" 
				Template="forget_pass_email.tpl" />
				
	<Template   Name="SystemInternalError" 
				Title="System Internal Error" 
				EmailAccount="SystemNotifier" 
				Template="system_internal_error.tpl" />		
				
	<Template   Name="CronjobEmail" 
				Title="Execute cron job" 
				EmailAccount="SystemNotifier" 
				Template="execute_cron_job.tpl" />	
	
	<Template   Name="DataSharingEmail" 
				Title="Your collegue has shared data to you" 
				EmailAccount="CubiNotification" 
				Template="data_sharing_email.tpl" />	
				
	<Template   Name="DataPublishEmail" 
				Title="Your collegue has published data to you" 
				EmailAccount="CubiNotification" 
				Template="data_publish_email.tpl" />
				
	<Template   Name="DataAssignedEmail" 
				Title="Your collegue has assigned data to you" 
				EmailAccount="CubiNotification" 
				Template="data_assigned_email.tpl" />
				
	<Template   Name="TaskUpdateEmail" 
				Title="Your collegue has updated your task progress" 
				EmailAccount="CubiNotification" 
				Template="task_update_email.tpl" />		
						
	<Template   Name="NewMessageEmail" 
				Title="Your collegue has send you a new message" 
				EmailAccount="CubiNotification" 
				Template="new_message_email.tpl" />
				
	<Template   Name="TaskRemindEmail" 
				Title="You have a planned task about to start" 
				EmailAccount="CubiNotification" 
				Template="task_remind_email.tpl" />
	
	<Template   Name="TaskDeferredEmail" 
				Title="You have a task has been auto deferred" 
				EmailAccount="CubiNotification" 
				Template="task_deferred_email.tpl" />
				
	<Template   Name="EventRemindEmail" 
				Title="You have a planned event about to start" 
				EmailAccount="CubiNotification" 
				Template="event_remind_email.tpl" />
				
	<Template   Name="EventNoticeEmail" 
				Title="Would you have time for this planned event" 
				EmailAccount="CubiNotification" 
				Template="event_notice_email.tpl" />						
	
	
	<Template   Name="ProfileVerifyEmail" 
				Title="Openbiz电子邮件身份验证码" 
				EmailAccount="SystemNotifier" 
				Template="profile_verify_email.tpl" />
	
	<Template   Name="ProductActivedEmail" 
				Title="Openbiz 产品已激活通知" 
				EmailAccount="SystemNotifier" 
				Template="product_actived_email.tpl" />

	<Template   Name="OrderPaidEmail" 
				Title="Openbiz 订单已付款通知" 
				EmailAccount="SystemNotifier" 
				Template="order_paid_email.tpl" />																
</PluginService>