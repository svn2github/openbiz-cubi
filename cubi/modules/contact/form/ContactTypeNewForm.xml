<EasyForm Name="ContactTypeNewForm" Class="ContactTypeForm" Icon="{RESOURCE_URL}/contact/images/icon_contact_type.png"  FormType="New" jsClass="jbForm" Title="New Contact Type" Description="Please fill in below field to create a new contact type" BizDataObj="contact.do.ContactTypeDO" PageSize="10" DefaultForm="Y" TemplateEngine="Smarty" TemplateFile="detail.tpl" EventName="CONTACT" MessageFile="Contact.msg"  Access="contact.access">
    <DataPanel>
        <Element Name="fld_name" DefaultValue="New Contact Type" Class="InputText" FieldName="name" Label="Name"   />	
        <Element Name="fld_description" Class="Textarea" FieldName="description" Label="Description" />	
  		<Element Name="fld_color_code" Class="ColorPicker" mode="" FieldName="color" Label="Color Code"  AllowURLParam="N" />	
        <Element Name="fld_published" Class="Listbox" KeepCookie="Y" SelectFrom="common.lov.CommLOV(Published)"  DefaultValue="{BizSystem::GetDefaultPerm(group)}" FieldName="group_perm" Label="Group Share"  /><Element Name="fld_published_other" Class="Listbox" KeepCookie="Y" SelectFrom="common.lov.CommLOV(Published)"  DefaultValue="{BizSystem::GetDefaultPerm(other)}" FieldName="other_perm" Label="Other Group"  />	      
        <Element Name="fld_sortorder" Class="Listbox" SelectFrom="common.lov.CommLOV(Order)" DefaultValue="50" FieldName="sortorder" Label="Ordering"  />	        	
    </DataPanel>
    <ActionPanel>
        <Element Name="btn_save" Class="Button" Text="Save" CssClass="button_gray_m">
            <EventHandler Name="save_onclick" EventLogMsg="" Event="onclick" Function="InsertRecord()" RedirectPage="form=contact.form.ContactTypeCustomForm&amp;fld:Id={@contact.do.ContactTypeDO:Field[Id].Value}"  ShortcutKey="Ctrl+Enter" ContextMenu="Save" />
        </Element>
        <Element Name="btn_cancel" Class="Button" Text="Cancel" CssClass="button_gray_m">
            <EventHandler Name="cancel_onclick" Event="onclick" Function="SwitchForm(contact.form.ContactTypeListForm)"  ShortcutKey="Escape" ContextMenu="Cancel"/>
        </Element>
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>