<EasyForm Name="InitializeGroupForm" Class="InitializeGroupForm" FormType="Edit"  Icon="icon_group_add.gif" jsClass="jbForm" Title="Initialize User Groups" Description="Please initialize system groups setting for fit your company's situation." BizDataObj="" DefaultForm="Y" TemplateEngine="Smarty" TemplateFile="detail_elementset.tpl" EventName="" MessageFile="">
    <DataPanel>
    	<Element Name="fld_rename_default_group" ElementSet="Default Group" Class="Checkbox" DefaultValue="0" SelectFrom="1" DefaultChecked="Y" FieldName="rename_default_group" Label="Rename Group" Description="Rename system default group to a new name" >
    			<EventHandler Name="fld_rename_default_group_onclick" Event="onclick" Function="UpdateForm()"  />
    	</Element>
		<Element Name="fld_rename_default_group_name" Hidden="{@:Elem[fld_rename_default_group].Value!=0?'N':'Y'}" ElementSet="Default Group" Class="InputText" DefaultValue="IT Dept" FieldName="rename_default_group_name" Label="Default Group" Description="Rename system default group to this name" />
		
        <Element Name="fld_data_share"  Class="DropDownList" DefaultValue="{GROUP_DATA_SHARE}" SelectFrom="common.lov.CommLOV(EnableStatus)" ElementSet="Data Sharing" Description="" FieldName="_group_data_share" Label="Data Sharing"  >
        	<EventHandler Name="fld_data_share_onupdate" Event="onchange" Function="UpdateForm()"  />
        </Element>
        <Element Name="fld_data_acl" Hidden="{@:Elem[fld_data_share].Value=='1'?'N':'Y'}"   Class="DropDownList" DefaultValue="{DATA_ACL}" SelectFrom="common.lov.CommLOV(EnableStatus)" ElementSet="Data Sharing" Description="" FieldName="_data_acl" Label="Data ACL"  >
        </Element>        
    </DataPanel>
    <ActionPanel>
        <Element Name="btn_save" Class="Button" Text="Save" CssClass="button_gray_m">
            <EventHandler Name="save_onclick" Event="onclick" EventLogMsg=""  Function="Initialize()" />
        </Element>
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>