<EasyForm Name="TestPaymentForm" 
			Class="TestPaymentForm" 
			FormType="New" 
			jsClass="Openbiz.Form" 
			Icon="{RESOURCE_URL}/payment/images/icon_payment.png"
			Title="Test Payment" 
			Description="Try to make a payment by using selected provider." 
			BizDataObj="" 
			TemplateEngine="Smarty" 
			TemplateFile="payment_test.tpl.html" 
			MessageFile="PaymentProvider.ini" 
			Access="payment.Manage">
    <DataPanel>

      	<Element Name="fld_order_id" 
       				Class="InputText" 
       				FieldName="order_id" 
       				Label="Order ID" 
       				AllowURLParam="N"
					Required="Y"
					DefaultValue="{tx}@:getOrderID(){/tx}"
       				/>
		<Element Name="fld_title" 
       				Class="InputText" 
       				FieldName="title" 
       				Label="Payment Subject" 
       				AllowURLParam="N"
					Required="Y"
					DefaultValue="Openbiz Payment Intergration - Test"
       				/>  
  		
       	<Element Name="fld_desc_url" 
       				Class="InputText" 
       				FieldName="url" 
       				Label="Reference URL" 
       				AllowURLParam="N"
					Required="Y"
					DefaultValue="{SITE_URL}"
       				/> 
		<Element Name="fld_amount" 
       				Class="InputText" 
       				FieldName="amount" 
       				Label="Payment Amount" 
       				AllowURLParam="N"
					Required="Y"
					DefaultValue="10.0"
       				/> 
  
   		<Element Name="fld_payment_provider" 
      			Class="payment.element.ProviderSelector" 
      			FieldName="provider_type"    
      			Label="Payment Provider"    
      			DefaultValue="alipay"
      			SelectFrom="payment.provider.do.ProviderDO[name:type:type],[status]=1"
      			 /> 
		<Element Name="fld_desc" 
       				Class="Textarea" 
       				FieldName="description" 
       				Label="Description" 
       				AllowURLParam="N"
					Required="Y"
					DefaultValue=""
       				/>  
	
    </DataPanel>
    <ActionPanel>       
        <Element Name="btn_go" 
	        			Class="Button" 
	        			Text="Make Payment" 
	        			CssClass="button_gray_w">
	            <EventHandler Name="btn_go_onclick" 
	            			EventLogMsg="" 
	            			Event="onclick" 
	            			Function="MakePayment()" 
	            			FunctionType="Form"
	            			ShortcutKey="Ctrl+Enter" 
	            			ContextMenu="Save" />
	        </Element>        
                <Element Name="btn_cancel" 
        			Class="Button" 
        			Text="Cancel" 
        			CssClass="button_gray_m">
            <EventHandler Name="cancel_onclick" 
            			Event="onclick" 
            			Function="SwitchForm()"  
            			ShortcutKey="Escape" 
            			ContextMenu="Cancel"/>
        </Element>      
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>