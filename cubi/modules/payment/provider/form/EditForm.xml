<EasyForm Name="EditForm" 
			Class="ProviderForm" 
			FormType="Edit" 
			jsClass="Openbiz.Form" 
			Icon="{RESOURCE_URL}/payment/images/icon_mod_edit.png"
			Title="Edit Payment Payment Setting" 
			Description="Payment Intergration feature could enable Cubi system to receive payment from users" 
			BizDataObj="payment.provider.do.ProviderDO" 
			TemplateEngine="Smarty" 
			TemplateFile="provider_edit.tpl.html" 
			MessageFile="PaymentProvider.ini" 
			Access="payment.Manage">
    <DataPanel>
	    <Element Name="fld_instructions_img" Class="LabelImage" ElementSet="Instruction" FieldName="type" Text="{RESOURCE_URL}/oauth/images/instruction_{@:Elem[fld_platform].Value}.png" Label=""    AllowURLParam="N"  SelectFrom="oauth.enum.Enum(oauthType)"/>
       	<Element Name="fld_platform" ElementSet="Setting" Class="LabelImage" FieldName="type" Label="Platform" Text="{RESOURCE_URL}/oauth/images/icon_{@:Elem[fld_platform].Value}.png" AllowURLParam="N"/>
        <Element Name="fld_site_url" 
					ElementSet="Setting" 
        			Class="LabelText" 
        			FieldName="site_url" 
        			Label="Website" 
        			AllowURLParam="N"
        			Link="{@:Elem[fld_site_url].Value}"
        			Target="_blank"
        			 />  
        <Element Name="fld_key" Class="InputText" ElementSet="Setting" FieldName="key" Label="App Key"  Description="Fill in the app key from provider"  AllowURLParam="N"  Required="Y" />
        <Element Name="fld_value" Class="InputText" ElementSet="Setting" FieldName="value" Label="App Secret"  Description="Fill in the app secret from provider" AllowURLParam="N"  Required="Y" />
		<Element Name="fld_type" Class="Hidden" ElementSet="Setting" FieldName="type"   />
		<Element Name="fld_status" Class="DropDownList" ElementSet="Setting" FieldName="status" Label="Status"   AllowURLParam="N"  SelectFrom="common.lov.CommLOV(EnableStatus)"/>

    </DataPanel>
    <ActionPanel>       
        <Element Name="btn_save" 
        			Class="Button" 
        			Text="Save" 
        			CssClass="button_gray_m">
            <EventHandler Name="save_onclick" 
            			EventLogMsg="" 
            			Event="onclick" 
            			Function="UpdateRecord()" 
            			RedirectPage="form=sms.provider.form.DetailForm&amp;fld:Id={@:Elem[fld_Id].Value}"  
            			ShortcutKey="Ctrl+Enter" 
            			ContextMenu="Save" />
        </Element>
        <Element Name="btn_cancel" 
        			Class="Button" 
        			Text="Cancel" 
        			CssClass="button_gray_m">
            <EventHandler Name="cancel_onclick" 
            			Event="onclick" 
            			Function="SwitchForm()"  
            			ShortcutKey="Escape" 
            			ContextMenu="Cancel"/>
        </Element>      
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>