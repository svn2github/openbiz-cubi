<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="ModuleInfoForm" Class="ModuleInfoForm"  FormType="Detail" jsClass="jbForm" Title="Module Detail Information" Description="Below list is existing modules in system. click on a module to load detail file list. " BizDataObj="" Icon="{RESOURCE_URL}/appbuilder/images/icon_module_list.png" DefaultForm="Y" TemplateEngine="Smarty" PageSize="6" TemplateFile="metaeditor_info_form.tpl.html" MessageFile="appbuilder.ini"  Access="AppBuilder.Access" >
    <DataPanel>
        
		<Element Name="fld_Id" Class="Hidden" Hidden="Y" FieldName="NAME" Label="Id" Sortable="N" AllowURLParam="N" Translatable="N" OnEventLog="N" />
		<Element Name="fld_icon" Class="RawData" Text="{RESOURCE_URL}/appbuilder/images/icon_module_small.png" FieldName="" Label="Icon"  Sortable="N" AllowURLParam="N" Translatable="N" OnEventLog="N" Link="javascript:;">
        </Element>    
		<Element Name="fld_name" Class="RawData" FieldName="NAME" Label="Module"  Sortable="N" AllowURLParam="N" Translatable="N" OnEventLog="N" Link="javascript:;">
        </Element>     
    	<Element Name="fld_description" Class="RawData" FieldName="DESCRIPTION" Label="Description"  Sortable="N" AllowURLParam="N" Translatable="N" OnEventLog="N" />               
        <Element Name="fld_author" Class="RawData" FieldName="AUTHOR" Label="Author"  Sortable="N" AllowURLParam="N" Translatable="N" OnEventLog="N" />       
        <Element Name="fld_version" Class="RawData" FieldName="VERSION" Label="Version" Sortable="N" AllowURLParam="N" Translatable="N" OnEventLog="N" />
        <Element Name="fld_edit" Class="ColumnText" Text="Edit" cssClass="button_gray_w" FieldName="name" Label="Action" Sortable="N"  Link="{APP_INDEX}/market/application_update_detail/{@:Elem[fld_Id].Value}" ></Element>

    </DataPanel>
    <ActionPanel>
    </ActionPanel> 
    <NavPanel> 
        <Element Name="page_selector" Class="PageSelector" Text="{@:m_CurrentPage}" Label="Go to Page" CssClass="input_select" cssFocusClass="input_select_focus">
        	<EventHandler Name="btn_page_selector_onchange" Event="onchange" Function="GotoSelectedPage(page_selector)"/>
        </Element>
         
        <Element Name="pagesize_selector" Class="PagesizeSelector" Text="{@:m_Range}" Label="Show Rows" CssClass="input_select" cssFocusClass="input_select_focus">
        	<EventHandler Name="btn_pagesize_selector_onchange" Event="onchange" Function="SetPageSize(pagesize_selector)"/>
        </Element>
         
        <Element Name="btn_first"  Class="Button" Enabled="{(@:m_CurrentPage == 1)?'N':'Y'}" Text="" CssClass="button_gray_navi {(@:m_CurrentPage == 1)?'first_gray':'first'}">
            <EventHandler Name="first_onclick" Event="onclick" Function="GotoPage(1)"/>
        </Element>
        <Element Name="btn_prev" Class="Button" Enabled="{(@:m_CurrentPage == 1)?'N':'Y'}" Text="" CssClass="button_gray_navi {(@:m_CurrentPage == 1)?'prev_gray':'prev'}">
            <EventHandler Name="prev_onclick" Event="onclick" Function="GotoPage({@:m_CurrentPage - 1})" ShortcutKey="Ctrl+Shift+Left"/>
        </Element>
        <Element Name="txt_page" Class="LabelText" Text="{'@:m_CurrentPage of @:m_TotalPages '}">
        </Element>
        <Element Name="btn_next" Class="Button" Enabled="{(@:m_CurrentPage == @:m_TotalPages )?'N':'Y'}" Text="" CssClass="button_gray_navi {(@:m_CurrentPage == @:m_TotalPages)?'next_gray':'next'}">
            <EventHandler Name="next_onclick" Event="onclick" Function="GotoPage({@:m_CurrentPage + 1})" ShortcutKey="Ctrl+Shift+Right"/>
        </Element>
        <Element Name="btn_last" Class="Button" Enabled="{(@:m_CurrentPage == @:m_TotalPages )?'N':'Y'}" Text="" CssClass="button_gray_navi {(@:m_CurrentPage == @:m_TotalPages)?'last_gray':'last'}">
            <EventHandler Name="last_onclick" Event="onclick" Function="GotoPage({@:m_TotalPages})"/>
        </Element>
    </NavPanel>   
</EasyForm>