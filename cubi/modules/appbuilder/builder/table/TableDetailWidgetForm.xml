<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="TableDetailWidgetForm" Class="TableWidgetForm" Icon="{RESOURCE_URL}/appbuilder/images/icon_data_table.png"  FormType="Detail" jsClass="jbForm" Title="Edit Data Table Attribute" Description="Edit selected data table Comment and Storage Engine" BizDataObj="" TemplateEngine="Smarty" TemplateFile="form_detail_popup.tpl.html" EventName="" MessageFile="appbuilder.ini"  Access="AppBuilder.Access" >
    <DataPanel>
        <Element Name="fld_Id" Class="Hidden" FieldName="Id" Label="Name"   />
        <Element Name="fld_name" Class="LabelText" FieldName="Name" Label="Name"   />
        <Element Name="fld_comment" Class="LabelText" FieldName="Comment" Label="Comment"   />
        <Element Name="fld_engine" Class="LabelText" FieldName="Engine" Label="Engine"   />	
        <Element Name="fld_rows" Class="LabelText" FieldName="Rows" Label="Records"   />
        <Element Name="fld_data_size" Class="LabelText"  Text="{BizSystem::GetService(UTIL_SERVICE)->format_bytes(@:Elem[fld_data_size].Value)}"  FieldName="Data_length" Label="Data Size"   />
        <Element Name="fld_index_size" Class="LabelText"  Text="{BizSystem::GetService(UTIL_SERVICE)->format_bytes(@:Elem[fld_index_size].Value)}"  FieldName="Index_length" Label="Index Size"   />
        <Element Name="fld_create_time" Class="LabelText" FieldName="Create_time" Label="Create Time"   />
        <Element Name="fld_update_time" Class="LabelText" FieldName="Update_time" Label="Update Time"   />		
    </DataPanel>
    <ActionPanel>
		<Element Name="btn_edit" Class="Button" Text="Edit" CssClass="button_gray_m">
            <EventHandler Name="btn_close_onclick" Event="onclick" Function="switchForm(appbuilder.builder.DataTableWidget.TableDetailWidgetForm,{@:Elem[fld_Id].Value})"/>
        </Element>
		<Element Name="btn_spacer" Class="Spacer" width="10" />
        <Element Name="btn_close" Class="Button" Text="Close" CssClass="button_gray_m">
            <EventHandler Name="btn_close_onclick" Event="onclick" Function="close()"/>
        </Element>
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>