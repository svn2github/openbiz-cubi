<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="ConfModuleWizardForm" Class="ConfModuleWizardForm"  Icon="{RESOURCE_URL}/appbuilder/images/icon_config_module.png" FormType="New" jsClass="jbForm" Title="Config Module Options" Description="Config module generate options to custom the module meets your application needs" BizDataObj="" DefaultForm="Y" TemplateEngine="Smarty" TemplateFile="appbuilder_detail_opts_form.tpl.html" MessageFile="appbuilder.ini"  Access="AppBuilder.Access" >
    <DataPanel>
		<Element Name="fld_Id" Class="Hidden" Hidden="Y" FieldName="Field" Label="Id" Sortable="N" AllowURLParam="N" Translatable="N" OnEventLog="N" />				
		<Element Name="fld_object_name"  Class="InputText" ElementSet="General" FieldName="object_name" Description="One english word" Label="Object Name"  />       
		<Element Name="fld_object_desc"  Class="InputText" ElementSet="General" FieldName="object_desc" Description="One line short description " Label="Object Description"  />
		<Element Name="fld_module_type"  Class="Listbox" SelectFrom="appbuilder.builder.lov.ModuleLOV(Type)" ElementSet="General" FieldName="" Text="" Label="Module Type"  >
			<EventHandler Name="fld_module_type_onchange"  Event="onchange" Function="UpdateForm()" />
		</Element>
		<Element Name="fld_module_name_create" Hidden="{@:Elem[fld_module_type].Value==0?'Y':'N'}"  Class="InputText" ElementSet="General" FieldName="module_name_create" Text="" Label="Module Name" />
		<Element Name="fld_module_name_exists" Hidden="{@:Elem[fld_module_type].Value==1?'Y':'N'}" Class="appbuilder.element.ModuleListbox" ElementSet="General" FieldName="module_name_exists" Text="" Label="Module Name" />
		
		<Element Name="fld_acl_control"  Class="Listbox" SelectFrom="appbuilder.builder.lov.ModuleLOV(AclType)" DefaultValue="1" ElementSet="Permission" FieldName="acl_type" Text="" Label="Access Control"  />
		<Element Name="fld_data_share"  Class="Listbox" SelectFrom="appbuilder.builder.lov.ModuleLOV(DataShareType)" DefaultValue="1" ElementSet="Permission" FieldName="data_perm" Text="" Label="Data Permission"  />
		 		
		<Element Name="fld_attachment_feature"  Class="Checkbox" SelectFrom="1" DefaultValue="0" Description="Enable Attachment features to this module"  ElementSet="Advanced Features" FieldName="attachment_feature" Text="" Label="Attachment "  />
		<Element Name="fld_picture_feature"  Class="Checkbox" SelectFrom="1" DefaultValue="0" Description="Enable Picture features to this module"  ElementSet="Advanced Features" FieldName="picture_feature" Text="" Label="Picture "  />
		<Element Name="fld_changelog_feature"  Class="Checkbox" SelectFrom="1" DefaultValue="0" Description="Enable Data Change Log features to this module"  ElementSet="Advanced Features" FieldName="changelog_feature" Text="" Label="Change Log"  />
		<Element Name="fld_location_feature"  Class="Checkbox" SelectFrom="1" DefaultValue="0" Description="Enable Geo Location features to this module"  ElementSet="Advanced Features" FieldName="location_feature" Text="" Label="Geo Location "  />
		
		<Element Name="fld_data_extend"  Class="Checkbox" SelectFrom="1" DefaultValue="0" Description="Enable Type Based Data Field Extensible Feature"  ElementSet="Extensible" FieldName="extend_feature" Text="" Label="Extend Fields"  >
			<EventHandler Name="fld_data_extend"  Event="onclick" Function="UpdateForm()" />
		</Element>
		<Element Name="fld_type_do" Hidden="{@:Elem[fld_data_extend].Value==0?'Y':'N'}" Class="InputText" ElementSet="Extensible" FieldName="extend_type_do" Text="" Label="Type Name"  />
		<Element Name="fld_type_desc" Hidden="{@:Elem[fld_data_extend].Value==0?'Y':'N'}" Class="InputText" ElementSet="Extensible" FieldName="extend_type_desc" Text="" Label="Type Description"  />
		
    </DataPanel>
    <ActionPanel>
    </ActionPanel> 
    <NavPanel> 
       
    </NavPanel>
    <WizardPanel>
        <Element Name="btn_prev" Class="Button" Text="Back" CssClass="button_back">
            <EventHandler Name="btn_prev_onclick" EventLogMsg="" Event="onclick" Function="goBack()" ShortcutKey="Ctrl+ESC" />
        </Element>   
    
         <Element Name="btn_next" Class="Button" Text="Next" CssClass="button_next_highlight">
            <EventHandler Name="btn_next_onclick" EventLogMsg="" Event="onclick" Function="goNext(0)" ShortcutKey="Ctrl+Enter" />
        </Element>   
        
        <Element Name="btn_spacer" Class="Spacer" width="10" />	
        
        <Element Name="btn_reset" Class="Button" Text="Cancel" CssClass="button_cancel">
            <EventHandler Name="btn_reset_onclick" EventLogMsg="" Event="onclick" Function="doCancel()" RedirectPage="{APP_INDEX}/appbuilder/new_app_wizard" ShortcutKey="Ctrl+Delete" />
        </Element>   
    </WizardPanel>    
</EasyForm>