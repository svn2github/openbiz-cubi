<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="ConfDataTableWizardForm" Class="ConfDataTableWizardForm" Icon="{RESOURCE_URL}/appbuilder/images/icon_data_table.png" FormType="List" jsClass="jbForm" Title="Select Data Table" Description="Select data table as the base table of the new application, or create a new data table in this step." BizDataObj="" DefaultForm="Y" TemplateEngine="Smarty" TemplateFile="appbuilder_table_conf_form.tpl.html" MessageFile="appbuilder.ini"  Access="AppBuilder.Access" >
    
    <DataPanel>
        
		<Element Name="fld_Id" Class="Hidden" Hidden="Y" FieldName="Name" Label="Id" Sortable="N" AllowURLParam="N" Translatable="N" OnEventLog="N" />
		<Element Name="fld_icon" Class="ColumnImage" Text="{RESOURCE_URL}/system/images/icon_database_small.png" FieldName="" Label="Icon"  Sortable="N" AllowURLParam="N" Translatable="N" OnEventLog="N" Link="javascript:;">
   			<EventHandler Name="fld_icon_onclick" Event="onclick"  Function="LoadDialog(appbuilder.builder.table.TableDetailWidgetForm,{@:Elem[fld_Id].Value})"  />
        </Element>    
		<Element Name="fld_name" Class="ColumnText" FieldName="Name" Label="Table"  Sortable="N" AllowURLParam="N" Translatable="N" OnEventLog="N" Link="javascript:;">
   			<EventHandler Name="fld_name_onclick" Event="onclick"  Function="LoadDialog(appbuilder.builder.table.TableDetailWidgetForm,{@:Elem[fld_Id].Value})" />
        </Element>     
    	<Element Name="fld_comment" Class="ColumnText" FieldName="Comment" Label="Comment"  Sortable="N" AllowURLParam="N" Translatable="N" OnEventLog="N" />               
        <Element Name="fld_engine" Class="ColumnText" FieldName="Engine" Label="Engine"  Sortable="N" AllowURLParam="N" Translatable="N" OnEventLog="N" />        
        <Element Name="fld_rows" Class="ColumnText" FieldName="Rows" Label="Rows" Sortable="N" AllowURLParam="N" Translatable="N" OnEventLog="N" />
		<Element Name="fld_data_size" Class="ColumnText" FieldName="Data_length" Text="{BizSystem::GetService(UTIL_SERVICE)->format_bytes(@:Elem[fld_data_size].Value)}" Label="Data Size" Sortable="N" AllowURLParam="N" Translatable="N" OnEventLog="N" />        		
    		 
    </DataPanel>
    <ActionPanel>
    
        
        <Element Name="lnk_new" Class="Button" Text="Add" CssClass="button_gray_add" Description="new record (Insert)" >
			<EventHandler Name="lnk_new_onclick" Event="onclick" EventLogMsg="" Function="LoadDialog(appbuilder.builder.table.TableAddWidgetForm)"  ShortcutKey="Insert" ContextMenu="New"/>
        </Element>
        <Element Name="btn_edit" Class="Button" Text="Edit" CssClass="button_gray_m" Description="edit record (Ctrl+E)">
            <EventHandler Name="btn_edit_onclick" Event="onclick" EventLogMsg="" Function="LoadDialog(appbuilder.builder.table.TableEditWidgetForm)" ShortcutKey="Ctrl+E" ContextMenu="Edit" />
        </Element>       
        <Element Name="btn_delete" Class="Button" Text="Delete" CssClass="button_gray_m" >
            <EventHandler Name="del_onclick" Event="onclick" EventLogMsg="" Function="DeleteRecord()" ShortcutKey="Ctrl+Delete" ContextMenu="Delete"/>
        </Element>        
        
    </ActionPanel> 
    <NavPanel> 
        <Element Name="page_selector" Class="PageSelector" Text="{@:m_CurrentPage}" Label="Go to Page" CssClass="input_select" cssFocusClass="input_select_focus">
        	<EventHandler Name="btn_page_selector_onchange" Event="onchange" Function="GotoSelectedPage(page_selector)"/>
        </Element>
        <Element Name="pagesize_selector" Class="PagesizeSelector" Text="{@:m_Range}" Label="Show Rows" CssClass="input_select" cssFocusClass="input_select_focus">
        	<EventHandler Name="btn_pagesize_selector_onchange" Event="onchange" Function="SetPageSize(pagesize_selector)"/>
        </Element>
        <Element Name="btn_first"  Class="Button" Enabled="{(@:m_CurrentPage == 1)?'N':'Y'}" Text="" CssClass="button_gray_navi {(@:m_CurrentPage == 1)?'first_gray':'first'}">
            <EventHandler Name="first_onclick" Event="onclick" Function="GotoPage(1)"/>
        </Element>
        <Element Name="btn_prev" Class="Button" Enabled="{(@:m_CurrentPage == 1)?'N':'Y'}" Text="" CssClass="button_gray_navi {(@:m_CurrentPage == 1)?'prev_gray':'prev'}">
            <EventHandler Name="prev_onclick" Event="onclick" Function="GotoPage({@:m_CurrentPage - 1})" ShortcutKey="Ctrl+Shift+Left"/>
        </Element>
        <Element Name="txt_page" Class="LabelText" Text="{'@:m_CurrentPage of @:m_TotalPages '}">
        </Element>
        <Element Name="btn_next" Class="Button" Enabled="{(@:m_CurrentPage == @:m_TotalPages )?'N':'Y'}" Text="" CssClass="button_gray_navi {(@:m_CurrentPage == @:m_TotalPages)?'next_gray':'next'}">
            <EventHandler Name="next_onclick" Event="onclick" Function="GotoPage({@:m_CurrentPage + 1})" ShortcutKey="Ctrl+Shift+Right"/>
        </Element>
        <Element Name="btn_last" Class="Button" Enabled="{(@:m_CurrentPage == @:m_TotalPages )?'N':'Y'}" Text="" CssClass="button_gray_navi {(@:m_CurrentPage == @:m_TotalPages)?'last_gray':'last'}">
            <EventHandler Name="last_onclick" Event="onclick" Function="GotoPage({@:m_TotalPages})"/>
        </Element>
    </NavPanel>
    <WizardPanel>
        <Element Name="btn_prev" Class="Button" Text="Back" CssClass="button_back">
            <EventHandler Name="btn_prev_onclick" EventLogMsg="" Event="onclick" Function="goBack()" ShortcutKey="Ctrl+ESC" />
        </Element>   
    
         <Element Name="btn_next" Class="Button" Text="Next" CssClass="button_next_highlight">
            <EventHandler Name="btn_next_onclick" EventLogMsg="" Event="onclick" Function="goNext(0)" ShortcutKey="Ctrl+Enter" />
        </Element>   
        
        <Element Name="btn_spacer" Class="Spacer" width="10" />	
        
        <Element Name="btn_reset" Class="Button" Text="Cancel" CssClass="button_cancel">
            <EventHandler Name="btn_reset_onclick" EventLogMsg="" Event="onclick" Function="doCancel()" RedirectPage="{APP_INDEX}/appbuilder/new_app_wizard" ShortcutKey="Ctrl+Delete" />
        </Element>   
    </WizardPanel>    
</EasyForm>