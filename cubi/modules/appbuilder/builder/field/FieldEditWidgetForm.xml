<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="FieldEditWidgetForm" Class="FieldWidgetForm" Icon="{RESOURCE_URL}/appbuilder/images/icon_data_field.png"  FormType="Detail" jsClass="jbForm" Title="Edit Data Field Attribute" Description="Edit selected data field's comment and type" BizDataObj="" TemplateEngine="Smarty" TemplateFile="popup_data_field_detail.tpl.html" EventName="" MessageFile="appbuilder.ini"  Access="AppBuilder.Access" >
    <DataPanel>
        <Element Name="fld_Id" Class="Hidden" FieldName="Id" Label="Name"   />
        <Element Name="fld_name" Class="InputText" FieldName="Field" Label="Field"   />
        <Element Name="fld_comment" Class="InputText" FieldName="Comment" Label="Comment"   />
        <Element Name="fld_type" Class="Listbox" SelectFrom="appbuilder.builder.lov.FieldLOV(FieldType)" FieldName="Type" Label="Type"   />	
        <Element Name="fld_null" Class="Radio" SelectFrom="appbuilder.builder.lov.FieldLOV(NullStatus)" FieldName="Null" Label="Allow Null"   />
        <Element Name="fld_default" Class="InputText" FieldName="Default" Label="Default"   />			
    </DataPanel>
    <ActionPanel>
		<Element Name="btn_save" Class="Button" Text="Save" CssClass="button_gray_m">
            <EventHandler Name="btn_save_onclick" Event="onclick" Function="UpdateRecord()" RedirectPage="form=appbuilder.builder.field.FieldDetailWidgetForm&amp;fld:Id={@appbuilder.builder.ConfDataTableWizardForm:m_RecordId}" />
        </Element>
		<Element Name="btn_spacer" Class="Spacer" width="10" />
        <Element Name="btn_close" Class="Button" Text="Close" CssClass="button_gray_m">
            <EventHandler Name="btn_close_onclick" Event="onclick" Function="close()"/>
        </Element>
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>