<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="BackupUploadForm" Class="BackupForm" Icon="{RESOURCE_URL}/backup/images/icon_backup_add.gif" FormType="New" jsClass="jbForm" Title="Upload Backup" Description="Database backup management could help you backup or restore your system database with simply one click. \n It could prevent your data lost by any mistake." BizDataObj="" TemplateEngine="Smarty" TemplateFile="detail_upload.tpl" EventName="" Access="backup.Access_Backup" MessageFile="backup_msg.ini">
    <DataPanel>         
    		<Element Name="fld_location"  Class="LabelText" ElementSet="General" FieldName="" Label="Location" Text="{@:m_LocationName}" AllowURLParam="N"/>
                   
		<Element Name="fld_name" DefaultValue="New Backup" width="550" ElementSet="General" Class="FileUploader" UploadFolder="/../backup" Filetype="(.sql)|(.tar.gz)" FieldName="filename"  Label="File" AllowURLParam="N" />
		
		<Element Name="fld_import" ElementSet="General" DefaultValue="0" SelectFrom="1" Class="Checkbox" FieldName="import" Label="Import" Description="restore backup after upload" AllowURLParam="N">
		    	<EventHandler Name="fld_import_onclick" EventLogMsg="" Event="onclick" Function="js:update_import()" />
		</Element>
		<Element Name="fld_mode"  Class="Listbox" ElementSet="Import"  SelectFrom="backup.lov.BackupOption(RestoreMode_tarball)" FieldName="mode" Label="Restore Mode" AllowURLParam="N" >
		    	<EventHandler Name="fld_mode_onchange" EventLogMsg="" Event="onclick" Function="js:update_db_restore_opt()" />
		</Element>
		<Element Name="fld_db"  Class="DatabaseListbox" ElementSet="Import" FieldName="database" Label="Database" AllowURLParam="N" />
		<Element Name="fld_charset" BlankOption="Default" Class="Listbox" SelectFrom="backup.lov.BackupOption(Charset)" ElementSet="Import" FieldName="charset" Label="Charset" AllowURLParam="N" />
		
        </DataPanel>
    <ActionPanel>
        <Element Name="btn_save" Class="Button" Text="Upload" CssClass="button_gray_w">
            <EventHandler Name="save_onclick" EventLogMsg="" Event="onclick" Function="Upload()" RedirectPage="form=backup.form.BackupDetailForm&amp;fld:Id={@:m_RecordId}" ShortcutKey="Ctrl+Enter" ContextMenu="Save"/>
        </Element>
        <Element Name="btn_cancel" Class="Button" Text="Cancel" CssClass="button_gray_m">
            <EventHandler Name="cancel_onclick" Event="onclick" Function="SwitchForm(backup.form.BackupListForm)" ShortcutKey="Escape" ContextMenu="Cancel"/>
        </Element>
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>
