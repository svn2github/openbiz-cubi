<EasyForm Name="SmsTasklistEditForm" 
			Class="changelog.form.ChangeLogForm" 
			FormType="Edit" 
			jsClass="Openbiz.Form" 
			Icon="{RESOURCE_URL}/sms/images/icon_mod_sms_tasklist_edit.png"
			Title="Edit Sms Tasklist" 
			Description="Sms Tasklist Description" 
			BizDataObj="sms.do.SmsTasklistDO" 
			TemplateEngine="Smarty" 
			TemplateFile="form_edit.tpl.html" 
			MessageFile="" 
			Access="sms.Manage">
    <DataPanel>
  	  
       								   	

		

       	<Element Name="fld_content" 
       				ElementSet="Sms"
       				Class="InputText" 
       				FieldName="content" 
       				Label=" Body" 
       				AllowURLParam="N"
       				/>
    
       								   	

		

       	<Element Name="fld_has_sent" 
       				ElementSet="General"
       				Class="InputText" 
       				FieldName="has_sent" 
       				Label="已发送数量" 
       				AllowURLParam="N"
       				/>
    
       								   	

		

       	<Element Name="fld_sms_number" 
       				ElementSet="General"
       				Class="InputText" 
       				FieldName="sms_number" 
       				Label="收件人数量" 
       				AllowURLParam="N"
       				/>
    
       								   	

		

       	<Element Name="fld_priority" 
       				ElementSet="General"
       				Class="InputText" 
       				FieldName="priority" 
       				Label="Priority" 
       				AllowURLParam="N"
       				/>
    
       								   	

		

       								   	

		<Element Name="fld_status" 
					Class="DropDownList" 
					ElementSet="General"
					FieldName="status" 
					SelectFrom="common.lov.CommLOV(Bool)" 
					Label="Status"  
					Sortable="Y" 
					AllowURLParam="N" 
					Translatable="N" 
					OnEventLog="N" 
					Link="javascript:;">				
		</Element>
		

       	<Element Name="fld_mobile" 
       				ElementSet="Additional"
       				Class="Textarea" 
       				FieldName="mobile" 
       				Label="mobile" 
       				AllowURLParam="N"
       				/>
    
       								   	

		

       								   	

		

       								   	

		

       								   	

		

       								   	

		

       								   	

		

       								   	

		

       								   	

		

       								   	

		

  
		<Element Name="fld_published" 
					Class="Listbox" 
					ElementSet="Miscellaneous" 
					KeepCookie="Y" 
					SelectFrom="common.lov.CommLOV(Published)" 
					DefaultValue="1" 
					FieldName="group_perm" 
					Label="Group Share"  />
		<Element Name="fld_published_other" 
					Class="Listbox" 
					ElementSet="Miscellaneous" 
					KeepCookie="Y" 
					SelectFrom="common.lov.CommLOV(Published)" 
					DefaultValue="0" 
					FieldName="other_perm" 
					Label="Other Group"  />
    </DataPanel>
    <ActionPanel>       
        <Element Name="btn_save" 
        			Class="Button" 
        			Text="Save" 
        			CssClass="button_gray_m">
            <EventHandler Name="save_onclick" 
            			EventLogMsg="" 
            			Event="onclick" 
            			Function="UpdateRecord()" 
            			RedirectPage="{APP_INDEX}/sms/sms_tasklist_detail/{@sms.do.SmsTasklistDO:Field[Id].Value}"  
            			ShortcutKey="Ctrl+Enter" 
            			ContextMenu="Save" />
        </Element>
        <Element Name="btn_cancel" 
        			Class="Button" 
        			Text="Cancel" 
        			CssClass="button_gray_m">
            <EventHandler Name="cancel_onclick" 
            			Event="onclick" 
            			Function="SwitchForm()"  
            			ShortcutKey="Escape" 
            			ContextMenu="Cancel"/>
        </Element>      
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>