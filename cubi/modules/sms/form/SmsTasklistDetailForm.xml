<EasyForm Name="SmsTasklistDetailForm" 
			Class="EasyForm" 
			FormType="Detail" 
			jsClass="Openbiz.Form" 
			Icon="{RESOURCE_URL}/sms/images/icon_mod_sms_tasklist_detail.png"
			Title="Sms Tasklist Detail" 
			Description="Sms Tasklist Description" 
			BizDataObj="sms.do.SmsTasklistDO" 
			TemplateEngine="Smarty" 
			TemplateFile="form_detail.tpl.html" 
			MessageFile="" 
			Access="sms.Access">
    <DataPanel>

       	<Element Name="fld_Id" 
       				Class="LabelText" 
       				ElementSet="General"
       				Hidden="Y" 
       				FieldName="Id" 
       				Label="Id"  
       				AllowURLParam="Y"/>  
      <Element Name="fld_mobile" 
       				Class="LabelText" 
       				FieldName="mobile" 
       				Label="mobile" 
       				AllowURLParam="N"
					 
			 
       				/>  		         				  				      				
       	<Element Name="fld_content" 
       				ElementSet="Sms"
       				Class="LabelText" 
       				FieldName="content" 
       				Label="content" 
       				AllowURLParam="N"
					/>
        				         				  				      				
       	<Element Name="fld_has_sent" 
       				ElementSet="General"
       				Class="LabelText" 
       				FieldName="has_sent" 
       				Label="has_sent" 
       				AllowURLParam="N"
					/>
        				         				  				      				
       	<Element Name="fld_sms_number" 
       				ElementSet="General"
       				Class="LabelText" 
       				FieldName="sms_number" 
       				Label="sms_number" 
       				AllowURLParam="N"
					/>
        				         				  				      				
       	<Element Name="fld_priority" 
       				ElementSet="General"
       				Class="LabelText" 
       				FieldName="priority" 
       				Label="Priority" 
       				AllowURLParam="N"
					/>
        				         				  				      				
		<Element Name="fld_status" 
					Class="LabelBool" 
					ElementSet="General"
					FieldName="status" 
					Label="Status"  
					Sortable="Y" 
					AllowURLParam="N" 
					Translatable="N" 
					OnEventLog="N" 
					Link="javascript:;">				
		</Element>
        				         				  				      						         				  				      			
					
       	<Element Name="fld_create_by" 
       				Class="LabelText" 
       				ElementSet="Miscellaneous" 
       				FieldName="create_by" 
       				Label="Create By" 
       				Text="{BizSystem::GetProfileName(@:Elem[fld_create_by].Value)}" 
       				AllowURLParam="N"
       				 />  
       				   	
       	<Element Name="fld_create_time" 
       				Class="LabelText" 
       				ElementSet="Miscellaneous" 
       				FieldName="create_time" 
       				Label="Create Time"  
       				AllowURLParam="N"
       				 />       	

					
    </DataPanel>
    <ActionPanel>  
 
    	
        <Element Name="btn_new" 
        			Class="Button" 
        			Text="Add" 
        			CssClass="button_gray_add" 
        			Description="New record (Insert)">
			<EventHandler Name="btn_new_onclick" 
							Event="onclick" 
							Function="SwitchForm(sms.form.SmsTasklistNewForm)"  
							ShortcutKey="Insert" 
							ContextMenu="New" />
        </Element>          
        <Element Name="btn_edit" 
        			Class="Button" 
        			Text="Edit" 
        			CssClass="button_gray_m" 
        			Description="Edit record (Ctrl+E)">
			<EventHandler Name="btn_new_onclick" 
							Event="onclick" 
							Function="SwitchForm(sms.form.SmsTasklistEditForm,{@:Elem[fld_Id].Value})"  
							ShortcutKey="Ctrl+E" 
							ContextMenu="Edit" />
        </Element>
		<Element Name="btn_copy" 
					Class="Button" 
					Text="Copy" 
					CssClass="button_gray_m" 
					Description="Copy record (Ctrl+C)">
            <EventHandler Name="onclick" 
            				Event="onclick" 
            				EventLogMsg="" 
            				Function="CopyRecord({@:Elem[fld_Id].Value})" 
            				RedirectPage="form=sms.form.SmsTasklistCopyForm&amp;fld:Id={@:Elem[fld_Id].Value}" 
            				ShortcutKey="Ctrl+C" 
            				ContextMenu="Copy"/>
        </Element> 
        <Element Name="btn_delete" 
        			Class="Button" 
        			Text="Delete" 
        			CssClass="button_gray_m" 
        			Description="Delete record (Delete)">
            <EventHandler Name="del_onclick" 
            				Event="onclick" 
            				EventLogMsg="" 
            				Function="DeleteRecord({@:Elem[fld_Id].Value})"  
            				RedirectPage="{APP_INDEX}/sms/sms_tasklist_manage" 
            				ShortcutKey="Ctrl+Delete" 
            				ContextMenu="Delete" />
        </Element>
        <Element Name="btn_cancel" 
        			Class="LabelBack" 
        			Text="Back" 
        			CssClass="button_gray_m"
        			Link="sms/sms_tasklist_manage" />        
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>