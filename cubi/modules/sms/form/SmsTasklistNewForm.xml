<EasyForm Name="SmsTestSendNewForm" 
			Class="EasyForm" 
			FormType="New" 
			jsClass="Openbiz.Form" 
			Icon="{RESOURCE_URL}/sms/images/icon_mod_add.png"
			Title="New Sms Tasklist" 
			Description="Sms Tasklist Description" 
			BizDataObj="sms.do.SmsTaskListDO" 
			TemplateEngine="Smarty" 
			TemplateFile="form_edit.tpl.html" 
			MessageFile="" 
			Access="sms.Manage">
    <DataPanel>


	<Element Name="fld_mobile" 
       				ElementSet="Sms" 
       				Class="InputText" 
       				FieldName="mobile" 
       				Label="mobile" 
       				AllowURLParam="N"
       				/>  
      	<Element Name="fld_content" 
       				ElementSet="Sms" 
       				Class="Textarea" 
       				FieldName="content" 
       				Label="content" 
       				AllowURLParam="N"
       				/>      
       								   	
		<Element Name="fld_provider"  Class="DropDownList" ElementSet="Sms" Description="" FieldName="provider_type" Label="Sms provider" SelectFrom="sms.lov.ProviderLOV(Provider)" />		
				

       	<Element Name="fld_priority" 
       				ElementSet="General" 
       				Class="InputText" 
       				FieldName="priority" 
       				Label="Priority" 
       				AllowURLParam="N"
       				/>     		  
    </DataPanel>
    <ActionPanel>       
        	        <Element Name="btn_save" 
	        			Class="Button" 
	        			Text="Save" 
	        			CssClass="button_gray_m">
	            <EventHandler Name="save_onclick" 
	            			EventLogMsg="" 
	            			Event="onclick" 
	            			Function="InsertRecord()" 
	            			RedirectPage="{APP_INDEX}/sms/sms_tasklist_detail/{@sms.do.SmsTaskListDO:Field[Id].Value}"  
	            			ShortcutKey="Ctrl+Enter" 
	            			ContextMenu="Save" />
	        </Element>        
                <Element Name="btn_cancel" 
        			Class="Button" 
        			Text="Cancel" 
        			CssClass="button_gray_m">
            <EventHandler Name="cancel_onclick" 
            			Event="onclick" 
            			Function="SwitchForm()"  
            			ShortcutKey="Escape" 
            			ContextMenu="Cancel"/>
        </Element>      
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>