<EasyForm Name="SmsQueueNewForm" 
			Class="EasyForm" 
			FormType="New" 
			jsClass="Openbiz.Form" 
			Icon="{RESOURCE_URL}/sms/images/icon_mod_sms_queue_add.png"
			Title="New Sms Queue" 
			Description="Sms Queue Description" 
			BizDataObj="sms.do.SmsQueueDO" 
			TemplateEngine="Smarty" 
			TemplateFile="form_edit.tpl.html" 
			MessageFile="" 
			Access="sms.Manage">
    <DataPanel>

  				
				
       								   	

		

       	<Element Name="fld_sender" 
       				ElementSet="General" 
       				Class="InputText" 
       				FieldName="sender" 
       				Label="Sender" 
       				AllowURLParam="N"
       				/>     
       								   	

		

       	<Element Name="fld_mobile_name" 
       				ElementSet="mobile" 
       				Class="InputText" 
       				FieldName="mobile_name" 
       				Label=" Name" 
       				AllowURLParam="N"
       				/>     
       								   	

		

       	<Element Name="fld_mobile" 
       				ElementSet="General" 
       				Class="InputText" 
       				FieldName="mobile" 
       				Label="mobile" 
       				AllowURLParam="N"
       				/>     
       								   	

		

       	<Element Name="fld_subject" 
       				ElementSet="General" 
       				Class="InputText" 
       				FieldName="subject" 
       				Label="Subject" 
       				AllowURLParam="N"
       				/>     
       								   	

		

       	<Element Name="fld_mobile" 
       				ElementSet="General" 
       				Class="InputText" 
       				FieldName="mobile" 
       				Label="Mobile" 
       				AllowURLParam="N"
       				/>     
       								   	

		

       								   	

       	 	
		<Element Name="fld_content" 
					Class="Textarea" 
					ElementSet="General"
					FieldName="content" 
					Label="Content"  />		
		

       								   	

		<Element Name="fld_status" 
					Class="DropDownList" 
					ElementSet="General"
					FieldName="status" 
					SelectFrom="common.lov.CommLOV(Bool)" 
					Label="Status"  
					Sortable="Y" 
					AllowURLParam="N" 
					Translatable="N" 
					OnEventLog="N" 
					Link="javascript:;">				
		</Element>
		

       	<Element Name="fld_sent_time" 
       				ElementSet="Sent" 
       				Class="InputDatetime" 
       				FieldName="sent_time" 
       				Label=" Time" 
       				AllowURLParam="N"
       				/>     
       								   	

		

       								   	

		

    </DataPanel>
    <ActionPanel>       
        	        <Element Name="btn_save" 
	        			Class="Button" 
	        			Text="Save" 
	        			CssClass="button_gray_m">
	            <EventHandler Name="save_onclick" 
	            			EventLogMsg="" 
	            			Event="onclick" 
	            			Function="InsertRecord()" 
	            			RedirectPage="{APP_INDEX}/sms/sms_queue_detail/{@sms.do.SmsQueueDO:Field[Id].Value}"  
	            			ShortcutKey="Ctrl+Enter" 
	            			ContextMenu="Save" />
	        </Element>        
                <Element Name="btn_cancel" 
        			Class="Button" 
        			Text="Cancel" 
        			CssClass="button_gray_m">
            <EventHandler Name="cancel_onclick" 
            			Event="onclick" 
            			Function="SwitchForm()"  
            			ShortcutKey="Escape" 
            			ContextMenu="Cancel"/>
        </Element>      
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>