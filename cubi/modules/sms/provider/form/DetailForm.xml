<EasyForm Name="DetailForm" 
			Class="ProviderForm" 
			FormType="Detail" 
			jsClass="Openbiz.Form" 
			Icon="{RESOURCE_URL}/sms/images/icon_mod_sms_provider_detail.png"
			Title="SMS Provider Detail" 
			Description="You can setup crediential for selected SMS provider" 
			BizDataObj="sms.provider.do.ProviderDO" 
			TemplateEngine="Smarty" 
			TemplateFile="provider_detail.tpl.html" 
			MessageFile="SmsProvider.ini" 
			Access="sms.Manage">
    <DataPanel>

  		<Element Name="fld_Id" ElementSet="General" Hidden="Y" Class="LabelText" FieldName="Id" Label="Id" AllowURLParam="Y"/>       	
  
        <Element Name="fld_instructions_img" Class="LabelImage" ElementSet="Instruction" FieldName="type" Text="{RESOURCE_URL}/sms/images/instruction_{@:Elem[fld_platform].Value}.png" Label=""    AllowURLParam="N"  SelectFrom="oauth.enum.Enum(oauthType)"/>
  
		<Element Name="fld_platform" ElementSet="Provider"  Class="LabelImage" Link="{@:Elem[fld_site_url].Value}" Style="display:block;padding-left:5px;width:100px;" FieldName="type" Text="{RESOURCE_URL}/sms/images/icon_{@:Elem[fld_platform].Value}.png" Label="Provider" DefaultValue="default" Sortable="Y" Target="_blank">
        </Element>  	  
  	  
		<Element Name="fld_site_url" 
					ElementSet="Provider" 
        			Class="LabelText" 
        			FieldName="site_url" 
        			Label="Website" 
        			AllowURLParam="N"
        			Link="{@:Elem[fld_site_url].Value}"
        			Target="_blank"
        			 />  
       						  	  
  	  
       	<Element Name="fld_username" 
       				ElementSet="General"
       				Class="LabelText" 
       				FieldName="username" 
       				Label="Username" 
       				AllowURLParam="N"
       				/>
    
       								   	

       	<Element Name="fld_password" 
       				ElementSet="General"
       				Class="LabelPassword" 
       				FieldName="password" 
       				Label="Password" 
       				AllowURLParam="N"
       				/>
		
		   	
		<Element Name="fld_status" 
					Class="LabelBool" 
					ElementSet="General"
					FieldName="status" 
					Label="Status"  
					Sortable="Y" 
					AllowURLParam="N" 
					Translatable="N" 
					OnEventLog="N" 
					Link="javascript:;">				
		</Element>
       	 	
		<Element Name="fld_description" 
					Class="LabelTextarea" 
					ElementSet="General"
					FieldName="description" 
					Label="Description"  />		
		

       								   	
				   	

					
    </DataPanel>
    <ActionPanel>       
        <Element Name="btn_edit" Class="Button" Text="Edit" CssClass="button_gray_m" Description="edit record (Ctrl+E)">
			<EventHandler Name="btn_new_onclick" Event="onclick" Function="SwitchForm(sms.provider.form.EditForm,{@:Elem[fld_Id].Value})"  ShortcutKey="Ctrl+E" ContextMenu="Edit" />
        </Element>
        <Element Name="btn_cancel" 
        			Class="Button" 
        			Text="Cancel" 
        			CssClass="button_gray_m">
            <EventHandler Name="cancel_onclick" 
            			Event="onclick" 
            			Function="SwitchForm()"  
            			ShortcutKey="Escape" 
            			ContextMenu="Cancel"/>
        </Element>      
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>