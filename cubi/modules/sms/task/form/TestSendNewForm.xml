<EasyForm Name="TestSendNewForm" 
			Class="TestSendNewForm" 
			FormType="New" 
			jsClass="Openbiz.Form" 
			Icon="{RESOURCE_URL}/sms/images/icon_mod_add.png"
			Title="Test Send SMS" 
			Description="Test Send SMS" 
			BizDataObj="sms.task.do.TaskDO" 
			TemplateEngine="Smarty" 
			TemplateFile="form_edit.tpl.html" 
			MessageFile="SmsProvider.ini" 
			Access="sms.Manage">
    <DataPanel>

<Element Name="fld_provider"  Class="DropDownList" ElementSet="Sms Send" Description="" FieldName="provider" Label="Sms provider" SelectFrom="sms.lov.ProviderLOV(Provider)" />	
	<Element Name="fld_mobile" 
       				Class="InputText" 
       				FieldName="mobile" 
       				Label="mobile" 
       				AllowURLParam="N"
					 ElementSet="Sms Send"  
					 Required="Y"
					 HTMLAttr="maxlength='11'"
       				/>  
      	<Element Name="fld_content" 
       				Class="Textarea" 
       				FieldName="content" 
       				Label="content" 
       				AllowURLParam="N"
					 ElementSet="Sms Send"
					  Required="Y"
					   HTMLAttr="maxlength='250'"
       				/>      
       								   	
			
				
       	<Element Name="fld_priority" 
       				Class="InputText" 
       				FieldName="priority" 
       				Label="Priority" 
       				AllowURLParam="N"
					 ElementSet="Sms Send"
					 DefaultValue="99"
					 Hidden="Y"
       				/>     		  
    </DataPanel>
    <ActionPanel>       
        	        <Element Name="btn_save" 
	        			Class="Button" 
	        			Text="Save" 
	        			CssClass="button_gray_m">
	            <EventHandler Name="save_onclick" 
	            			EventLogMsg="" 
	            			Event="onclick" 
	            			Function="InsertRecord()" 
	            			RedirectPage="{APP_INDEX}/sms/Intergration_Setting"  
	            			ShortcutKey="Ctrl+Enter" 
	            			ContextMenu="Save" />
	        </Element>        
                <Element Name="btn_cancel" 
        			Class="Button" 
        			Text="Cancel" 
        			CssClass="button_gray_m">
            <EventHandler Name="cancel_onclick" 
            			Event="onclick" 
            			Function="SwitchForm()"  
            			ShortcutKey="Escape" 
            			ContextMenu="Cancel"/>
        </Element>      
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>