<EasyForm Name="DetailForm" 
			Class="EasyForm" 
			FormType="Detail" 
			jsClass="Openbiz.Form" 
			Icon="{RESOURCE_URL}/sms/images/icon_mod_detail.png"
			Title="Sms Tasklist Detail" 
			Description="Sms Tasklist Description" 
			BizDataObj="sms.task.do.TaskDO" 
			TemplateEngine="Smarty" 
			TemplateFile="form_detail.tpl.html" 
			MessageFile="" 
			Access="sms.Manage">
    <DataPanel>

       	<Element Name="fld_Id" 
       				Class="LabelText" 
       				ElementSet="General"
       				Hidden="Y" 
       				FieldName="Id" 
       				Label="Id"  
       				AllowURLParam="Y"/>  
      <Element Name="fld_mobile" 
       				Class="LabelText" 
       				FieldName="mobile" 
       				Label="mobile" 
       				AllowURLParam="N"
					 
			 
       				/>  		         				  				      				
       	<Element Name="fld_content" 
       				ElementSet="Sms"
       				Class="LabelText" 
       				FieldName="content" 
       				Label="content" 
       				AllowURLParam="N"
					/>
        				         				  				      				
       	<Element Name="fld_has_sent" 
       				ElementSet="General"
       				Class="LabelText" 
       				FieldName="has_sent" 
       				Label="has sent" 
       				AllowURLParam="N"
					/>
        				         				  				      				
       	<Element Name="fld_sms_number" 
       				ElementSet="General"
       				Class="LabelText" 
       				FieldName="sms_number" 
       				Label="sms number" 
       				AllowURLParam="N"
					/>
        				         				  				      				
       	<Element Name="fld_priority" 
       				ElementSet="General"
       				Class="LabelText" 
       				FieldName="priority" 
       				Label="Priority" 
       				AllowURLParam="N"
					/>
        				         				  				      				
		<Element Name="fld_status" 
					Class="LabelBool" 
					ElementSet="General"
					FieldName="status" 
					Label="Status"  
					Sortable="Y" 
					AllowURLParam="N" 
					Translatable="N" 
					OnEventLog="N" 
					Link="javascript:;">				
		</Element>
        				         				  				      						         				  				      			
					
       	<Element Name="fld_create_by" 
       				Class="LabelText" 
       				ElementSet="Miscellaneous" 
       				FieldName="create_by" 
       				Label="Create By" 
       				Text="{BizSystem::GetProfileName(@:Elem[fld_create_by].Value)}" 
       				AllowURLParam="N"
       				 />  
       				   	
       	<Element Name="fld_create_time" 
       				Class="LabelText" 
       				ElementSet="Miscellaneous" 
       				FieldName="create_time" 
       				Label="Create Time"  
       				AllowURLParam="N"
       				 />       	

					
    </DataPanel>
    <ActionPanel>  
        <Element Name="btn_cancel" 
        			Class="LabelBack" 
        			Text="Back" 
        			CssClass="button_gray_m"
        			Link="sms/sms_tasklist_manage" />        
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>