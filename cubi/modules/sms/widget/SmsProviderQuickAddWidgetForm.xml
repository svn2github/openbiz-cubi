<EasyForm Name="SmsProviderQuickAddWidgetForm" 
			Class="PickerForm" 
			FormType="New" 
			jsClass="Openbiz.Form" 
			Icon="{RESOURCE_URL}/sms/images/icon_mod_sms_provider_add.png"
			Title="Quick Add sms_provider" 
			Description="Create a new sms_provider and edit its content later." 
			BizDataObj="sms.do.SmsProviderPickDO" 
			TemplateEngine="Smarty" 
			TemplateFile="form_data_quick_add.tpl.html" 
			MessageFile="SmsProvider.ini" 
			Access="sms.Manage">
    <DataPanel>
  				
				
       								   	


       	<Element Name="fld_password" 
       				ElementSet="General" 
       				Class="InputText" 
       				FieldName="password" 
       				Label="Username" 
       				AllowURLParam="N"/>     
       								   	


       	<Element Name="fld_username" 
       				ElementSet="General" 
       				Class="InputText" 
       				FieldName="username" 
       				Label="Username" 
       				AllowURLParam="N"/>     
       								   	


       								   	

       	 	
		<Element Name="fld_description" 
					Class="Textarea" 
					ElementSet="General" 
					FieldName="description" 
					Label="Description"  />		

       								   	


       								   	


       								   	


       								   	


       	<Element Name="fld_status" 
       				ElementSet="General" 
       				Class="InputText" 
       				FieldName="status" 
       				Label="Status" 
       				AllowURLParam="N"/>     
       								   	


       								   	


       								   	


       								   	


       								   	


       
    </DataPanel>
    <ActionPanel>
        <Element Name="btn_save" 
        		Class="Button" 
        		Text="Save" 
        		CssClass="button_gray_m">
            <EventHandler Name="save_onclick" 
            			EventLogMsg="" 
            			Event="onclick" 
            			Function="insertToParent()"   
            			ShortcutKey="Ctrl+Enter" 
            			ContextMenu="Save" />
        </Element>
        <Element Name="btn_cancel" 
        		Class="Button" 
        		Text="Cancel" 
        		CssClass="button_gray_m">
            <EventHandler Name="onclick" 
            			Event="onclick" 
            			Function="js:Openbiz.Window.closeDialog()"/>
        </Element>
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>