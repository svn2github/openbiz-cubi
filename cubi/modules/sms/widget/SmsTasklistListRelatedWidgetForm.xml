<EasyForm Name="SmsTasklistListRelatedWidgetForm" 
			Class="PickerForm"			  
			FormType="List" 			
			jsClass="Openbiz.TableForm" 
			BizDataObj="sms.do.SmsTasklistRefDO" 
			PageSize="-1"  
			DefaultForm="Y" 
			TemplateEngine="Smarty" 
			TemplateFile="element_listform_lite.tpl.html" 
			MessageFile="" 
			Access="System.Administer_System">	
    <DataPanel>           
            
        			
		<Element Name="fld_Id" 
        			Class="common.element.ColumnTitle" 
        			FieldName="Id" 
        			Label="ID" 
        			Sortable="Y" 
        			AllowURLParam="N" 
        			Link="javascript:;" />   
		<Element Name="fld_share" Class="ColumnShare" 
				MyPrivateImg="{RESOURCE_URL}/sms/images/icon_sms_private.gif"
				MySharedImg="{RESOURCE_URL}/sms/images/icon_sms_shared.gif" 
				MyAssignedImg="{RESOURCE_URL}/sms/images/icon_sms_assigned.gif"
				MyDistributedImg="{RESOURCE_URL}/sms/images/icon_sms_distributed.gif" 
				GroupSharedImg="{RESOURCE_URL}/sms/images/icon_sms_shared_group.gif"
				OtherSharedImg="{RESOURCE_URL}/sms/images/icon_sms_shared_other.gif"
				FieldName="create_by" 
				Label="Share"  
				Sortable="Y" 
				AllowURLParam="N" 
				Translatable="N" 
				OnEventLog="N" 
				Link="javascript:;">
		</Element>
   
    
		<Element Name="fld_content" 
        			Class="ColumnText" 
        			FieldName="content" 
        			Label=" Body"         			 
        			Sortable="Y" 
        			MaxLength="15"
        			Link="{APP_INDEX}/sms/sms_tasklist_detail/{@:Elem[fld_Id].Value}"        			
        			 /> 
        	
   
    
		<Element Name="fld_has_sent" 
        			Class="ColumnText" 
        			FieldName="has_sent" 
        			Label="已发送数量" 
        			MaxLength="15"        			 
        			Sortable="Y"
        			 />        			
        	
   
    
		<Element Name="fld_sms_number" 
        			Class="ColumnText" 
        			FieldName="sms_number" 
        			Label="收件人数量" 
        			MaxLength="15"        			 
        			Sortable="Y"
        			 />        			
        	
   
    
		<Element Name="fld_priority" 
        			Class="ColumnText" 
        			FieldName="priority" 
        			Label="Priority" 
        			MaxLength="15"        			 
        			Sortable="Y"
        			 />        			
        	
   
    
		<Element Name="fld_status" 
					Class="ColumnBool" 
					FieldName="status" 
					Label="Status"  
					Sortable="Y" 
					AllowURLParam="N" 
					Translatable="N" 
					OnEventLog="N" 
					Link="javascript:;">
		</Element>
   
    
		<Element Name="fld_mobile" 
        			Class="ColumnText" 
        			FieldName="mobile" 
        			Label="mobile" 
        			MaxLength="15"        			 
        			Sortable="Y"
        			 />        			
        	
   
    
    
    
    
    
    
    
    
    
  
    </DataPanel>
    <ActionPanel /> 
    <NavPanel />     
</EasyForm>