<EasyForm Name="SmsQueueQuickAddWidgetForm" 
			Class="PickerForm" 
			FormType="New" 
			jsClass="Openbiz.Form" 
			Icon="{RESOURCE_URL}/sms/images/icon_mod_sms_queue_add.png"
			Title="Quick Add Sms Queue" 
			Description="Create a new sms queue and edit its content later." 
			BizDataObj="sms.do.SmsQueuePickDO" 
			TemplateEngine="Smarty" 
			TemplateFile="form_data_quick_add.tpl.html" 
			MessageFile="" 
			Access="sms.Manage">
    <DataPanel>
  				
				
       								   	


       	<Element Name="fld_sender" 
       				ElementSet="General" 
       				Class="InputText" 
       				FieldName="sender" 
       				Label="Sender" 
       				AllowURLParam="N"/>     
       								   	


       	<Element Name="fld_mobile_name" 
       				ElementSet="General" 
       				Class="InputText" 
       				FieldName="mobile_name" 
       				Label=" Name" 
       				AllowURLParam="N"/>     
       								   	


       	<Element Name="fld_mobile" 
       				ElementSet="General" 
       				Class="InputText" 
       				FieldName="mobile" 
       				Label="mobile" 
       				AllowURLParam="N"/>     
       								   	


       	<Element Name="fld_subject" 
       				ElementSet="General" 
       				Class="InputText" 
       				FieldName="subject" 
       				Label="Subject" 
       				AllowURLParam="N"/>     
       								   	


       	<Element Name="fld_mobile" 
       				ElementSet="General" 
       				Class="InputText" 
       				FieldName="mobile" 
       				Label="Mobile" 
       				AllowURLParam="N"/>     
       								   	


       								   	

       	 	
		<Element Name="fld_content" 
					Class="Textarea" 
					ElementSet="General" 
					FieldName="content" 
					Label="Content"  />		

       	<Element Name="fld_status" 
       				ElementSet="General" 
       				Class="InputText" 
       				FieldName="status" 
       				Label="Status" 
       				AllowURLParam="N"/>     
       								   	


       	<Element Name="fld_sent_time" 
       				ElementSet="General" 
       				Class="InputText" 
       				FieldName="sent_time" 
       				Label=" Time" 
       				AllowURLParam="N"/>     
       								   	


       								   	


       
    </DataPanel>
    <ActionPanel>
        <Element Name="btn_save" 
        		Class="Button" 
        		Text="Save" 
        		CssClass="button_gray_m">
            <EventHandler Name="save_onclick" 
            			EventLogMsg="" 
            			Event="onclick" 
            			Function="insertToParent()"   
            			ShortcutKey="Ctrl+Enter" 
            			ContextMenu="Save" />
        </Element>
        <Element Name="btn_cancel" 
        		Class="Button" 
        		Text="Cancel" 
        		CssClass="button_gray_m">
            <EventHandler Name="onclick" 
            			Event="onclick" 
            			Function="js:Openbiz.Window.closeDialog()"/>
        </Element>
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>