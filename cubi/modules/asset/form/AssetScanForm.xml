<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="AssetScanForm" 
			Class="AssetForm" 
			FormType="New" 
			jsClass="Openbiz.Form" 
			Icon="{RESOURCE_URL}/asset/images/icon_mod_asset_add.png"
			Title="Scan a Item Barcode" 
			Description="Asset Manage" 
			BizDataObj="asset.do.AssetDO" 
			TemplateEngine="Smarty" 
			TemplateFile="form_edit.tpl.html" 
			MessageFile="Asset.ini" 
			Access="asset.Manage">
    <DataPanel>

       	<Element Name="fld_barcode" 
       				ElementSet="General" 
       				Class="InputText" 
       				FieldName="barcode" 
       				Label="Barcode" 
       				AllowURLParam="N"       				
       				Description="Please use your barcode scanner."
       				/>     
       		
       	<Element Name="fld_type_id" 
				ElementSet="General" 
				Class="Hidden" 
				FieldName="type_id" 
				Label="Type" 
				KeepCookie="Y" 
				DefaultValue="1"
				AllowURLParam="N" />						   	

		<!-- 

       								   	
		<Element Name="fld_type_id" 
				ElementSet="General" 
				Class="common.lib.TypeSelector" 
				FieldName="type_id" 
				Label="Type" 
				KeepCookie="Y" 
				SelectFrom="asset.do.AssetTypeDO[name:Id:color]" 
				AllowURLParam="N" />
  				


       	<Element Name="fld_name" 
       				ElementSet="General" 
       				Class="InputText" 
       				FieldName="name" 
       				Label="Name" 
       				AllowURLParam="N"
       				Description="Name of this property"
       				/>     
       								   	
       	 	
		<Element Name="fld_description" 
					Class="Textarea" 
					ElementSet="General"
					FieldName="description" 
					Label="Description"  />		
		

		<Element Name="fld_published" 
					Class="Listbox" 
					ElementSet="Miscellaneous" 
					KeepCookie="Y" 
					SelectFrom="common.lov.CommLOV(Published)" 
					DefaultValue="1" 
					FieldName="group_perm" 
					Label="Group Share"  />
		<Element Name="fld_published_other" 
					Class="Listbox" 
					ElementSet="Miscellaneous" 
					KeepCookie="Y" 
					SelectFrom="common.lov.CommLOV(Published)" 
					DefaultValue="0" 
					FieldName="other_perm" 
					Label="Other Group"  />
					-->
    </DataPanel>
    <ActionPanel>       
                	<Element Name="btn_finish" 
        			Class="Button" 
        			Text="Next Step" 
        			CssClass="button_gray_w">
            	<EventHandler Name="finish_onclick" 
            				EventLogMsg="" 
            				Event="onclick" 
            				Function="InsertRecord()" 
            				RedirectPage="form=asset.form.AssetEditForm&amp;fld:Id={@asset.do.AssetDO:Field[Id].Value}"  
            				ShortcutKey="Enter"
            				ContextMenu="Next Step"   />
        	</Element>
                <Element Name="btn_cancel" 
        			Class="Button" 
        			Text="Cancel" 
        			CssClass="button_gray_m">
            <EventHandler Name="cancel_onclick" 
            			Event="onclick" 
            			Function="SwitchForm()"  
            			ShortcutKey="Escape" 
            			ContextMenu="Cancel"/>
        </Element>      
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>