<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="AssetQueryForm" 
			Class="AssetQueryForm" 
			FormType="New" 
			jsClass="Openbiz.Form" 
			Icon="{RESOURCE_URL}/asset/images/icon_mod_asset_query.png"
			Title="Scan a Item Barcode" 
			Description="You can use your barcode scanner to quickly input the code number." 
			BizDataObj="asset.do.AssetDO" 
			TemplateEngine="Smarty" 
			TemplateFile="form_edit.tpl.html" 
			MessageFile="Asset.ini" 
			Access="asset.Manage">
    <DataPanel>

       	<Element Name="fld_barcode" 
       				ElementSet="General" 
       				Class="BarcodeScanner" 
       				FieldName="barcode" 
       				Label="Barcode" 
       				AllowURLParam="N"       				
       				Description="Please use your barcode scanner."
       				/>     
    
    </DataPanel>
    <ActionPanel>       
                	<Element Name="btn_finish" 
        			Class="Button" 
        			Text="Query" 
        			CssClass="button_gray_w">
            	<EventHandler Name="finish_onclick" 
            				EventLogMsg="" 
            				Event="onclick" 
            				Function="QueryBarcode()" 
            				ShortcutKey="Enter"
            				ContextMenu="Query"   />
        	</Element>
              
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>