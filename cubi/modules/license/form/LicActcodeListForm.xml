<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="LicActcodeListForm" Class="EasyForm" FormType="List" jsClass="jbForm" Title="Lic Actcode Management" Description="" BizDataObj="license.do.LicActcodeDO" PageSize="10" DefaultForm="Y" TemplateEngine="Smarty" TemplateFile="grid.tpl" EventName="" MessageFile="" Access="license.Access">
    <DataPanel>
        <Element Name="row_selections" Class="RowCheckbox"  Label="" FieldName="Id"/>
        <Element Name="fld_Id" Class="ColumnText" FieldName="Id" Label="Id" Sortable="Y" AllowURLParam="N" Link="javascript:">         
         	<EventHandler Name="fld_Id_onclick" Event="onclick" Function="SwitchForm(license.form.LicActcodeDetailForm,{@:Elem[fld_Id].Value})"   />
        </Element>
        <Element Name="fld_activation_code" Class="ColumnText" FieldName="activation_code" Label="Activation Code"  Sortable="Y" Link="javascript:">
            <EventHandler Name="fld_activation_code_onclick" Event="onclick" Function="SwitchForm(license.form.LicActcodeDetailForm,{@:Elem[fld_Id].Value})"   />
        </Element>
        <Element Name="fld_sku" Class="ColumnText" FieldName="sku" Label="SKU"  Sortable="Y"/>
        <Element Name="fld_policy_id" Class="ColumnText" FieldName="policy_id" Label="Policy Id"  Sortable="Y"/>
        <Element Name="fld_status" Class="ColumnText" FieldName="status" Label="Status" Sortable="Y"/>
        <Element Name="fld_start_time" Class="ColumnText" FieldName="start_time" Label="Start Time"  Sortable="Y"/>
        <Element Name="fld_end_time" Class="ColumnText" FieldName="end_time" Label="End Time"  Sortable="Y"/>
        <Element Name="fld_max_use" Class="ColumnText" FieldName="max_use" Label="Max Use" Sortable="Y"/>
        <Element Name="fld_cur_use" Class="ColumnText" FieldName="cur_use" Label="Cur Use"  Sortable="Y"/>
    </DataPanel>
    <ActionPanel>
        <Element Name="lnk_new" Class="Button" Text="Add" CssClass="button_gray_add" Description="new record (Insert)" Access="license.Manage">
            <EventHandler Name="lnk_new_onclick" Event="onclick" EventLogMsg="" Function="SwitchForm(license.form.LicActcodeNewForm)"  ShortcutKey="Insert" ContextMenu="New"/>
        </Element>
        <Element Name="btn_edit" Class="Button" Text="Edit" CssClass="button_gray_m" Description="edit record (Ctrl+E)" Access="license.Manage">
            <EventHandler Name="btn_edit_onclick" Event="onclick" EventLogMsg="" Function="EditRecord()" RedirectPage="form=license.form.LicActcodeEditForm&amp;fld:Id={@:Elem[fld_Id].Value}" ShortcutKey="Ctrl+E" ContextMenu="Edit" />
        </Element>
        <Element Name="btn_copy" Class="Button" Text="Copy" CssClass="button_gray_m" Description="copy record (Ctrl+C)" Access="license.Manage">
            <EventHandler Name="btn_copy_onclick" Event="onclick" EventLogMsg="" Function="CopyRecord()" RedirectPage="form=license.form.LicActcodeCopyForm&amp;fld:Id={@:Elem[fld_Id].Value}" ShortcutKey="Ctrl+C" ContextMenu="Copy"/>
        </Element>
        <Element Name="btn_delete" Class="Button" Text="Delete" CssClass="button_gray_m" Access="license.Manage">
            <EventHandler Name="del_onclick" Event="onclick" EventLogMsg="" Function="DeleteRecord()" ShortcutKey="Ctrl+Delete" ContextMenu="Delete"/>
        </Element>
        <Element Name="btn_excel" Class="Button" Text="Export" CssClass="button_gray_m">
            <EventHandler Name="exc_onclick" Event="onclick" EventLogMsg="" Function="CallService(excelService,renderCSV)" FunctionType="Popup" ShortcutKey="Ctrl+Shift+X" ContextMenu="Export"/>
        </Element>
    </ActionPanel> 
    <NavPanel>
  		<!--<Element Name="page_selector" Class="PageSelector" Text="{@:m_CurrentPage}" Label="Go to Page" CssClass="input_select" cssFocusClass="input_select_focus">
            <EventHandler Name="btn_page_selector_onchange" Event="onchange" Function="GotoSelectedPage(page_selector)"/>
        </Element>-->
        <Element Name="pagesize_selector" Class="PagesizeSelector" Text="{@:m_Range}" Label="Show Rows" CssClass="input_select" cssFocusClass="input_select_focus">
            <EventHandler Name="btn_pagesize_selector_onchange" Event="onchange" Function="SetPageSize(pagesize_selector)"/>
        </Element>      
        <Element Name="btn_first" Class="Button" Enabled="{(@:m_CurrentPage == 1)?'N':'Y'}" Text="" CssClass="button_gray_navi {(@:m_CurrentPage == 1)?'first_gray':'first'}">
            <EventHandler Name="first_onclick" Event="onclick" Function="GotoPage(1)"/>
        </Element>
        <Element Name="btn_prev" Class="Button" Enabled="{(@:m_CurrentPage == 1)?'N':'Y'}" Text="" CssClass="button_gray_navi {(@:m_CurrentPage == 1)?'prev_gray':'prev'}">
            <EventHandler Name="prev_onclick" Event="onclick" Function="GotoPage({@:m_CurrentPage - 1})" ShortcutKey="Ctrl+Shift+Left"/>
        </Element>
        <Element Name="txt_page" Class="LabelText" Text="{'@:m_CurrentPage of @:m_TotalPages '}">
        </Element>
        <Element Name="btn_next" Class="Button" Enabled="{(@:m_CurrentPage == @:m_TotalPages )?'N':'Y'}" Text="" CssClass="button_gray_navi {(@:m_CurrentPage == @:m_TotalPages)?'next_gray':'next'}">
            <EventHandler Name="next_onclick" Event="onclick" Function="GotoPage({@:m_CurrentPage + 1})" ShortcutKey="Ctrl+Shift+Right"/>
        </Element>
        <Element Name="btn_last" Class="Button" Enabled="{(@:m_CurrentPage == @:m_TotalPages )?'N':'Y'}" Text="" CssClass="button_gray_navi {(@:m_CurrentPage == @:m_TotalPages)?'last_gray':'last'}">
            <EventHandler Name="last_onclick" Event="onclick" Function="GotoPage({@:m_TotalPages})"/>
        </Element>
    </NavPanel> 
    <SearchPanel>
			<Element Name="qry_activation_code" Class="AutoSuggest" SelectFrom="license.do.LicActcodeDO[activation_code],[activation_code] like '%{@:Elem[qry_activation_code].Value}%' GROUP BY [activation_code]" FuzzySearch="Y" FieldName="activation_code" Label="" cssFocusClass="input_text_search_focus" CssClass="input_text_search" />
        <Element Name="btn_dosearch" Class="Button" text="Go" CssClass="button_gray">
            <EventHandler Name="search_onclick" Event="onclick" Function="RunSearch()" ShortcutKey="Enter"/>
        </Element>	
    </SearchPanel>
</EasyForm>
