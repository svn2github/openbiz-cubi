<EasyForm Name="HelpCategoryCopyForm" Class="HelpCategoryForm" Icon="icon_help_copy.gif" FormType="Edit" jsClass="jbForm" Title="Copy help_category" Description="" BizDataObj="help.do.HelpCategoryDO" PageSize="10" DefaultForm="Y" TemplateEngine="Smarty" TemplateFile="detail.tpl" EventName="HELP_CATEGORY" MessageFile="HelpCategory.msg">
