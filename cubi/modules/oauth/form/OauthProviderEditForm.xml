<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="OauthProviderEditForm" Class="EasyForm" FormType="Edit" jsClass="jbForm" Icon="{RESOURCE_URL}/oauth/images/icon_oauth.png" Title="OAuth Provider Setting" Description="OAuth feature allows users from 3rd-party platform login this system by using their own account." BizDataObj="oauth.do.OauthProviderDO" DefaultForm="Y" TemplateEngine="Smarty" TemplateFile="provider_edit.tpl.html" EventName="" MessageFile="" Access="oauth.Administer">
    <DataPanel>
	    <Element Name="fld_instructions_img" Class="LabelList" ElementSet="Instruction" FieldName="type" Label="Type"    AllowURLParam="N"  SelectFrom="oauth.enum.Enum(oauthType)"/>
       	<Element Name="fld_platform" ElementSet="Setting" Class="LabelImage" FieldName="type" Label="Platform" Text="{RESOURCE_URL}/oauth/images/icon_{@:Elem[fld_platform].Value}.png" AllowURLParam="N"/>
        <Element Name="fld_key" Class="InputText" ElementSet="Setting" FieldName="key" Label="App Key"   AllowURLParam="N"  Required="Y" />
        <Element Name="fld_value" Class="InputText" ElementSet="Setting" FieldName="value" Label="App Secret"   AllowURLParam="N"  Required="Y" />
		<Element Name="fld_status" Class="DropDownList" ElementSet="Setting" FieldName="status" Label="Status"   AllowURLParam="N"  SelectFrom="common.lov.CommLOV(EnableStatus)"/>
    </DataPanel>
    <ActionPanel>
        <Element Name="btn_save" Class="Button" Text="Save" CssClass="button_gray_m">
            <EventHandler Name="save_onclick" Event="onclick" EventLogMsg=""  Function="UpdateRecord()" RedirectPage="form=oauth.form.OauthProviderDetailForm&amp;fld:Id={@oauth.do.OauthProviderDO:Field[Id].Value}" ShortcutKey="Ctrl+Enter" ContextMenu="Save" />
        </Element>
        <Element Name="btn_cancel" Class="Button" Text="Cancel" CssClass="button_gray_m">
            <EventHandler Name="btn_cancel_onclick" Event="onclick" Function="SwitchForm()"  ShortcutKey="Escape" ContextMenu="Cancel" />
        </Element>
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>
