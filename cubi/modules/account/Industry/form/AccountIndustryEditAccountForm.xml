    <Element Name="btn_cancel" Class="Button" Text="Cancel" CssClass="button_gray_m">
      <EventHandler Name="btn_cancel_onclick" Event="onclick" ShortcutKey="Escape" ContextMenu="Cancel" Function="SwitchForm()"/>
