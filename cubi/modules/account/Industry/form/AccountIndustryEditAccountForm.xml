<EasyForm Name="AccountIndustryEditAccountForm" Class="EasyForm" FormType="Detail" jsClass="Openbiz.Form" Icon="{RESOURCE_URL}/account/images/icon_mod_account_industry_detail.png" Title="Industry  Detail" Description="Account Industry Description" BizDataObj="account.Industry.do.AccountIndustryDO" TemplateEngine="Smarty" TemplateFile="form_detail_adv.tpl.html" MessageFile="AccountIndustry.ini" Access="account.Access">
