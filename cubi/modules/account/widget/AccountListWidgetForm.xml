<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="AccountListWidgetForm" 
			Class="EasyForm"			  
			FormType="List" 			
			jsClass="Openbiz.TableForm" 
			BizDataObj="account.do.AccountRefDO" 
			PageSize="-1"  
			DefaultForm="Y" 
			TemplateEngine="Smarty" 
			TemplateFile="element_listform_lite.tpl.html" 
			MessageFile="Account.ini" 
			Access="account.Access">	
    <DataPanel>           
            
     
     
     
     
     
		<Element Name="row_selections" 
        			Class="RowCheckbox"  
        			Label="" 
        			FieldName="Id"/>
		<Element Name="fld_Id" 
        			Class="common.element.ColumnTitle" 
        			FieldName="Id" 
        			Label="ID" 
        			Sortable="Y" 
        			AllowURLParam="N" 
        			Link="javascript:;" />   
		<Element Name="fld_share" Class="ColumnShare" 
				MyPrivateImg="{RESOURCE_URL}/account/images/icon_account_private.gif"
				MySharedImg="{RESOURCE_URL}/account/images/icon_account_shared.gif" 
				MyAssignedImg="{RESOURCE_URL}/account/images/icon_account_assigned.gif"
				MyDistributedImg="{RESOURCE_URL}/account/images/icon_account_distributed.gif" 
				GroupSharedImg="{RESOURCE_URL}/account/images/icon_account_shared_group.gif"
				OtherSharedImg="{RESOURCE_URL}/account/images/icon_account_shared_other.gif"
				FieldName="create_by" 
				Label="Share"  
				Sortable="Y" 
				AllowURLParam="N" 
				Translatable="N" 
				OnEventLog="N" 
				Link="javascript:;">
		</Element>
     
     
     
     
     
		<Element Name="fld_name" 
        			Class="ColumnText" 
        			FieldName="name" 
        			Label="Name"         			 
        			Sortable="Y" 
        			MaxLength="15"
        			Link="{APP_INDEX}/account/account_detail/{@:Elem[fld_Id].Value}"        			
        			 /> 
        	
     
		<Element Name="fld_description" 
        			Class="ColumnText" 
        			FieldName="description" 
        			Label="Description" 
        			MaxLength="15"        			 
        			Sortable="Y"
        			 />        			
        	
     
		<Element Name="fld_phone" 
        			Class="ColumnText" 
        			FieldName="phone" 
        			Label="Phone" 
        			MaxLength="15"        			 
        			Sortable="Y"
        			 />        			
        	
     
		<Element Name="fld_fax" 
        			Class="ColumnText" 
        			FieldName="fax" 
        			Label="Fax" 
        			MaxLength="15"        			 
        			Sortable="Y"
        			 />        			
        	
     
		<Element Name="fld_color" 
				Class="ColumnStyle" 
				FieldName="type_color" 
				Label="Type"  
				Sortable="Y" 
				AllowURLParam="N" 
				Translatable="N" 
				OnEventLog="N" />
				
		<Element Name="fld_type" 
				Class="ColumnText"  
				Style="line-height:24px;" 
				FieldName="type_name" 
				Label="Type"  
				Sortable="Y" 
				AllowURLParam="N" 
				Translatable="N" 
				OnEventLog="N" />						        
  
    </DataPanel>
    <ActionPanel /> 
    <NavPanel />     
</EasyForm>