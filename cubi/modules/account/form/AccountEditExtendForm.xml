<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="AccountEditExtendForm" 
			Class="EasyForm" 
			FormType="Edit" 
			jsClass="Openbiz.Form" 
			Icon="{RESOURCE_URL}/account/images/icon_mod_account_extend.png"
			Title="Edit CRM Account Extend Fields" 
			Description="Here you can edit extend fields for selected type of data" 
			BizDataObj="account..do.AccountDO" 
			TemplateEngine="Smarty" 
			TemplateFile="form_edit_extend.tpl.html" 
			MessageFile="Account.ini" 
			Access="account.Manage">
    <DataPanel>
	    
		<Element Name="fld_form_title"  
					Class="LabelText"   
					FieldName="name" 
					Label="" 
					Width="500" 
					style="font-size:24px;color:#333333;line-height:24px;" 
					AllowURLParam="N" />
		<Element Name="fld_color" 
					Class="Hidden" 
					Hidden="Y" 
					FieldName="type_color" 
					Label="Type"  
					Sortable="Y" 
					AllowURLParam="N" 
					Translatable="N" 
					OnEventLog="N" />
		<Element Name="fld_form_description"  
					BackgroundColor="{@:Elem[fld_color].Value}" 
					Width="648" 
					Class="LabelText" 
					FieldName="type_name" 
					Label="" 
					KeepCookie="Y" 
					SelectFrom="account..do.AccountTypeDO[name:Id:color]" 
					AllowURLParam="N" />					
       	<Element Name="fld_Id" 
       				Class="LabelText" 
       				ElementSet="General"
       				Hidden="Y" 
       				FieldName="Id" 
       				Label="Id"  
       				AllowURLParam="Y"/>     
   				  		
					
       	<Element Name="fld_description" 
       				ElementSet="General" 
       				Class="LabelText" 
       				FieldName="description" 
       				Label="Description" 
       				AllowURLParam="N"/>
       	<Element Name="fld_phone" 
       				ElementSet="General" 
       				Class="LabelText" 
       				FieldName="phone" 
       				Label="Phone" 
       				AllowURLParam="N"/>
       	<Element Name="fld_fax" 
       				ElementSet="General" 
       				Class="LabelText" 
       				FieldName="fax" 
       				Label="Fax" 
       				AllowURLParam="N"/>
       	<Element Name="fld_website" 
       				ElementSet="General" 
       				Class="LabelText" 
       				FieldName="website" 
       				Label="Website" 
       				AllowURLParam="N"/>
       	<Element Name="fld_industry_id" 
       				ElementSet="General" 
       				Class="LabelText" 
       				FieldName="industry_id" 
       				Label="Industry" 
       				AllowURLParam="N"/>
       	<Element Name="fld_employee" 
       				ElementSet="General" 
       				Class="LabelText" 
       				FieldName="employee" 
       				Label="Employee" 
       				AllowURLParam="N"/>
       	<Element Name="fld_annual_revenue" 
       				ElementSet="General" 
       				Class="LabelText" 
       				FieldName="annual_revenue" 
       				Label="Revenue" 
       				AllowURLParam="N"/>
       	<Element Name="fld_billing_country" 
       				ElementSet="General" 
       				Class="LabelText" 
       				FieldName="billing_country" 
       				Label="Country" 
       				AllowURLParam="N"/>
       	<Element Name="fld_billing_zip" 
       				ElementSet="General" 
       				Class="LabelText" 
       				FieldName="billing_zip" 
       				Label="Zip" 
       				AllowURLParam="N"/>
       	<Element Name="fld_billing_state" 
       				ElementSet="General" 
       				Class="LabelText" 
       				FieldName="billing_state" 
       				Label="State" 
       				AllowURLParam="N"/>
       	<Element Name="fld_billing_city" 
       				ElementSet="General" 
       				Class="LabelText" 
       				FieldName="billing_city" 
       				Label="City" 
       				AllowURLParam="N"/>
       	<Element Name="fld_billing_street" 
       				ElementSet="General" 
       				Class="LabelText" 
       				FieldName="billing_street" 
       				Label="Street" 
       				AllowURLParam="N"/>
       	<Element Name="fld_shipping_country" 
       				ElementSet="General" 
       				Class="LabelText" 
       				FieldName="shipping_country" 
       				Label="Country" 
       				AllowURLParam="N"/>
       	<Element Name="fld_shipping_zip" 
       				ElementSet="General" 
       				Class="LabelText" 
       				FieldName="shipping_zip" 
       				Label="Zip" 
       				AllowURLParam="N"/>
       	<Element Name="fld_shipping_state" 
       				ElementSet="General" 
       				Class="LabelText" 
       				FieldName="shipping_state" 
       				Label="State" 
       				AllowURLParam="N"/>
       	<Element Name="fld_shipping_city" 
       				ElementSet="General" 
       				Class="LabelText" 
       				FieldName="shipping_city" 
       				Label="City" 
       				AllowURLParam="N"/>
       	<Element Name="fld_shipping_street" 
       				ElementSet="General" 
       				Class="LabelText" 
       				FieldName="shipping_street" 
       				Label="Street" 
       				AllowURLParam="N"/>
		<Element Name="fld_type_id" 
				ElementSet="Data Type"
				Class="common.lib.TypeSelector" 
				FieldName="type_id" 
				Label="Type" 
				KeepCookie="Y" 
				SelectFrom="account..do.AccountTypeDO[name:Id:color]" 
				AllowURLParam="N" >
   			<EventHandler Name="fld_type_id_onchange" 
   						Event="onchange" 
   						Function="UpdateForm()" />
		</Element>
		
		<Element Name="fld_extend_fields"   
				ElementSet="Extend Fileds"  
				Class="FormElement" 
				FormReference="extend.widget.ExtendDataEditForm" 
				FieldName="extend" 
				Label="" 
				AllowURLParam="N" />

	</DataPanel>
    <ActionPanel>  
        <Element Name="btn_finish" 
        		Class="Button" 
        		Text="Finish" 
        		CssClass="button_gray_w">
            <EventHandler Name="finish_onclick" 
            			EventLogMsg="" 
            			Event="onclick" 
            			Function="UpdateRecord()" 
            			RedirectPage="{APP_INDEX}/account/account_detail/{@account..do.AccountDO:Field[Id].Value}" 
            			ContextMenu="Finish"   />
        </Element>
        <Element Name="btn_cancel" 
        		Class="Button" 
        		Text="Cancel" 
        		CssClass="button_gray_m">
            <EventHandler Name="btn_cancel_onclick" 
            			Event="onclick" 
            			Function="SwitchForm()"  
            			ShortcutKey="Escape" 
            			ContextMenu="Cancel" />
        </Element>        
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>