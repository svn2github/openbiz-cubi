<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="AccountNewForm" 
			Class="EasyForm" 
			FormType="New" 
			jsClass="Openbiz.Form" 
			Icon="{RESOURCE_URL}/account/images/icon_mod_account_add.png"
			Title="New CRM Account" 
			Description="Account Description" 
			BizDataObj="account..do.AccountDO" 
			TemplateEngine="Smarty" 
			TemplateFile="form_edit.tpl.html" 
			MessageFile="Account.ini" 
			Access="account.Manage">
    <DataPanel>

    
		<Element Name="fld_type_id" 
				ElementSet="General" 
				Class="common.lib.TypeSelector" 
				FieldName="type_id" 
				Label="Type" 
				KeepCookie="Y" 
				SelectFrom="account..do.AccountTypeDO[name:Id:color]" 
				AllowURLParam="N" />

       	<Element Name="fld_name" 
       				ElementSet="General" 
       				Class="InputText" 
       				FieldName="name" 
       				Label="Name" 
       				AllowURLParam="N"
       				/>     
 
       	<Element Name="fld_phone" 
       				ElementSet="General" 
       				Class="InputText" 
       				FieldName="phone" 
       				Label="Phone" 
       				AllowURLParam="N"
       				/>     
 
       	<Element Name="fld_fax" 
       				ElementSet="General" 
       				Class="InputText" 
       				FieldName="fax" 
       				Label="Fax" 
       				AllowURLParam="N"
       				/>     
       								   	

		

       	<Element Name="fld_website" 
       				ElementSet="General" 
       				Class="InputText" 
       				FieldName="website" 
       				Label="Website" 
       				AllowURLParam="N"
       				/>     
       								   	

		

       	<Element Name="fld_industry_id" 
       				ElementSet="Additional" 
       				Class="InputText" 
       				FieldName="industry_id" 
       				Label="Industry Id" 
       				AllowURLParam="N"
       				/>     
       								   	

		

       	<Element Name="fld_employee" 
       				ElementSet="Additional" 
       				Class="InputText" 
       				FieldName="employee" 
       				Label="Employee" 
       				AllowURLParam="N"
       				/>     
       								   	

		

       	<Element Name="fld_annual_revenue" 
       				ElementSet="Additional" 
       				Class="InputText" 
       				FieldName="annual_revenue" 
       				Label="Annual Revenue" 
       				AllowURLParam="N"
       				/>     
       								   	

		<Element Name="fld_description" 
					Class="Textarea" 
					ElementSet="Additional" 
					FieldName="description" 
					Label="Description"  />		
				

       	<Element Name="fld_billing_country" 
       				ElementSet="Billing Address" 
       				Class="InputText" 
       				FieldName="billing_country" 
       				Label="Country" 
       				AllowURLParam="N"
       				/>     
       								   	

		

       	<Element Name="fld_billing_zip" 
       				ElementSet="Billing Address" 
       				Class="InputText" 
       				FieldName="billing_zip" 
       				Label="Zip" 
       				AllowURLParam="N"
       				/>     
       				
       	<Element Name="fld_billing_state" 
       				ElementSet="Billing Address" 
       				Class="InputText" 
       				FieldName="billing_state" 
       				Label="State" 
       				AllowURLParam="N"
       				/>     

       	<Element Name="fld_billing_city" 
       				ElementSet="Billing Address" 
       				Class="InputText" 
       				FieldName="billing_city" 
       				Label="City" 
       				AllowURLParam="N"
       				/>     

       	<Element Name="fld_billing_street" 
       				ElementSet="Billing Address" 
       				Class="InputText" 
       				FieldName="billing_street" 
       				Label="Street" 
       				AllowURLParam="N"
       				/>     

       	<Element Name="fld_shipping_country" 
       				ElementSet="Shipping Address" 
       				Class="InputText" 
       				FieldName="shipping_country" 
       				Label="Country" 
       				AllowURLParam="N"
       				/>     

       	<Element Name="fld_shipping_zip" 
       				ElementSet="Shipping Address" 
       				Class="InputText" 
       				FieldName="shipping_zip" 
       				Label="Zip" 
       				AllowURLParam="N"
       				/>     

       	<Element Name="fld_shipping_state" 
       				ElementSet="Shipping Address" 
       				Class="InputText" 
       				FieldName="shipping_state" 
       				Label="State" 
       				AllowURLParam="N"
       				/>     

       	<Element Name="fld_shipping_city" 
       				ElementSet="Shipping Address" 
       				Class="InputText" 
       				FieldName="shipping_city" 
       				Label="City" 
       				AllowURLParam="N"
       				/>     

       	<Element Name="fld_shipping_street" 
       				ElementSet="Shipping Address" 
       				Class="InputText" 
       				FieldName="shipping_street" 
       				Label="Street" 
       				AllowURLParam="N"
       				/>     
  
		<Element Name="fld_published" 
					Class="Listbox" 
					ElementSet="Miscellaneous" 
					KeepCookie="Y" 
					SelectFrom="common.lov.CommLOV(Published)" 
					DefaultValue="1" 
					FieldName="group_perm" 
					Label="Group Share"  />
		<Element Name="fld_published_other" 
					Class="Listbox" 
					ElementSet="Miscellaneous" 
					KeepCookie="Y" 
					SelectFrom="common.lov.CommLOV(Published)" 
					DefaultValue="0" 
					FieldName="other_perm" 
					Label="Other Group"  />
    </DataPanel>
    <ActionPanel>       
                	<Element Name="btn_finish" 
        			Class="Button" 
        			Text="Next Step" 
        			CssClass="button_gray_w">
            	<EventHandler Name="finish_onclick" 
            				EventLogMsg="" 
            				Event="onclick" 
            				Function="InsertRecord()" 
            				RedirectPage="form=account..form.AccountEditExtendForm&amp;fld:Id={@account..do.AccountDO:Field[Id].Value}"  
            				ContextMenu="Next Step"   />
        	</Element>
                <Element Name="btn_cancel" 
        			Class="Button" 
        			Text="Cancel" 
        			CssClass="button_gray_m">
            <EventHandler Name="cancel_onclick" 
            			Event="onclick" 
            			Function="SwitchForm()"  
            			ShortcutKey="Escape" 
            			ContextMenu="Cancel"/>
        </Element>      
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>