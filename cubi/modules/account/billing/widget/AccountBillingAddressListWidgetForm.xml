<EasyForm Name="AccountBillingAddressListWidgetForm" 
			Class="EasyForm"			  
			FormType="List" 			
			jsClass="Openbiz.TableForm" 
			BizDataObj="account.billing.do.AccountBillingDO" 
			PageSize="-1"  
			DefaultForm="Y" 
			TemplateEngine="Smarty" 
			TemplateFile="element_listform_lite.tpl.html" 
			MessageFile="AccountBillingAddress.ini" 
			Access="account.Access">	
    <DataPanel>           
            
		<Element Name="row_selections" 
        			Class="RowCheckbox"  
        			Label="" 
        			FieldName="Id"/>
        			
		<Element Name="fld_Id" 
        			Class="common.element.ColumnTitle" 
        			FieldName="Id" 
        			Label="ID" 
        			Sortable="Y" 
        			AllowURLParam="N" 
        			Link="javascript:;" />   
   
    

   
    
		<Element Name="fld_name" 
        			Class="ColumnText" 
        			FieldName="name" 
        			Label="Name" 
        			MaxLength="15"    
        			Link="{APP_INDEX}/account/account_billing_address_detail/{@:Elem[fld_Id].Value}"        			 
        			Sortable="Y"
        			 />        			
        	
   
    
		<Element Name="fld_phone" 
        			Class="ColumnText" 
        			FieldName="phone" 
        			Label="Phone" 
        			MaxLength="15"        			 
        			Sortable="Y"
        			 />        			
        	
   
    
		<Element Name="fld_mobile" 
        			Class="ColumnText" 
        			FieldName="mobile" 
        			Label="Mobile" 
        			MaxLength="15"        			 
        			Sortable="Y"
        			 />        			
        	
   
    
		<Element Name="fld_country" 
        			Class="ColumnText" 
        			FieldName="country" 
        			Label="Country" 
        			MaxLength="15"        			 
        			Sortable="Y"
        			 />        			
        	
   
    
    
    
    
    
    
    
    
    
  
    </DataPanel>
    <ActionPanel /> 
    <NavPanel />     
</EasyForm>