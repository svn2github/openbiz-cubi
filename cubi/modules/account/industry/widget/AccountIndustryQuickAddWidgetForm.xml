<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="AccountIndustryQuickAddWidgetForm" 
			Class="PickerForm" 
			FormType="New" 
			jsClass="Openbiz.Form" 
			Icon="{RESOURCE_URL}/account/images/icon_mod_account_industry_add.png"
			Title="Quick Add Account Industry Information" 
			Description="Create a new account industry information and edit its content later." 
			BizDataObj="account.industry.do.AccountIndustryPickDO" 
			TemplateEngine="Smarty" 
			TemplateFile="form_data_quick_add.tpl.html" 
			MessageFile="" 
			Access="account.Manage">
    <DataPanel>
  				
				
       								   	


       								   	


       								   	


       								   	


       								   	


       								   	


       								   	


       								   	


       								   	


       	<Element Name="fld_status" 
       				ElementSet="General" 
       				Class="InputText" 
       				FieldName="status" 
       				Label="Status" 
       				AllowURLParam="N"/>     
       								   	


       	<Element Name="fld_name" 
       				ElementSet="General" 
       				Class="InputText" 
       				FieldName="name" 
       				Label="Name" 
       				AllowURLParam="N"/>     
       								   	


       								   	

       	 	
		<Element Name="fld_description" 
					Class="Textarea" 
					ElementSet="General" 
					FieldName="description" 
					Label="Description"  />		

       
    </DataPanel>
    <ActionPanel>
        <Element Name="btn_save" 
        		Class="Button" 
        		Text="Save" 
        		CssClass="button_gray_m">
            <EventHandler Name="save_onclick" 
            			EventLogMsg="" 
            			Event="onclick" 
            			Function="insertToParent()"   
            			ShortcutKey="Ctrl+Enter" 
            			ContextMenu="Save" />
        </Element>
        <Element Name="btn_cancel" 
        		Class="Button" 
        		Text="Cancel" 
        		CssClass="button_gray_m">
            <EventHandler Name="onclick" 
            			Event="onclick" 
            			Function="js:Openbiz.Window.closeDialog()"/>
        </Element>
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>