<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="AccountIndustryEditLocationForm" 
			Class="EasyForm" 
			FormType="Edit" 
			jsClass="Openbiz.Form" 
			Icon="{RESOURCE_URL}/account/images/icon_mod_account_industry_picture.png"
			Title="Edit Account Industry Information Geographic Locations" 
			Description="This form could help you manage account_industry geographic locations." 
			BizDataObj="account.industry.do.AccountIndustryDO" 
			TemplateEngine="Smarty" 
			TemplateFile="form_detail_adv.tpl.html" 
			MessageFile="AccountIndustry.ini" 
			Access="account.Manage">		
    <DataPanel>
       	<Element Name="fld_Id" 
       				Class="LabelText" 
       				ElementSet="General"
       				Hidden="Y" 
       				FieldName="Id" 
       				Label="Id"  
       				AllowURLParam="Y"/>     
   				  		
					
       	<Element Name="fld_name" 
       				ElementSet="General" 
       				Class="LabelText" 
       				FieldName="name" 
       				Label="Name" 
       				AllowURLParam="N"/>
       	<Element Name="fld_description" 
       				ElementSet="General" 
       				Class="LabelText" 
       				FieldName="description" 
       				Label="Description" 
       				AllowURLParam="N"/>
       	<Element Name="fld_status" 
       				ElementSet="General" 
       				Class="LabelText" 
       				FieldName="status" 
       				Label="Status" 
       				AllowURLParam="N"/>
		<Element Name="fld_related_location" 
				Access="location.access"  
				ElementSet="Location" 
				Class="FormElement" 
				FormReference="location.widget.LocationListEditForm" 
				FieldName="" 
				Label="" 
				AllowURLParam="N" />
		
	</DataPanel>
    <ActionPanel>  
        <Element Name="btn_save" 
        		Class="Button" 
        		Text="Save" 
        		CssClass="button_gray_m">
            <EventHandler Name="save_onclick" 	
            			Event="onclick" 
            			EventLogMsg=""  
            			Function="SwitchForm(account.industry.form.AccountIndustryDetailForm,{@account.industry.do.AccountIndustryDO:Field[Id].Value})"  
            			ShortcutKey="Ctrl+Enter" 
            			ContextMenu="Save" />
        </Element>
        <Element Name="btn_cancel" 
        		Class="Button" 
        		Text="Cancel" 
        		CssClass="button_gray_m">
            <EventHandler Name="btn_cancel_onclick" 
            			Event="onclick" 
            			Function="SwitchForm()"  
            			ShortcutKey="Escape" 
            			ContextMenu="Cancel" />
        </Element> 
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>