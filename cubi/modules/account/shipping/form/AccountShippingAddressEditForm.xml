<EasyForm Name="AccountShippingAddressEditForm" Class="EasyForm" FormType="Edit" jsClass="Openbiz.Form" Icon="{RESOURCE_URL}/account/images/icon_mod_account_shipping_address_edit.png" Title="Edit Account Shipping Address" Description="Account Shipping Address" BizDataObj="account.shipping.do.AccountShippingDO" TemplateEngine="Smarty" TemplateFile="form_edit.tpl.html" MessageFile="AccountShippingAddress.ini" Access="account.Manage">
  <DataPanel>
    <Element Name="fld_account" ElementSet="General" Class="Hidden" FieldName="account_id" Label="Account"/>
