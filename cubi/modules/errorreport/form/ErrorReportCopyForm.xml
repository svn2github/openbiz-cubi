<EasyForm Name="ErrorReportCopyForm" 
			Class="EasyForm" 
			FormType="Copy" 
			jsClass="Openbiz.Form" 
			Icon="{RESOURCE_URL}/errorreport/images/icon_mod_error_report_copy.png"
			Title="Copy Error Report Center" 
			Description="Error Report Description" 
			BizDataObj="errorreport.do.ErrorReportDO" 
			TemplateEngine="Smarty" 
			TemplateFile="form_edit.tpl.html" 
			MessageFile="ErrorReport.ini" 
			Access="errorreport.Manage">
    <DataPanel>
    
		<Element Name="fld_type_id" 
				ElementSet="General" 
				Class="common.lib.TypeSelector" 
				FieldName="type_id" 
				Label="Type" 
				KeepCookie="Y" 
				SelectFrom="errorreport.do.ErrorReportTypeDO[name:Id:color]" 
				AllowURLParam="N" />
  	  
       								   	

		

       	<Element Name="fld_name" 
       				ElementSet="General"
       				Class="InputText" 
       				FieldName="name" 
       				Label="Name" 
       				AllowURLParam="N"
       				/>   
       								   	

		

       								   	

       	 	
		<Element Name="fld_description" 
					Class="Textarea" 
					ElementSet="General"
					FieldName="description" 
					Label="Description"  />		
		

       	<Element Name="fld_error_data" 
       				ElementSet="Error"
       				Class="Textarea" 
       				FieldName="error_data" 
       				Label=" Data" 
       				AllowURLParam="N"
       				/>   
       								   	

		

       	<Element Name="fld_php_version" 
       				ElementSet="Php"
       				Class="InputText" 
       				FieldName="php_version" 
       				Label=" Version" 
       				AllowURLParam="N"
       				/>   
       								   	

		

       	<Element Name="fld_php_extension" 
       				ElementSet="Php"
       				Class="Textarea" 
       				FieldName="php_extension" 
       				Label=" Extension" 
       				AllowURLParam="N"
       				/>   
       								   	

		

       	<Element Name="fld_server_info" 
       				ElementSet="Server"
       				Class="Textarea" 
       				FieldName="server_info" 
       				Label=" Info" 
       				AllowURLParam="N"
       				/>   
       								   	

		

       								   	

		

       								   	

		

       								   	

		

       								   	

		

       								   	

		<Element Name="fld_status" 
					Class="DropDownList" 
					ElementSet="General"
					FieldName="status" 
					SelectFrom="common.lov.CommLOV(Bool)" 
					Label="Status"  
					Sortable="Y" 
					AllowURLParam="N" 
					Translatable="N" 
					OnEventLog="N" 
					Link="javascript:;">				
		</Element>
		

       								   	

		

       								   	

		

       								   	

		

       								   	

		

  
		<Element Name="fld_published" 
					Class="Listbox" 
					ElementSet="Miscellaneous" 
					KeepCookie="Y" 
					SelectFrom="common.lov.CommLOV(Published)" 
					DefaultValue="1" 
					FieldName="group_perm" 
					Label="Group Share"  />
		<Element Name="fld_published_other" 
					Class="Listbox" 
					ElementSet="Miscellaneous" 
					KeepCookie="Y" 
					SelectFrom="common.lov.CommLOV(Published)" 
					DefaultValue="0" 
					FieldName="other_perm" 
					Label="Other Group"  />
    </DataPanel>
    <ActionPanel>       
        <Element Name="btn_save" 
        			Class="Button" 
        			Text="Save" 
        			CssClass="button_gray_m">
            <EventHandler Name="save_onclick" 
            			EventLogMsg="" 
            			Event="onclick" 
            			Function="InsertRecord()" 
            			RedirectPage="{APP_INDEX}/errorreport/error_report_detail/{@errorreport.do.ErrorReportDO:Field[Id].Value}"  
            			ShortcutKey="Ctrl+Enter" 
            			ContextMenu="Save" />
        </Element>
        <Element Name="btn_cancel" 
        			Class="Button" 
        			Text="Cancel" 
        			CssClass="button_gray_m">
            <EventHandler Name="cancel_onclick" 
            			Event="onclick" 
            			Function="SwitchForm()"  
            			ShortcutKey="Escape" 
            			ContextMenu="Cancel"/>
        </Element>      
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>