<EasyForm Name="ErrorReportQuickAddWidgetForm" 
			Class="PickerForm" 
			FormType="New" 
			jsClass="Openbiz.Form" 
			Icon="{RESOURCE_URL}/errorreport/images/icon_mod_error_report_add.png"
			Title="Quick Add Error Report Center" 
			Description="Create a new error report center and edit its content later." 
			BizDataObj="errorreport.do.ErrorReportPickDO" 
			TemplateEngine="Smarty" 
			TemplateFile="form_data_quick_add.tpl.html" 
			MessageFile="ErrorReport.ini" 
			Access="errorreport.Manage">
    <DataPanel>
    
		<Element Name="fld_type_id" 
				ElementSet="General" 
				Class="common.lib.TypeSelector" 
				FieldName="type_id" 
				Label="Type" 
				KeepCookie="Y" 
				SelectFrom="errorreport.do.ErrorReportTypeDO[name:Id:color]" 
				AllowURLParam="N" />
  				
				
       								   	


       	<Element Name="fld_name" 
       				ElementSet="General" 
       				Class="InputText" 
       				FieldName="name" 
       				Label="Name" 
       				AllowURLParam="N"/>     
       								   	


       								   	

       	 	
		<Element Name="fld_description" 
					Class="Textarea" 
					ElementSet="General" 
					FieldName="description" 
					Label="Description"  />		

       	<Element Name="fld_error_data" 
       				ElementSet="General" 
       				Class="InputText" 
       				FieldName="error_data" 
       				Label=" Data" 
       				AllowURLParam="N"/>     
       								   	


       	<Element Name="fld_php_version" 
       				ElementSet="General" 
       				Class="InputText" 
       				FieldName="php_version" 
       				Label=" Version" 
       				AllowURLParam="N"/>     
       								   	


       	<Element Name="fld_php_extension" 
       				ElementSet="General" 
       				Class="InputText" 
       				FieldName="php_extension" 
       				Label=" Extension" 
       				AllowURLParam="N"/>     
       								   	


       	<Element Name="fld_server_info" 
       				ElementSet="General" 
       				Class="InputText" 
       				FieldName="server_info" 
       				Label=" Info" 
       				AllowURLParam="N"/>     
       								   	


       								   	


       								   	


       								   	


       								   	


       	<Element Name="fld_status" 
       				ElementSet="General" 
       				Class="InputText" 
       				FieldName="status" 
       				Label="Status" 
       				AllowURLParam="N"/>     
       								   	


       								   	


       								   	


       								   	


       								   	


       
    </DataPanel>
    <ActionPanel>
        <Element Name="btn_save" 
        		Class="Button" 
        		Text="Save" 
        		CssClass="button_gray_m">
            <EventHandler Name="save_onclick" 
            			EventLogMsg="" 
            			Event="onclick" 
            			Function="insertToParent()"   
            			ShortcutKey="Ctrl+Enter" 
            			ContextMenu="Save" />
        </Element>
        <Element Name="btn_cancel" 
        		Class="Button" 
        		Text="Cancel" 
        		CssClass="button_gray_m">
            <EventHandler Name="onclick" 
            			Event="onclick" 
            			Function="js:Openbiz.Window.closeDialog()"/>
        </Element>
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>