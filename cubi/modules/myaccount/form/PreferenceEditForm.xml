<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="PreferenceEditForm" Class="PreferenceForm" FormType="Edit" Icon="icon_my_preference.gif" jsClass="jbForm"  SearchRule="[user_id]='{@profile:Id}'" Title="Edit My Perference" Description="You can custom your personal setting in below form." BizDataObj="myaccount.do.PreferenceDO" TemplateEngine="Smarty" TemplateFile="detail.tpl">
    <DataPanel>
        <Element Name="fld_Id" Hidden="Y" Class="Hidden" ElementSet="General" FieldName="Id" Label="User Id"/>
        <Element Name="fld_username"  Class="LabelText" ElementSet="General" FieldName="" Text="{@profile:username}" Label="Username"  CssClass=""/>        
		<Element Name="fld_language"  Class="LanguageSelector" ElementSet="General" FieldName="_language" Label="Language" CssClass="input_select_w" CssFocusClass="input_select_w_focus" CssHoverClass="input_select_w_hover"  />		
        <Element Name="fld_theme"  Class="ThemeSelector" ElementSet="General" label="Theme"  FieldName="_theme" Description="" CssClass="input_select_w" CssFocusClass="input_select_w_focus" CssHoverClass="input_select_w_hover"  />
		<Element Name="fld_continent"  Class="ContinentSelector" ElementSet="General" Description="" FieldName="_continent" Label="Continent" CssClass="input_select_w" CssFocusClass="input_select_w_focus" CssHoverClass="input_select_w_hover" >
			<EventHandler Name="fld_continent_onclick" Event="onchange" EventLogMsg=""  Function="UpdateForm()" />
		</Element>
		<Element Name="fld_timezone"  Class="TimezoneSelector" continent="{@:Elem[fld_continent].Value}" ElementSet="General" Description="" FieldName="_timezone" Label="Timezone" CssClass="input_select_w" CssFocusClass="input_select_w_focus" CssHoverClass="input_select_w_hover" />		
        
    </DataPanel>
    <ActionPanel>
        <Element Name="btn_save" Class="Button" Text="Save" CssClass="button_gray_w">
            <EventHandler Name="save_onclick" Event="onclick" EventLogMsg=""  Function="UpdateRecord()" RedirectPage="form=myaccount.form.PreferenceDetailForm" ShortcutKey="Ctrl+Enter" ContextMenu="Save" />
        </Element>
        <Element Name="btn_cancel" Class="Button" Text="Cancel" CssClass="button_gray_m">
            <EventHandler Name="btn_cancel_onclick" Event="onclick" Function="SwitchForm()"  ShortcutKey="Escape" ContextMenu="Cancel" />
        </Element>
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>