<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="PreferenceDetailForm" Class="PreferenceForm" FormType="" Icon="icon_my_preference.gif" jsClass="jbForm" SearchRule="[user_id]='{@profile:Id}'" Title="My Preference" Description="You can custom your personal setting in below form." BizDataObj="myaccount.do.PreferenceDO" TemplateEngine="Smarty" TemplateFile="detail.tpl">
    <DataPanel>
        <Element Name="fld_Id" Hidden="Y" Class="Hidden" ElementSet="General" FieldName="Id" Label="User Id"/>
        <Element Name="fld_username"  Class="LabelText" ElementSet="General" FieldName="" Text="{@profile:username}" Label="Username"  CssClass=""/>        
		<Element Name="fld_language"  Class="LabelText" ElementSet="General" FieldName="_language" Label="Language"   />		
        <Element Name="fld_theme"  Class="LabelText" ElementSet="General" label="Theme"  FieldName="_theme" Description=""   />
		<Element Name="fld_continent"  Class="LabelText" ElementSet="General" Description="" FieldName="_continent" Label="Continent"  />
		<Element Name="fld_timezone"  Class="LabelText" ElementSet="General" Description="" FieldName="_timezone" Label="Timezone"  />		
        
    </DataPanel>
    <ActionPanel>
        <Element Name="btn_edit" Class="Button" Text="Edit" CssClass="button_gray_w" Description="edit record (Ctrl+E)">
			<EventHandler Name="btn_new_onclick" Event="onclick" Function="SwitchForm(myaccount.form.PreferenceEditForm)"  ShortcutKey="Ctrl+E" ContextMenu="Edit" />
        </Element>
        <Element Name="btn_back" Class="LabelText" Text="Back" Link="{@home:url}/myaccount/my_preference" CssClass="button_gray_m"/>		
         
    </ActionPanel> 
    <NavPanel>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>